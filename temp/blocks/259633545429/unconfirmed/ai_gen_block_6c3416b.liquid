{% doc %}
  @prompt
    Generate a latest styled responsive footer section using tailwind css and three.js having Home
    About Us
    Services
    Clients
    Contact Us in the right and logo image in the left, on mobile logo squared on left menus in 2 columns in right and compyright below both and on desktop logo left and in same height menus in two columns in right and copyright below bothe of them after a spacer

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    border-top: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};}

  .ai-footer-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-footer-main-content-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 40px;margin-bottom: {{ block.settings.spacer_height }}px;
  }

  .ai-footer-logo-section-{{ ai_gen_id }} {
    flex-shrink: 0;
  }

  .ai-footer-logo-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
    display: block;
  }

  .ai-footer-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    height: {{ block.settings.logo_width }}px;
    background-color: {{ block.settings.text_color }};
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-footer-logo-placeholder-{{ ai_gen_id }} svg {
    width: 80%;
    height: 80%;
    opacity: 0.7;
  }

  .ai-footer-nav-section-{{ ai_gen_id }} {
    flex-grow: 1;display: flex;
    justify-content: flex-end;
  }

  .ai-footer-nav-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.nav_spacing }}px {{ block.settings.nav_column_gap }}px;
    list-style: none;
    margin: 0;
    padding: 0;max-width: 400px;
  }

  .ai-footer-nav-item-{{ ai_gen_id }} {
    margin: 0;
  }

  .ai-footer-nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    text-decoration: none;
    font-size: {{ block.settings.nav_font_size }}px;
    font-weight: {{ block.settings.nav_font_weight }};
    padding: 8px 0;
    display: block;
    transition: color 0.3s ease, transform 0.2s ease;
    position: relative;
  }

  .ai-footer-nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    transform: translateY(-2px);
  }

  .ai-footer-nav-link-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: {{ block.settings.link_hover_color }};
    transition: width 0.3s ease;
  }

  .ai-footer-nav-link-{{ ai_gen_id }}:hover::after {
    width: 100%;
  }

  .ai-footer-copyright-{{ ai_gen_id }} {
    text-align: center;
    font-size: {{ block.settings.copyright_font_size }}px;
    opacity: 0.8;
    border-top: 1px solid {{ block.settings.border_color }};
    padding-top: 20px;
  }

  @media screen and (max-width: 768px) {
    .ai-footer-main-content-{{ ai_gen_id }} {
      flex-direction: row;
      align-items: flex-start;
      gap: 20px;
      margin-bottom: {{ block.settings.spacer_height | times: 0.7 }}px;
    }

    .ai-footer-logo-section-{{ ai_gen_id }} {
      flex-shrink: 0;
    }

    .ai-footer-logo-{{ ai_gen_id }},
    .ai-footer-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width | times: 0.7 }}px;
      height: {{ block.settings.logo_width | times: 0.7 }}px;
    }

    .ai-footer-nav-section-{{ ai_gen_id }} {
      flex-grow: 1;
      justify-content: flex-start;
    }

    .ai-footer-nav-{{ ai_gen_id }} {
      max-width: none;
      width: 100%;gap: {{ block.settings.nav_spacing | times: 0.7 }}px {{ block.settings.nav_column_gap | times: 0.8 }}px;
    }

    .ai-footer-nav-link-{{ ai_gen_id }} {
      font-size: {{ block.settings.nav_font_size | minus: 1 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-footer-main-content-{{ ai_gen_id }} {
      gap: 15px;
    }

    .ai-footer-logo-{{ ai_gen_id }},
    .ai-footer-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width | times: 0.6 }}px;
      height: {{ block.settings.logo_width | times: 0.6 }}px;
    }

    .ai-footer-nav-{{ ai_gen_id }} {
      gap: {{ block.settings.nav_spacing | times: 0.5 }}px {{ block.settings.nav_column_gap | times: 0.6 }}px;
    }

    .ai-footer-nav-link-{{ ai_gen_id }} {
      font-size: {{ block.settings.nav_font_size | minus: 2 }}px;padding: 6px 0;
    }

    .ai-footer-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 15px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }
  }
{% endstyle %}

<footer class="ai-footer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-footer-container-{{ ai_gen_id }}">
    <div class="ai-footer-main-content-{{ ai_gen_id }}">
      <div class="ai-footer-logo-section-{{ ai_gen_id }}">
        {% if block.settings.logo %}
          <img
            src="{{ block.settings.logo | image_url: width: 400}}"
            alt="{{ shop.name }}"
            class="ai-footer-logo-{{ ai_gen_id }}"width="{{ block.settings.logo_width }}"
            height="auto"
            loading="lazy"
          >
        {% else %}
          <div class="ai-footer-logo-placeholder-{{ ai_gen_id }}">
            {{'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>

      <div class="ai-footer-nav-section-{{ ai_gen_id }}">
        <nav class="ai-footer-navigation-{{ ai_gen_id }}">
          <ul class="ai-footer-nav-{{ ai_gen_id }}">
            {% if block.settings.home_link %}
              <li class="ai-footer-nav-item-{{ ai_gen_id }}">
                <a href="{{ block.settings.home_link }}" class="ai-footer-nav-link-{{ ai_gen_id }}">
                  {{ block.settings.home_text }}
                </a>
              </li>
            {% endif %}

            {% if block.settings.about_link %}
              <li class="ai-footer-nav-item-{{ ai_gen_id }}">
                <a href="{{ block.settings.about_link }}" class="ai-footer-nav-link-{{ ai_gen_id }}">
                  {{ block.settings.about_text }}
                </a>
              </li>
            {% endif %}

            {% if block.settings.services_link %}
              <li class="ai-footer-nav-item-{{ ai_gen_id }}">
                <a href="{{ block.settings.services_link }}" class="ai-footer-nav-link-{{ ai_gen_id }}">
                  {{ block.settings.services_text }}
                </a>
              </li>
            {% endif %}

            {% if block.settings.clients_link %}
              <li class="ai-footer-nav-item-{{ ai_gen_id }}">
                <a href="{{ block.settings.clients_link }}" class="ai-footer-nav-link-{{ ai_gen_id }}">
                  {{ block.settings.clients_text }}
                </a>
              </li>
            {% endif %}

            {% if block.settings.contact_link %}
              <li class="ai-footer-nav-item-{{ ai_gen_id }}">
                <a href="{{ block.settings.contact_link }}" class="ai-footer-nav-link-{{ ai_gen_id }}">
                  {{ block.settings.contact_text }}
                </a>
              </li>
            {% endif %}
          </ul>
        </nav>
      </div>
    </div>

    {% if block.settings.show_copyright %}
      <div class="ai-footer-copyright-{{ ai_gen_id }}">
        {{ block.settings.copyright_text }}
      </div>
    {% endif %}
  </div>
</footer>

