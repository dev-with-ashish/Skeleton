{% doc %}
  @prompt
    a block to show a service having 3 features with description and 9 products. each product have a featured image and title generate a best styled section according to you

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-service-showcase-{{ ai_gen_id }} {
    padding: 60px 20px;
    background-color: {{ block.settings.background_color }};
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-service-showcase__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 60px;
  }

  .ai-service-showcase__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
    font-weight: 700;
  }

  .ai-service-showcase__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .ai-service-showcase__features-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
    margin-bottom: 80px;
  }

  .ai-service-showcase__feature-{{ ai_gen_id }} {
    text-align: center;
    padding: 30px 20px;
    background-color: {{ block.settings.feature_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-service-showcase__feature-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  .ai-service-showcase__feature-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.accent_color }};
    border-radius: 50%;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: calc({{ block.settings.icon_size }}px * 0.5);
  }

  .ai-service-showcase__feature-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-service-showcase__feature-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_description_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    line-height: 1.5;
  }

  .ai-service-showcase__products-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-service-showcase__products-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.products_title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-service-showcase__products-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.products_subtitle_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
  }

  .ai-service-showcase__products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
  }

  .ai-service-showcase__product-{{ ai_gen_id }} {
    background-color: {{ block.settings.product_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    color: inherit;
  }

  .ai-service-showcase__product-{{ ai_gen_id }}:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-service-showcase__product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 250px;
    overflow: hidden;
    background-color: #f8f8f8;
  }

  .ai-service-showcase__product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-service-showcase__product-{{ ai_gen_id }}:hover .ai-service-showcase__product-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-service-showcase__product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-service-showcase__product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-service-showcase__product-info-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-service-showcase__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    font-weight: 500;
    line-height: 1.4;
  }

  @media screen and (max-width: 768px) {
    .ai-service-showcase-{{ ai_gen_id }} {
      padding: 40px 16px;
    }

    .ai-service-showcase__features-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 24px;
      margin-bottom: 60px;
    }

    .ai-service-showcase__products-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }

    .ai-service-showcase__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-service-showcase__products-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.products_title_size }}px * 0.9);
    }
  }

  @media screen and (max-width: 480px) {
    .ai-service-showcase__products-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-service-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-service-showcase__header-{{ ai_gen_id }}">
    {% if block.settings.service_title != blank %}
      <h2 class="ai-service-showcase__title-{{ ai_gen_id }}">{{ block.settings.service_title }}</h2>
    {% endif %}
    {% if block.settings.service_description != blank %}
      <div class="ai-service-showcase__description-{{ ai_gen_id }}">{{ block.settings.service_description }}</div>
    {% endif %}
  </div>

  <div class="ai-service-showcase__features-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign feature_title_key = 'feature_' | append: i | append: '_title'
        assign feature_description_key = 'feature_' | append: i | append: '_description'
        assign feature_title = block.settings[feature_title_key]
        assign feature_description = block.settings[feature_description_key]
      %}
      
      {% if feature_title != blank %}
        <div class="ai-service-showcase__feature-{{ ai_gen_id }}">
          <div class="ai-service-showcase__feature-icon-{{ ai_gen_id }}">
            {% case i %}
              {% when 1 %}
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              {% when 2 %}
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              {% when 3 %}
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
            {% endcase %}
          </div>
          <h3 class="ai-service-showcase__feature-title-{{ ai_gen_id }}">{{ feature_title }}</h3>
          {% if feature_description != blank %}
            <div class="ai-service-showcase__feature-description-{{ ai_gen_id }}">{{ feature_description }}</div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="ai-service-showcase__products-header-{{ ai_gen_id }}">
    {% if block.settings.products_section_title != blank %}
      <h3 class="ai-service-showcase__products-title-{{ ai_gen_id }}">{{ block.settings.products_section_title }}</h3>
    {% endif %}
    {% if block.settings.products_section_subtitle != blank %}
      <div class="ai-service-showcase__products-subtitle-{{ ai_gen_id }}">{{ block.settings.products_section_subtitle }}</div>
    {% endif %}
  </div>

  <div class="ai-service-showcase__products-grid-{{ ai_gen_id }}">
    {% for i in (1..9) %}
      {% liquid
        assign product_key = 'product_' | append: i
        assign product = block.settings[product_key]
      %}
      
      {% if product != blank %}
        <a href="{{ product.url }}" class="ai-service-showcase__product-{{ ai_gen_id }}">
          <div class="ai-service-showcase__product-image-wrapper-{{ ai_gen_id }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 400 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-service-showcase__product-image-{{ ai_gen_id }}"
                loading="lazy"
                width="400"
                height="250"
              >
            {% else %}
              <div class="ai-service-showcase__product-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          <div class="ai-service-showcase__product-info-{{ ai_gen_id }}">
            <h4 class="ai-service-showcase__product-title-{{ ai_gen_id }}">{{ product.title }}</h4>
          </div>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</div>

