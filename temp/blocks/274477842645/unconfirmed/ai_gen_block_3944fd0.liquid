{% doc %}
  @prompt
    full width and placeholder with height adjustment, make this block 100% width no left and right padding margin, always full image should be shown bothe left and right edge of the should be visible
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-full-width-placeholder-{{ ai_gen_id }} {
    width: 100vw;
    margin-left: calc(50% - 50vw);
    margin-right: calc(50% - 50vw);
    padding: 0;
  }

  .ai-full-width-placeholder__container-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.height_desktop }}px;
    position: relative;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    margin: 0;
    padding: 0;
  }

  .ai-full-width-placeholder__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
  }

  .ai-full-width-placeholder__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    display: block;
  }

  .ai-full-width-placeholder__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    position: relative;
  }

  .ai-full-width-placeholder__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-full-width-placeholder__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 24px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
  }

  @media screen and (max-width: 749px) {
    .ai-full-width-placeholder__container-{{ ai_gen_id }} {
      height: {{ block.settings.height_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-full-width-placeholder-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-full-width-placeholder__container-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <div class="ai-full-width-placeholder__image-wrapper-{{ ai_gen_id }}">
        <img
          src="{{ block.settings.image | image_url: width: 2400 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-full-width-placeholder__image-{{ ai_gen_id }}"
        >
      </div>
    {% else %}
      <div class="ai-full-width-placeholder__placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-full-width-placeholder__empty-state-{{ ai_gen_id }}">
          Add an image to get started
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Full width image",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Height"
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 200,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Desktop height",
      "default": 500
    },
    {
      "type": "range",
      "id": "height_mobile",
      "min": 150,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Mobile height",
      "default": 300
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f4f4f4"
    }
  ],
  "presets": [
    {
      "name": "Full width image"
    }
  ]
}
{% endschema %}
