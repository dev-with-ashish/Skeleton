    color: {{ block.settings.title_color }};
    margin: 0 0 16px;font-weight: 700;
  }

  .ai-services-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-services-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 60px;
    align-items: stretch;
    height: {{ block.settings.content_height }}px;
  }

  .ai-services-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.slider_background }};
    border-radius: {{ block.settings.slider_border_radius }}px;
    padding: 30px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    overflow: hidden;
  }

  .ai-services-slider-container-{{ ai_gen_id }} {
    height: 100%;
    overflow: hidden;
    position: relative;
  }

  .ai-services-slides-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.4s ease;
    height: 100%;
  }

  .ai-services-slide-{{ ai_gen_id }} {
    min-width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 12px;
  }

  .ai-services-item-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
  }

  .ai-services-button-{{ ai_gen_id }} {
    width: 100%;
    text-align: left;
    padding: {{ block.settings.item_padding }}px 24px;
    background-color: {{ block.settings.item_background }};
    color: {{ block.settings.item_text_color }};
    border: 1px solid {{ block.settings.item_border_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    font-size: {{ block.settings.item_text_size }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    min-height: 60px;
  }

  .ai-services-button-{{ ai_gen_id }}:hover,
  .ai-services-button-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.item_hover_background }};
    color: {{ block.settings.item_hover_text_color }};
    border-color: {{ block.settings.item_hover_border_color }};
    transform: translateX(8px);
  }

  .ai-services-button-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 4px;
    background-color: {{ block.settings.accent_color }};
    transform: scaleY(0);
    transition: transform 0.3s ease;
  }

  .ai-services-button-{{ ai_gen_id }}:hover::before,
  .ai-services-button-{{ ai_gen_id }}.active::before {
    transform: scaleY(1);
  }

  .ai-services-navigation-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    right: 20px;
    display: flex;
    gap: 8px;
  }

  .ai-services-nav-button-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border: none;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_bg }};
    color: {{ block.settings.nav_button_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-services-nav-button-{{ ai_gen_id }}:hover:not(:disabled) {
    background-color: {{ block.settings.nav_button_hover_bg }};
    color: {{ block.settings.nav_button_hover_color }};
    transform: scale(1.1);
  }

  .ai-services-nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .ai-services-nav-button-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-services-slide-indicator-{{ ai_gen_id }} {
    position: absolute;
    top: 20px;
    right: 20px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
  }

  .ai-services-image-container-{{ ai_gen_id }} {
    height: {{ block.settings.content_height }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.image_placeholder_bg }};
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    position: relative;
  }

  .ai-services-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.4s ease;
    position: absolute;
    top: 0;
    left: 0;
  }

  .ai-services-image-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-services-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
