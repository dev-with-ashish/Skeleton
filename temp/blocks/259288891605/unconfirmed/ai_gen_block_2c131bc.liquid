<services-section-{{ ai_gen_id }}
  class="ai-services-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-services-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-services-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-services-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-services-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-services-content-{{ ai_gen_id }}">
      <div class="ai-services-slider-wrapper-{{ ai_gen_id }}">
        <div class="ai-services-slider-container-{{ ai_gen_id }}">
          <div class="ai-services-slides-{{ ai_gen_id }}">
            {% assign services = "Events,Promotions & Activations,Films / 3D Animatics,Expos & Exhibitions,Retail & Display,Dealer & Customer Meets,Press Conferences,Product & Services Launches,Design & Communication,Thematic dinners & Parties,Government Services,MICE & destination management,International shows,Concerts & Bollywood shows,Artist & Data Management,Wedding & Special Occasions,Online & Digital Media" | split: ',' %}
            
            {% assign total_slides = services.size | divided_by: 5.0 | ceil %}
            
            {% for slide_num in (1..total_slides) %}
              <div class="ai-services-slide-{{ ai_gen_id }}" data-slide="{{ slide_num }}">
                {% assign start_index = slide_num | minus: 1 | times: 5 %}
                {% assign end_index = start_index | plus: 4 %}
                {% for i in (start_index..end_index) %}
                  {% if services[i] %}
                    {% assign service_index = i | plus: 1 %}<div class="ai-services-item-{{ ai_gen_id }}">
                      <button
                        class="ai-services-button-{{ ai_gen_id }}"
                        data-service-index="{{ service_index }}"
                        type="button"
                      >
                        {{ services[i] | strip }}
                      </button>
                    </div>
                  {% else %}
                    <div class="ai-services-item-{{ ai_gen_id }}"></div>
                  {% endif %}
                {% endfor %}
              </div>
            {% endfor %}
          </div>
        </div>

        <div class="ai-services-slide-indicator-{{ ai_gen_id }}">
          <span class="current-slide">1</span> / <span class="total-slides">{{ total_slides }}</span>
        </div>

        <div class="ai-services-navigation-{{ ai_gen_id }}">
          <button class="ai-services-nav-button-{{ ai_gen_id }} prev-button" type="button" aria-label="Previous slide">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15,18 9,12 15,6"></polyline>
            </svg>
          </button>
          <button class="ai-services-nav-button-{{ ai_gen_id }} next-button" type="button" aria-label="Next slide">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9,18 15,12 9,6"></polyline>
            </svg>
          </button>
        </div>
      </div>

      <div class="ai-services-image-container-{{ ai_gen_id }}">
        {% for i in (1..17) %}
          {% assign image_setting = 'service_image_' | append: i %}
          {% if block.settings[image_setting] %}
            <img
              src="{{ block.settings[image_setting] | image_url: width: 400 }}"
              alt="Service {{ i }}"
              class="ai-services-image-{{ ai_gen_id }}"
              data-service-index="{{ i }}"
              loading="lazy"
              width="400"
              height="400"
            >
          {% endif %}
        {% endfor %}
        <div class="ai-services-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <span>Hover over a service to see preview</span>
        </div>
      </div>
    </div>
  </div>
</services-section-{{ ai_gen_id }}>

<script>
  (function() {
    class ServicesSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 0;
        this.buttons = [];
        this.images = [];
        this.placeholder = null;
        this.activeIndex = null;
        this.slidesContainer = null;
        this.prevButton = null;
        this.nextButton = null;
        this.slideIndicator = null;}

      connectedCallback() {
        this.slidesContainer = this.querySelector('.ai-services-slides-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.prev-button');
        this.nextButton = this.querySelector('.next-button');
        this.slideIndicator = this.querySelector('.ai-services-slide-indicator-{{ ai_gen_id }}');
        this.buttons = this.querySelectorAll('.ai-services-button-{{ ai_gen_id }}');
        this.images = this.querySelectorAll('.ai-services-image-{{ ai_gen_id }}');
        this.placeholder = this.querySelector('.ai-services-placeholder-{{ ai_gen_id }}');
        
        this.totalSlides = this.querySelectorAll('.ai-services-slide-{{ ai_gen_id }}').length;
        
        this.setupEventListeners();
        this.updateNavigation();
        this.showPlaceholder();
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.previousSlide());
        this.nextButton.addEventListener('click', () => this.nextSlide());

        this.buttons.forEach((button) => {
          button.addEventListener('mouseenter', () => this.handleServiceHover(button));
          button.addEventListener('click', () => this.handleServiceClick(button));
          button.addEventListener('touchstart', () => this.handleServiceClick(button));
        });

        this.addEventListener('mouseleave', () => {
          if (this.activeIndex === null) {
            this.showPlaceholder();
            this.clearActiveStates();
          }
        });
      }

      previousSlide() {
        if (this.currentSlide > 0) {
          this.currentSlide--;
          this.updateSlider();
          this.updateNavigation();
        }
      }

      nextSlide() {
        if (this.currentSlide < this.totalSlides - 1) {
          this.currentSlide++;
          this.updateSlider();
          this.updateNavigation();
        }
      }

      updateSlider() {
        const translateX = -this.currentSlide * 100;
        this.slidesContainer.style.transform = `translateX(${translateX}%)`;
        
        this.slideIndicator.querySelector('.current-slide').textContent = this.currentSlide + 1;
        
        this.clearActiveStates();
        this.showPlaceholder();
        this.activeIndex = null;
      }

      updateNavigation() {
        this.prevButton.disabled = this.currentSlide === 0;
        this.nextButton.disabled = this.currentSlide === this.totalSlides - 1;
      }

      handleServiceHover(button) {
        const serviceIndex = button.dataset.serviceIndex;
        this.showServiceImage(serviceIndex);
        this.setActiveButton(button);
      }

      handleServiceClick(button) {
        const serviceIndex = button.dataset.serviceIndex;
        
        if (this.activeIndex === serviceIndex) {
          this.activeIndex = null;
          this.showPlaceholder();
          this.clearActiveStates();
        } else {
          this.activeIndex = serviceIndex;
          this.showServiceImage(serviceIndex);
          this.setActiveButton(button);
        }
      }

      showServiceImage(serviceIndex) {
        this.hideAllImages();
        this.placeholder.style.display = 'none';
        
        const targetImage = this.querySelector(`[data-service-index="${serviceIndex}"].ai-services-image-{{ ai_gen_id }}`);
        if (targetImage) {
          targetImage.classList.add('active');
        } else {
          this.showPlaceholder();
        }
      }

      showPlaceholder() {
        this.hideAllImages();
        this.placeholder.style.display = 'flex';
      }

      hideAllImages() {
        this.images.forEach(img => img.classList.remove('active'));
      }

      setActiveButton(activeButton) {
        this.buttons.forEach(btn => btn.classList.remove('active'));
        activeButton.classList.add('active');
      }

      clearActiveStates() {
        this.buttons.forEach(btn => btn.classList.remove('active'));
      }
    }

    customElements.define('services-section-{{ ai_gen_id }}', ServicesSection{{ ai_gen_id }});
  })();
</script>

