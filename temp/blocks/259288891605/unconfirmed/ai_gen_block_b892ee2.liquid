{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-services-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-services-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-services-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 60px;
  }

  .ai-services-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    font-weight: 700;
  }

  .ai-services-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-services-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 60px;
    align-items: flex-start;
  }

  .ai-services-list-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-services-item-{{ ai_gen_id }} {
    margin-bottom: 8px;
  }

  .ai-services-button-{{ ai_gen_id }} {
    width: 100%;
    text-align: left;
    padding: {{ block.settings.item_padding }}px 24px;
    background-color: {{ block.settings.item_background }};
    color: {{ block.settings.item_text_color }};
    border: 1px solid {{ block.settings.item_border_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    font-size: {{ block.settings.item_text_size }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .ai-services-button-{{ ai_gen_id }}:hover,
  .ai-services-button-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.item_hover_background }};
    color: {{ block.settings.item_hover_text_color }};
    border-color: {{ block.settings.item_hover_border_color }};
    transform: translateX(8px);
  }

  .ai-services-button-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 4px;
    background-color: {{ block.settings.accent_color }};
    transform: scaleY(0);
    transition: transform 0.3s ease;
  }

  .ai-services-button-{{ ai_gen_id }}:hover::before,
  .ai-services-button-{{ ai_gen_id }}.active::before {
    transform: scaleY(1);
  }

  .ai-services-image-container-{{ ai_gen_id }} {
    position: sticky;
    top: 40px;
    height: 400px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.image_placeholder_bg }};
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .ai-services-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .ai-services-image-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-services-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.image_placeholder_bg }};
    color: {{ block.settings.image_placeholder_text }};
    font-size: 18px;
    text-align: center;
    padding: 40px;
  }

  .ai-services-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  @media screen and (max-width: 768px) {
    .ai-services-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-services-image-container-{{ ai_gen_id }} {
      position: relative;
      top: auto;
      height: 300px;
      order: -1;
    }

    .ai-services-button-{{ ai_gen_id }}:hover,
    .ai-services-button-{{ ai_gen_id }}.active {
      transform: none;
    }

    .ai-services-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-services-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<services-section-{{ ai_gen_id }}
  class="ai-services-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-services-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-services-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-services-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-services-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-services-content-{{ ai_gen_id }}">
      <ul class="ai-services-list-{{ ai_gen_id }}">
        {% assign services = "Events,Promotions & Activations,Films / 3D Animatics,Expos & Exhibitions,Retail & Display,Dealer & Customer Meets,Press Conferences,Product & Services Launches,Design & Communication,Thematic dinners & Parties,Government Services,MICE & destination management,International shows,Concerts & Bollywood shows,Artist & Data Management,Wedding & Special Occasions,Online & Digital Media" | split: ',' %}
        
        {% for service in services %}
          {% assign service_index = forloop.index %}
          {% assign image_setting = 'service_image_' | append: service_index %}
          
          <li class="ai-services-item-{{ ai_gen_id }}">
            <button
              class="ai-services-button-{{ ai_gen_id }}"
              data-service-index="{{ service_index }}"
              type="button"
            >
              {{ service | strip }}
            </button>
          </li>
        {% endfor %}
      </ul>

      <div class="ai-services-image-container-{{ ai_gen_id }}">
        {% for i in (1..17) %}
          {% assign image_setting = 'service_image_' | append: i %}
          {% if block.settings[image_setting] %}
            <img
              src="{{ block.settings[image_setting] | image_url: width: 400 }}"
              alt="Service {{ i }}"
              class="ai-services-image-{{ ai_gen_id }}"
              data-service-index="{{ i }}"
              loading="lazy"
              width="400"
              height="400"
            >
          {% endif %}
        {% endfor %}
        <div class="ai-services-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      </div>
    </div>
  </div>
</services-section-{{ ai_gen_id }}>

<script>
  (function() {
    class ServicesSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.buttons = [];
        this.images = [];
        this.placeholder = null;
        this.activeIndex = null;
      }

      connectedCallback() {
        this.buttons = this.querySelectorAll('.ai-services-button-{{ ai_gen_id }}');
        this.images = this.querySelectorAll('.ai-services-image-{{ ai_gen_id }}');
        this.placeholder = this.querySelector('.ai-services-placeholder-{{ ai_gen_id }}');
        
        this.setupEventListeners();
        this.showPlaceholder();
      }

      setupEventListeners() {
        this.buttons.forEach((button) => {
          button.addEventListener('mouseenter', () => this.handleServiceHover(button));
          button.addEventListener('click', () => this.handleServiceClick(button));
          button.addEventListener('touchstart', () => this.handleServiceClick(button));
        });

        this.addEventListener('mouseleave', () => {
          if (this.activeIndex === null) {
            this.showPlaceholder();
            this.clearActiveStates();
          }
        });
      }

      handleServiceHover(button) {
        const serviceIndex = button.dataset.serviceIndex;
        this.showServiceImage(serviceIndex);
        this.setActiveButton(button);
      }

      handleServiceClick(button) {
        const serviceIndex = button.dataset.serviceIndex;
        
        if (this.activeIndex === serviceIndex) {
          this.activeIndex = null;
          this.showPlaceholder();
          this.clearActiveStates();
        } else {
          this.activeIndex = serviceIndex;
          this.showServiceImage(serviceIndex);
          this.setActiveButton(button);
        }
      }

      showServiceImage(serviceIndex) {
        this.hideAllImages();
        this.placeholder.style.display = 'none';
        
        const targetImage = this.querySelector(`[data-service-index="${serviceIndex}"].ai-services-image-{{ ai_gen_id }}`);
        if (targetImage) {
          targetImage.classList.add('active');
        } else {
          this.showPlaceholder();
        }
      }

      showPlaceholder() {
        this.hideAllImages();
        this.placeholder.style.display = 'flex';
      }

      hideAllImages() {
        this.images.forEach(img => img.classList.remove('active'));
      }

      setActiveButton(activeButton) {
        this.buttons.forEach(btn => btn.classList.remove('active'));
        activeButton.classList.add('active');
      }

      clearActiveStates() {
        this.buttons.forEach(btn => btn.classList.remove('active'));
      }
    }

    customElements.define('services-section-{{ ai_gen_id }}', ServicesSection{{ ai_gen_id }});
  })();
</script>

