{% doc %}
  @prompt
    a header with a 45 degree angeled strip lines sketched over a cream colored bg strip covering 60% of the header
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.header_height }}px;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-header-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: {{ block.settings.text_alignment }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-header-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    font-weight: 700;
    line-height: 1.2;
  }

  .ai-header-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-header-strip-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: {{ block.settings.strip_height }}%;
    background-color: {{ block.settings.strip_color }};
    z-index: 1;
  }

  .ai-header-lines-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .ai-header-line-{{ ai_gen_id }} {
    position: absolute;
    height: {{ block.settings.line_thickness }}px;
    background-color: {{ block.settings.line_color }};
    transform: rotate({{ block.settings.line_angle }}deg);
    transform-origin: center;
    opacity: {{ block.settings.line_opacity }};
  }

  @media screen and (max-width: 749px) {
    .ai-header-{{ ai_gen_id }} {
      height: {{ block.settings.header_height | times: 0.7 }}px;
    }

    .ai-header-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }

    .ai-header-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.8 }}px;
    }

    .ai-header-content-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-header-strip-{{ ai_gen_id }}">
    <svg class="ai-header-lines-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg">
      {% for i in (1..20) %}
        {% assign line_position = i | times: 5 %}
        <line
          class="ai-header-line-{{ ai_gen_id }}"
          x1="{{ line_position }}%"
          y1="-50%"
          x2="{{ line_position }}%"
          y2="150%"
          stroke="{{ block.settings.line_color }}"
          stroke-width="{{ block.settings.line_thickness }}"
          opacity="{{ block.settings.line_opacity }}"
          transform="rotate({{ block.settings.line_angle }} 0 0)"
        />
      {% endfor %}
    </svg>
  </div>

  <div class="ai-header-content-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h1 class="ai-header-title-{{ ai_gen_id }}">{{ block.settings.title }}</h1>
    {% endif %}
    {% if block.settings.subtitle != blank %}
      <p class="ai-header-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
    {% endif %}
  </div>
</div>

