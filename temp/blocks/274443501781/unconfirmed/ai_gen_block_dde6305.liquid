{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    border-bottom: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    position: sticky;
    top: 0;
    z-index: 1000;
    width: 100%;
  }

  .ai-header-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.vertical_padding }}px {{ block.settings.horizontal_padding }}px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .ai-header-logo-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
  }

  .ai-header-logo-link-{{ ai_gen_id }} {
    display: block;
    line-height: 0;
  }

  .ai-header-logo-image-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
    display: block;
  }

  .ai-header-logo-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.logo_text_size }}px;
    font-weight: {{ block.settings.logo_text_weight }};
    color: {{ block.settings.logo_text_color }};
    text-decoration: none;
    letter-spacing: {{ block.settings.logo_letter_spacing }}px;
  }

  .ai-header-nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.menu_spacing }}px;
  }

  .ai-header-menu-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.menu_spacing }}px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .ai-header-menu-item-{{ ai_gen_id }} {
    margin: 0;
  }

  .ai-header-menu-link-{{ ai_gen_id }} {
    color: {{ block.settings.menu_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.menu_text_size }}px;
    font-weight: {{ block.settings.menu_text_weight }};
    transition: color 0.2s ease;
    display: block;
    padding: 8px 0;
  }

  .ai-header-menu-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.menu_hover_color }};
  }

  .ai-header-icons-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_spacing }}px;
  }

  .ai-header-icon-link-{{ ai_gen_id }} {
    color: {{ block.settings.icon_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ai-header-icon-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.icon_hover_color }};
  }

  .ai-header-icon-link-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
  }

  .ai-header-mobile-toggle-{{ ai_gen_id }} {
    display: none;
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    color: {{ block.settings.icon_color }};
  }

  .ai-header-mobile-toggle-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  @media screen and (max-width: 990px) {
    .ai-header-menu-{{ ai_gen_id }} {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background-color: {{ block.settings.background_color }};
      flex-direction: column;
      gap: 0;
      border-bottom: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
      padding: 20px {{ block.settings.horizontal_padding }}px;
    }

    .ai-header-menu-{{ ai_gen_id }}.active {
      display: flex;
    }

    .ai-header-mobile-toggle-{{ ai_gen_id }} {
      display: block;
    }

    .ai-header-container-{{ ai_gen_id }} {
      position: relative;
    }

    .ai-header-menu-item-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-header-menu-link-{{ ai_gen_id }} {
      padding: 12px 0;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-header-container-{{ ai_gen_id }} {
      padding: {{ block.settings.vertical_padding | times: 0.75 }}px {{ block.settings.horizontal_padding | times: 0.75 }}px;
    }

    .ai-header-logo-image-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_width | times: 0.8 }}px;
    }

    .ai-header-logo-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.logo_text_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<header-component-{{ ai_gen_id }} class="ai-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-header-container-{{ ai_gen_id }}">
    <div class="ai-header-logo-{{ ai_gen_id }}">
      <a href="/" class="ai-header-logo-link-{{ ai_gen_id }}">
        {% if block.settings.logo != blank %}
          <img
            src="{{ block.settings.logo | image_url: width: 400 }}"
            alt="{{ shop.name }}"
            class="ai-header-logo-image-{{ ai_gen_id }}"
            width="{{ block.settings.logo_width }}"
            height="auto"
            loading="eager"
          >
        {% else %}
          <span class="ai-header-logo-text-{{ ai_gen_id }}">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    <nav class="ai-header-nav-{{ ai_gen_id }}">
      {% if block.settings.menu != blank %}
        <ul class="ai-header-menu-{{ ai_gen_id }}">
          {% for link in block.settings.menu.links %}
            <li class="ai-header-menu-item-{{ ai_gen_id }}">
              <a href="{{ link.url }}" class="ai-header-menu-link-{{ ai_gen_id }}">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}

      <div class="ai-header-icons-{{ ai_gen_id }}">
        {% if block.settings.show_search %}
          <a href="/search" class="ai-header-icon-link-{{ ai_gen_id }}" aria-label="Search">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </a>
        {% endif %}

        {% if block.settings.show_account %}
          <a href="/account" class="ai-header-icon-link-{{ ai_gen_id }}" aria-label="Account">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </a>
        {% endif %}

        {% if block.settings.show_cart %}
          <a href="/cart" class="ai-header-icon-link-{{ ai_gen_id }}" aria-label="Cart">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
          </a>
        {% endif %}

        <button class="ai-header-mobile-toggle-{{ ai_gen_id }}" aria-label="Toggle menu" aria-expanded="false">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </nav>
  </div>
</header-component-{{ ai_gen_id }}>

<script>
  (function() {
    class HeaderComponent{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.mobileToggle = this.querySelector('.ai-header-mobile-toggle-{{ ai_gen_id }}');
        this.menu = this.querySelector('.ai-header-menu-{{ ai_gen_id }}');
        
        if (this.mobileToggle && this.menu) {
          this.mobileToggle.addEventListener('click', this.toggleMenu.bind(this));
        }

        document.addEventListener('click', this.handleOutsideClick.bind(this));
      }

      toggleMenu() {
        const isActive = this.menu.classList.contains('active');
        this.menu.classList.toggle('active');
        this.mobileToggle.setAttribute('aria-expanded', !isActive);
      }

      handleOutsideClick(event) {
        if (!this.contains(event.target) && this.menu.classList.contains('active')) {
          this.menu.classList.remove('active');
          this.mobileToggle.setAttribute('aria-expanded', 'false');
        }
      }

      disconnectedCallback() {
        document.removeEventListener('click', this.handleOutsideClick.bind(this));
      }
    }

    customElements.define('header-component-{{ ai_gen_id }}', HeaderComponent{{ ai_gen_id }});
  })();
</script>

