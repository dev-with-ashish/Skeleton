  }

  .ai-header-mobile-toggle-{{ ai_gen_id }} {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: {{ block.settings.menu_color }};
  }

  .ai-header-hamburger-{{ ai_gen_id }} {
    width: 24px;
    height: 18px;
    position: relative;
    transform: rotate(0deg);
    transition: 0.3s ease-in-out;
  }

  .ai-header-hamburger-{{ ai_gen_id }} span {
    display: block;
    position: absolute;
    height: 3px;
    width: 100%;
    background: {{ block.settings.menu_color }};
    border-radius: 3px;
    opacity: 1;
    left: 0;
    transform: rotate(0deg);
    transition: 0.25s ease-in-out;
  }

  .ai-header-hamburger-{{ ai_gen_id }} span:nth-child(1) {
    top: 0px;
  }

  .ai-header-hamburger-{{ ai_gen_id }} span:nth-child(2) {
    top: 7px;
  }

  .ai-header-hamburger-{{ ai_gen_id }} span:nth-child(3) {
    top: 14px;
  }

  .ai-header-hamburger-{{ ai_gen_id }}.open span:nth-child(1) {
    top: 7px;
    transform: rotate(135deg);
  }

  .ai-header-hamburger-{{ ai_gen_id }}.open span:nth-child(2) {
    opacity: 0;
    left: -60px;
  }

  .ai-header-hamburger-{{ ai_gen_id }}.open span:nth-child(3) {
    top: 7px;
    transform: rotate(-135deg);
  }

