{% doc %}
  @prompt
    header section with MAARCOM EVENTS logo in two line 1st word wider then the down word there is a circle red circle behind the words glowing red cirlce and menus on the left, the red circle is a empty red circle with  boundry only

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    position: relative;
    z-index: 10;
  }

  .ai-header-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }

  .ai-header-logo-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    z-index: 2;
  }

  .ai-header-logo-circle-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: {{ block.settings.circle_size }}px;
    height: {{ block.settings.circle_size }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.circle_color }};
    border-radius: 50%;
    z-index: -1;
    box-shadow: 0 0 {{ block.settings.glow_intensity }}px {{ block.settings.circle_color }};
    background: transparent;
  }

  .ai-header-logo-text1-{{ ai_gen_id }} {
    font-size: {{ block.settings.logo_size_large }}px;
    font-weight: {{ block.settings.logo_weight_large }};
    color: {{ block.settings.logo_color }};
    line-height: 0.9;
    letter-spacing: {{ block.settings.letter_spacing_large }}px;
    margin: 0;
    text-transform: uppercase;
  }

  .ai-header-logo-text2-{{ ai_gen_id }} {
    font-size: {{ block.settings.logo_size_small }}px;
    font-weight: {{ block.settings.logo_weight_small }};
    color: {{ block.settings.logo_color }};
    line-height: 0.9;
    letter-spacing: {{ block.settings.letter_spacing_small }}px;
    margin: 0;
    text-transform: uppercase;
  }

  .ai-header-nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.menu_spacing }}px;
  }

  .ai-header-nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.menu_color }};
    text-decoration: none;
    font-size: {{ block.settings.menu_font_size }}px;
    font-weight: {{ block.settings.menu_font_weight }};
    padding: 8px 12px;
    transition: color 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-header-nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.menu_hover_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-header-container-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 15px;
    }

    .ai-header-nav-{{ ai_gen_id }} {
      flex-wrap: wrap;
      justify-content: center;
      gap: {{ block.settings.menu_spacing | divided_by: 2 }}px;
    }

    .ai-header-logo-text1-{{ ai_gen_id }} {
      font-size: {{ block.settings.logo_size_large | times: 0.8 }}px;
    }

    .ai-header-logo-text2-{{ ai_gen_id }} {
      font-size: {{ block.settings.logo_size_small | times: 0.8 }}px;
    }

    .ai-header-logo-circle-{{ ai_gen_id }} {
      width: {{ block.settings.circle_size | times: 0.8 }}px;
      height: {{ block.settings.circle_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<header class="ai-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-header-container-{{ ai_gen_id }}">
    <nav class="ai-header-nav-{{ ai_gen_id }}">
      {% if block.settings.menu_link_1_text != blank %}
        <a href="{{ block.settings.menu_link_1_url }}" class="ai-header-nav-link-{{ ai_gen_id }}">
          {{ block.settings.menu_link_1_text }}
        </a>
      {% endif %}
      {% if block.settings.menu_link_2_text != blank %}
        <a href="{{ block.settings.menu_link_2_url }}" class="ai-header-nav-link-{{ ai_gen_id }}">
          {{ block.settings.menu_link_2_text }}
        </a>
      {% endif %}
      {% if block.settings.menu_link_3_text != blank %}
        <a href="{{ block.settings.menu_link_3_url }}" class="ai-header-nav-link-{{ ai_gen_id }}">
          {{ block.settings.menu_link_3_text }}
        </a>
      {% endif %}
    </nav>

    <a href="{{ block.settings.logo_link | default: '/' }}" class="ai-header-logo-{{ ai_gen_id }}">
      <div class="ai-header-logo-circle-{{ ai_gen_id }}"></div>
      <h1 class="ai-header-logo-text1-{{ ai_gen_id }}">{{ block.settings.logo_text_1 }}</h1>
      <h2 class="ai-header-logo-text2-{{ ai_gen_id }}">{{ block.settings.logo_text_2 }}</h2>
    </a>

    <nav class="ai-header-nav-{{ ai_gen_id }}">
      {% if block.settings.menu_link_4_text != blank %}
        <a href="{{ block.settings.menu_link_4_url }}" class="ai-header-nav-link-{{ ai_gen_id }}">
          {{ block.settings.menu_link_4_text }}
        </a>
      {% endif %}
      {% if block.settings.menu_link_5_text != blank %}
        <a href="{{ block.settings.menu_link_5_url }}" class="ai-header-nav-link-{{ ai_gen_id }}">
          {{ block.settings.menu_link_5_text }}
        </a>
      {% endif %}
      {% if block.settings.menu_link_6_text != blank %}
        <a href="{{ block.settings.menu_link_6_url }}" class="ai-header-nav-link-{{ ai_gen_id }}">
          {{ block.settings.menu_link_6_text }}
        </a>
      {% endif %}
    </nav>
  </div>
</header>

