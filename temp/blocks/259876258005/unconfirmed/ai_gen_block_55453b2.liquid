    content: '';
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: linear-gradient(135deg, {{ block.settings.icon_color_1 }}40, {{ block.settings.icon_color_2 }}40);
    border-radius: 50%;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-event-service-card-{{ ai_gen_id }}:hover .ai-event-service-icon-{{ ai_gen_id }}::before {
    opacity: 1;
  }

  .ai-event-service-icon-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
    color: white;
  }

  .ai-event-service-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 20px;
    text-align: center;
  }

  .ai-event-service-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_text_size }}px;
    color: {{ block.settings.card_text_color }};
    line-height: 1.6;
    text-align: center;
  }

  .ai-event-services-bg-elements-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .ai-event-services-bg-circle-{{ ai_gen_id }} {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
    animation: ai-float-{{ ai_gen_id }} 6s ease-in-out infinite;
  }

  .ai-event-services-bg-circle-{{ ai_gen_id }}:nth-child(1) {
