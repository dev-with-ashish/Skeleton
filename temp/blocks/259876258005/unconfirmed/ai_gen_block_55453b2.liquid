<script>
  (function() {
    class EventServices{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.cards = this.querySelectorAll('.ai-event-service-card-{{ ai_gen_id }}');
        this.setupIntersectionObserver();
        this.setupParallaxEffect();
      }

      setupIntersectionObserver() {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
              setTimeout(() => {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0) rotateX(0)';
              }, index * 200);
            }
          });
        }, {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        });

        this.cards.forEach((card, index) => {
          card.style.opacity = '0';
          card.style.transform = 'translateY(50px) rotateX(-15deg)';
          card.style.transition = 'all 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
          observer.observe(card);
        });
      }

      setupParallaxEffect() {
        const bgElements = this.querySelectorAll('.ai-event-services-bg-circle-{{ ai_gen_id }}');
        
        window.addEventListener('scroll', () => {
          const scrolled = window.pageYOffset;
          const rect = this.getBoundingClientRect();
          const speed = scrolled * 0.5;

          if (rect.top < window.innerHeight && rect.bottom > 0) {
            bgElements.forEach((element, index) => {
              const yPos = -(speed * (0.5 + index * 0.1));
              element.style.transform = `translateY(${yPos}px) rotate(${scrolled * 0.1}deg)`;
            });
          }
        });
      }
    }

    customElements.define('event-services-{{ ai_gen_id }}', EventServices{{ ai_gen_id }});
  })();
</script>

