<script>
  (function() {
    class HorizontalScrollServices{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.scrollContainer = this.querySelector('.ai-services-main-grid-{{ ai_gen_id }}');
        this.leftButton = this.querySelector('.ai-scroll-left-{{ ai_gen_id }}');
        this.rightButton = this.querySelector('.ai-scroll-right-{{ ai_gen_id }}');
        
        this.setupEventListeners();
        this.updateButtonVisibility();
      }

      setupEventListeners() {
        this.leftButton.addEventListener('click', () => {
          this.scrollContainer.scrollBy({
            left: -300,
            behavior: 'smooth'
          });
        });

        this.rightButton.addEventListener('click', () => {
          this.scrollContainer.scrollBy({
            left: 300,
            behavior: 'smooth'
          });
        });

        this.scrollContainer.addEventListener('scroll', () => {
          this.updateButtonVisibility();
        });

        window.addEventListener('resize', () => {
          this.updateButtonVisibility();
        });
      }

      updateButtonVisibility() {
        const { scrollLeft, scrollWidth, clientWidth } = this.scrollContainer;
        
        this.leftButton.style.opacity = scrollLeft > 0 ? '1' : '0.5';
        this.leftButton.style.pointerEvents = scrollLeft > 0 ? 'auto' : 'none';
        
        this.rightButton.style.opacity = scrollLeft < scrollWidth - clientWidth - 1 ? '1' : '0.5';
        this.rightButton.style.pointerEvents = scrollLeft < scrollWidth - clientWidth - 1 ? 'auto' : 'none';
      }
    }

    customElements.define('horizontal-scroll-services-{{ ai_gen_id }}', HorizontalScrollServices{{ ai_gen_id }});
  })();
</script>

