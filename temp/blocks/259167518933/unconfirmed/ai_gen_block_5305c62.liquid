{% doc %}
  @prompt
    generate a 3d poster product section best according to you

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-poster-3d-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
  }

  .ai-poster-3d-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .ai-poster-3d-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    perspective: 1000px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ai-poster-3d-frame-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 400px;
    aspect-ratio: {{ block.settings.poster_width }} / {{ block.settings.poster_height }};
    transform-style: preserve-3d;
    transition: transform 0.6s ease;
  }

  .ai-poster-3d-frame-{{ ai_gen_id }}:hover {
    transform: rotateY({{ block.settings.rotation_angle }}deg) rotateX({{ block.settings.tilt_angle }}deg);
  }

  .ai-poster-3d-poster-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
    border-radius: 8px;
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.1),
      0 8px 16px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    position: relative;
  }

  .ai-poster-3d-poster-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.2) 0%,
      rgba(255, 255, 255, 0) 50%,
      rgba(0, 0, 0, 0.1) 100%
    );
    pointer-events: none;
    z-index: 2;
  }

  .ai-poster-3d-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-poster-3d-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f8f8f8 0%, #e8e8e8 100%);
  }

  .ai-poster-3d-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-poster-3d-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};}

  .ai-poster-3d-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-poster-3d-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
    margin: 00 24px;
    opacity: 0.8;
  }

  .ai-poster-3d-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
    margin: 0 0 32px;
    color: {{ block.settings.price_color }};
  }

  .ai-poster-3d-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;}

  .ai-poster-3d-button-{{ ai_gen_id }} {
    padding: 14px 28px;
    border-radius: {{ block.settings.button_radius }}px;
    text-decoration: none;
    font-weight: 600;
    font-size: 16px;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 2px solid transparent;
    cursor: pointer;
  }

  .ai-poster-3d-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_color }};
    color: {{ block.settings.primary_button_text_color }};
  }

  .ai-poster-3d-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_color }};
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }

  .ai-poster-3d-button-secondary-{{ ai_gen_id }} {
    background-color: transparent;
    color: {{ block.settings.secondary_button_color }};
    border-color: {{ block.settings.secondary_button_color }};
  }

  .ai-poster-3d-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_color }};
    color: {{ block.settings.secondary_button_text_color }};
    transform: translateY(-2px);
  }

  .ai-poster-3d-features-{{ ai_gen_id }} {
    margin-top: 32px;
  }

  .ai-poster-3d-feature-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    font-size: 14px;
    opacity: 0.9;
  }

  .ai-poster-3d-feature-icon-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    background-color: {{ block.settings.feature_icon_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .ai-poster-3d-feature-icon-{{ ai_gen_id }} svg {
    width: 12px;
    height: 12px;fill: white;
  }

  @media screen and (max-width: 768px) {
    .ai-poster-3d-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .ai-poster-3d-frame-{{ ai_gen_id }} {
      max-width: 300px;
    }

    .ai-poster-3d-buttons-{{ ai_gen_id }} {
      justify-content: center;
    }

    .ai-poster-3d-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<poster-3d-{{ ai_gen_id }}
  class="ai-poster-3d-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-poster-3d-container-{{ ai_gen_id }}">
    <div class="ai-poster-3d-image-wrapper-{{ ai_gen_id }}">
      <div class="ai-poster-3d-frame-{{ ai_gen_id }}"><div class="ai-poster-3d-poster-{{ ai_gen_id }}">
          {% if block.settings.poster_image %}
            <img
              src="{{ block.settings.poster_image | image_url: width: 800 }}"
              alt="{{ block.settings.poster_image.alt | escape }}"
              class="ai-poster-3d-image-{{ ai_gen_id }}"
              loading="lazy"width="{{ block.settings.poster_image.width }}"
              height="{{ block.settings.poster_image.height }}"
            >
          {% else %}
            <div class="ai-poster-3d-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="ai-poster-3d-content-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-poster-3d-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-poster-3d-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}

      {% if block.settings.price != blank %}
        <div class="ai-poster-3d-price-{{ ai_gen_id }}">{{ block.settings.price }}</div>
      {% endif %}

      <div class="ai-poster-3d-buttons-{{ ai_gen_id }}">
        {% if block.settings.primary_button_text != blank %}
          <a
            href="{{ block.settings.primary_button_link }}"
            class="ai-poster-3d-button-{{ ai_gen_id }} ai-poster-3d-button-primary-{{ ai_gen_id }}"
          >
            {{ block.settings.primary_button_text }}
          </a>
        {% endif %}

        {% if block.settings.secondary_button_text != blank %}
          <a
            href="{{ block.settings.secondary_button_link }}"
            class="ai-poster-3d-button-{{ ai_gen_id }} ai-poster-3d-button-secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>

      {% if block.settings.show_features %}
        <div class="ai-poster-3d-features-{{ ai_gen_id }}">
          {% if block.settings.feature_1 != blank %}
            <div class="ai-poster-3d-feature-{{ ai_gen_id }}">
              <div class="ai-poster-3d-feature-icon-{{ ai_gen_id }}">
                <svg viewBox="0 0 24 24">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
              </div>
              <span>{{ block.settings.feature_1 }}</span>
            </div>
          {% endif %}

          {% if block.settings.feature_2 != blank %}
            <div class="ai-poster-3d-feature-{{ ai_gen_id }}">
              <div class="ai-poster-3d-feature-icon-{{ ai_gen_id }}">
                <svg viewBox="0 0 24 24">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
              </div>
              <span>{{ block.settings.feature_2 }}</span>
            </div>
          {% endif %}

          {% if block.settings.feature_3 != blank %}
            <div class="ai-poster-3d-feature-{{ ai_gen_id }}">
              <div class="ai-poster-3d-feature-icon-{{ ai_gen_id }}">
                <svg viewBox="0 0 24 24">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
              </div>
              <span>{{ block.settings.feature_3 }}</span>
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</poster-3d-{{ ai_gen_id }}><script>
  (function() {
    class Poster3D{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupMouseTracking();
      }

      setupMouseTracking() {
        const frame = this.querySelector('.ai-poster-3d-frame-{{ ai_gen_id }}');
        const container = this.querySelector('.ai-poster-3d-image-wrapper-{{ ai_gen_id }}');

        if (!frame || !container) return;

        container.addEventListener('mousemove', (e) => {
          const rect = container.getBoundingClientRect();
          const x = e.clientX - rect.left;
          const y = e.clientY - rect.top;
          
          const centerX = rect.width / 2;
          const centerY = rect.height / 2;
          
          const rotateX = (y - centerY) / centerY * -10;
          const rotateY = (x - centerX) / centerX * 10;
          
          frame.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateZ(20px)`;
        });

        container.addEventListener('mouseleave', () => {
          frame.style.transform = 'rotateX(0deg) rotateY(0deg) translateZ(0px)';
        });
      }
    }

    customElements.define('poster-3d-{{ ai_gen_id }}', Poster3D{{ ai_gen_id }});
  })();
</script>

