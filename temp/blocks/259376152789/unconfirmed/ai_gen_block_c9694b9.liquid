<services-section-{{ ai_gen_id }}
  class="ai-services-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-services-list-container-{{ ai_gen_id }}">
    <h2 class="ai-services-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
    
    <div class="ai-services-slider-wrapper-{{ ai_gen_id }}">
      <div class="ai-services-slides-container-{{ ai_gen_id }}" data-slides-container>
        {% assign services = "Events,Promotions & Activations,Films / 3D Animatics,Expos & Exhibitions,Retail & Display,Dealer & Customer Meets,Press Conferences,Product & Services Launches,Design & Communication,Thematic dinners & Parties,Government Services,MICE & destination management,International shows,Concerts & Bollywood shows,Artist & Data Management,Wedding & Special Occasions,Online & Digital Media" | split: ',' %}
        
        {% assign slides_count = services.size | divided_by: 5.0 | ceil %}
        
        {% for slide_index in (0..slides_count) %}
          {% assign start_index = slide_index | times: 5 %}
          {% assign end_index = start_index | plus: 4 %}
          {% if start_index < services.size %}
            <div class="ai-services-slide-{{ ai_gen_id }}" data-slide="{{ slide_index }}">
              {% for i in (start_index..end_index) %}
                {% if services[i] %}
                  <div
                    class="ai-service-item-{{ ai_gen_id }}"
                    data-service-index="{{ i }}"
                    data-service-name="{{ services[i] | strip }}"
                  >
                    {{ services[i] | strip }}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        {% endfor %}
      </div></div>

    <div class="ai-services-navigation-{{ ai_gen_id }}">
      <button class="ai-nav-button-{{ ai_gen_id }}" data-nav="prev" aria-label="Previous slide">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>
      <button class="ai-nav-button-{{ ai_gen_id }}" data-nav="next" aria-label="Next slide">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    </div>

    <div class="ai-slide-indicators-{{ ai_gen_id }}" data-indicators></div>
  </div>

  <div class="ai-services-image-container-{{ ai_gen_id }}">
    {% for i in (1..17) %}
      {% assign image_setting = 'service_image_' | append: i %}
      {% if block.settings[image_setting] %}
        <img
          src="{{ block.settings[image_setting] | image_url: width: 400 }}"
          alt="Service {{ i }} image"
          class="ai-service-image-{{ ai_gen_id }}"data-service-image="{{ forloop.index0 }}"
          loading="lazy"
          width="400"
          height="400"
        >
      {% endif %}
    {% endfor %}
    
    <div class="ai-service-image-placeholder-{{ ai_gen_id }}" data-placeholder>
      {{ 'image' | placeholder_svg_tag }}
    </div>
  </div>
</services-section-{{ ai_gen_id }}>

<script>
  (function() {
    class ServicesSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 0;
        this.activeServiceIndex = 0;}

      connectedCallback() {
        this.slidesContainer = this.querySelector('[data-slides-container]');
        this.slides = this.querySelectorAll('.ai-services-slide-{{ ai_gen_id }}');
        this.serviceItems = this.querySelectorAll('.ai-service-item-{{ ai_gen_id }}');
        this.serviceImages = this.querySelectorAll('.ai-service-image-{{ ai_gen_id }}');
        this.placeholder = this.querySelector('[data-placeholder]');
        this.prevButton = this.querySelector('[data-nav="prev"]');
        this.nextButton = this.querySelector('[data-nav="next"]');
        this.indicatorsContainer = this.querySelector('[data-indicators]');
        
        this.totalSlides = this.slides.length;
        this.setupEventListeners();
        this.createIndicators();
        this.updateNavigation();
        this.updateIndicators();
        this.showDefaultImage();
        this.clearActiveStates();
      }

      setupEventListeners() {
        this.serviceItems.forEach((item, index) => {
          item.addEventListener('click', () => this.selectService(index));
          item.addEventListener('mouseenter', () => this.selectService(index));
        });

        this.prevButton.addEventListener('click', () => this.previousSlide());
        this.nextButton.addEventListener('click', () => this.nextSlide());}

      createIndicators() {
        this.indicatorsContainer.innerHTML = '';
        for (let i = 0; i < this.totalSlides; i++) {
          const indicator = document.createElement('div');
          indicator.className = 'ai-slide-indicator-{{ ai_gen_id }}';
          indicator.dataset.slide = i;
          indicator.addEventListener('click', () => this.goToSlide(i));
          this.indicatorsContainer.appendChild(indicator);
        }
      }

      clearActiveStates() {
        this.serviceItems.forEach(item => item.classList.remove('active'));
      }

      selectService(index) {
        this.clearActiveStates();
        this.serviceItems[index].classList.add('active');
        this.activeServiceIndex = index;
        this.showServiceImage(index);
      }

      showServiceImage(index) {
        this.serviceImages.forEach(img => img.classList.remove('active'));
        this.placeholder.style.display = 'flex';
        
        const targetImage = this.querySelector(`[data-service-image="${index}"]`);
        if (targetImage) {
          this.placeholder.style.display = 'none';
          targetImage.classList.add('active');
        }
      }

      showDefaultImage() {
        if (this.serviceImages.length > 0) {
          this.selectService(0);
        }
      }

      previousSlide() {
        if (this.currentSlide > 0) {
          this.goToSlide(this.currentSlide - 1);
        }
      }

      nextSlide() {
        if (this.currentSlide < this.totalSlides - 1) {
          this.goToSlide(this.currentSlide + 1);
        }
      }

      goToSlide(slideIndex) {
        this.currentSlide = slideIndex;
        this.updateSlidePosition();
        this.updateNavigation();
        this.updateIndicators();
        this.clearActiveStates();
        
        const firstItemInSlide = this.slides[slideIndex].querySelector('.ai-service-item-{{ ai_gen_id }}');
        if (firstItemInSlide) {
          const serviceIndex = parseInt(firstItemInSlide.dataset.serviceIndex);
          this.selectService(serviceIndex);
        }
      }

      updateSlidePosition() {
        const translateX = -this.currentSlide * 100;
        this.slidesContainer.style.transform = `translateX(${translateX}%)`;
      }

      updateNavigation() {
        this.prevButton.disabled = this.currentSlide === 0;
        this.nextButton.disabled = this.currentSlide === this.totalSlides - 1;
      }

      updateIndicators() {
        const indicators = this.querySelectorAll('.ai-slide-indicator-{{ ai_gen_id }}');
        indicators.forEach((indicator, index) => {
          indicator.classList.toggle('active', index === this.currentSlide);
        });
      }
    }

    customElements.define('services-section-{{ ai_gen_id }}', ServicesSection{{ ai_gen_id }});
  })();
</script>

