{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-services-section-{{ ai_gen_id }} {
    display: flex;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    min-height: 500px;
    max-height: 600px;
  }

  .ai-services-list-container-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    background-color: {{ block.settings.list_background_color }};
    padding: 40px;
    display: flex;
    flex-direction: column;
  }

  .ai-services-header-{{ ai_gen_id }} {
    margin-bottom: 30px;
  }

  .ai-services-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 10px 0;
    font-weight:600;
  }

  .ai-services-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-services-slider-container-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .ai-services-slider-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.3s ease;height: 100%;
  }

  .ai-services-slide-{{ ai_gen_id }} {
    min-width: 100%;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .ai-service-item-{{ ai_gen_id }} {
    padding: 20px;
    border-radius: {{ block.settings.item_border_radius }}px;
    background-color: {{ block.settings.item_background_color }};
    border: 2px solid transparent;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  .ai-service-item-{{ ai_gen_id }}:hover,
  .ai-service-item-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.item_hover_background_color }};
    border-color: {{ block.settings.item_hover_border_color }};
    transform: translateX(5px);
  }

  .ai-service-item-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_title_size }}px;
    color: {{ block.settings.item_title_color }};
    margin: 0;
    font-weight: 500;
  }

  .ai-service-item-{{ ai_gen_id }}:hover .ai-service-item-title-{{ ai_gen_id }},
  .ai-service-item-{{ ai_gen_id }}.active .ai-service-item-title-{{ ai_gen_id }} {
    color: {{ block.settings.item_hover_title_color }};
  }

  .ai-services-navigation-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
  }

  .ai-services-nav-button-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: none;
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_text_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-services-nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
  }

  .ai-services-nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-services-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-services-dot-{{ ai_gen_id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-services-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    transform: scale(1.2);
  }

  .ai-services-image-container-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    background-color: {{ block.settings.image_background_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .ai-services-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .ai-services-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;}

  .ai-services-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

