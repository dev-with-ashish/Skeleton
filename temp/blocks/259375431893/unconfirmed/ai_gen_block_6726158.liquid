    font-family: 'Roboto', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  .ai-services-slider-{{ ai_gen_id }} {
    transition: transform 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  }

  .ai-service-item-{{ ai_gen_id }} {
    transition: all 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .ai-service-item-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: currentColor;
    opacity: 0;
    transition: opacity 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
  }

  .ai-service-item-{{ ai_gen_id }}:hover::before {
    opacity: 0.04;
  }

  .ai-service-item-{{ ai_gen_id }}:focus::before {
    opacity: 0.12;
  }

  .ai-services-nav-button-{{ ai_gen_id }} {
    transition: all 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .ai-services-nav-button-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: currentColor;
    opacity: 0;
    transition: opacity 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
  }

  .ai-services-nav-button-{{ ai_gen_id }}:hover::before {
    opacity: 0.08;
  }

  .ai-services-nav-button-{{ ai_gen_id }}:focus::before {
    opacity: 0.24;
  }

  .ai-services-dot-{{ ai_gen_id }} {
    transition: all 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
    position: relative;}

  .ai-services-dot-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: -12px;
    left: -12px;
    right: -12px;
    bottom: -12px;
    border-radius: 50%;
    background-color: currentColor;
    opacity: 0;
    transition: opacity 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
  }

  .ai-services-dot-{{ ai_gen_id }}:hover::before {
    opacity: 0.04;
  }

  .ai-services-image-{{ ai_gen_id }} {
    transition: opacity 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  }

