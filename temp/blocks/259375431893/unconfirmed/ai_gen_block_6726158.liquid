<services-section-{{ ai_gen_id }}
  class="ai-services-section-{{ ai_gen_id }} flex flex-col lg:flex-row min-h-[500px] max-h-[600px] overflow-hidden shadow-lg"
  style="background-color: {{ block.settings.background_color }}; border-radius: {{ block.settings.border_radius }}px;"{{ block.shopify_attributes }}
>
  <div 
    class="flex-1 flex flex-col p-6 lg:p-8"
    style="background-color: {{ block.settings.list_background_color }};"
  >
    <div class="mb-6 lg:mb-8">
      {% if block.settings.title != blank %}
        <h2 
          class="mb-2 font-medium tracking-wide leading-tight"
          style="font-size: {{ block.settings.title_size }}px; color: {{ block.settings.title_color }};"
        >
          {{ block.settings.title }}
        </h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p 
          class="font-normal tracking-wide leading-relaxed"
          style="font-size: {{ block.settings.subtitle_size }}px; color: {{ block.settings.subtitle_color }};"
        >
          {{ block.settings.subtitle }}
        </p>
      {% endif %}
    </div>

    <div class="flex-1 relative overflow-hidden">
      <div class="ai-services-slider-{{ ai_gen_id }} flex h-full" data-slider>
        {% assign services = "Events,Promotions & Activations,Films /3D Animatics,Expos & Exhibitions,Retail & Display,Dealer & Customer Meets,Press Conferences,Product & Services Launches,Design & Communication,Thematic dinners & Parties,Government Services,MICE & destination management,International shows,Concerts & Bollywood shows,Artist & Data Management,Wedding & Special Occasions,Online & Digital Media" | split: ',' %}
        
        {% assign total_slides = services.size | divided_by: 5.0 | ceil %}
        
        {% for slide_index in (0..total_slides) %}
          {% assign start_index = slide_index | times: 5 %}
          {% assign end_index = start_index | plus: 4 %}
          {% if start_index < services.size %}<div class="min-w-full flex flex-col gap-2">
              {% for i in (start_index..end_index) %}
                {% if services[i] %}
                  <button
                    class="ai-service-item-{{ ai_gen_id }} p-4 border-none outline-none cursor-pointer text-left shadow-md hover:shadow-lg focus:shadow-lg transform hover:-translate-y-1 focus:-translate-y-1 z-10"
                    style="
                      border-radius: {{ block.settings.item_border_radius }}px;
                      background-color: {{ block.settings.item_background_color }};
                      color: {{ block.settings.item_title_color }};
                "
                    data-service-index="{{ i }}"
                    data-service-name="{{ services[i] | strip }}"
                    type="button"
                    role="tab"
                    aria-selected="{% if i == 0 %}true{% else %}false{% endif %}"
                    tabindex="{% if i == 0 %}0{% else %}-1{% endif %}"
                  >
                    <h3 
                      class="m-0 font-medium tracking-wide leading-snug relative z-10"
                      style="font-size: {{ block.settings.item_title_size }}px;"
                    >
                      {{ services[i] | strip }}
                    </h3>
                  </button>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="flex justify-between items-center mt-6 lg:mt-8">
      <button
        class="ai-services-nav-button-{{ ai_gen_id }} w-12 h-12 rounded-full border-none cursor-pointer flex items-center justify-center shadow-md hover:shadow-lg focus:shadow-lg disabled:opacity-40 disabled:cursor-not-allowed disabled:shadow-none"
        style="background-color: {{ block.settings.nav_button_color }}; color: {{ block.settings.nav_button_text_color }};"
        data-nav="prev"
        type="button"
        aria-label="Previous services"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>

      <div class="flex gap-2 items-center" data-dots role="tablist" aria-label="Service slides"></div>

      <button 
        class="ai-services-nav-button-{{ ai_gen_id }} w-12 h-12 rounded-full border-none cursor-pointer flex items-center justify-center shadow-md hover:shadow-lg focus:shadow-lg disabled:opacity-40 disabled:cursor-not-allowed disabled:shadow-none"
        style="background-color: {{ block.settings.nav_button_color }}; color: {{ block.settings.nav_button_text_color }};"
        data-nav="next"
        type="button"
        aria-label="Next services"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    </div>
  </div>

  <div 
    class="flex-1 relative flex items-center justify-center overflow-hidden min-h-[300px] lg:min-h-0"
    style="background-color: {{ block.settings.image_background_color }};"
    role="img" 
    aria-live="polite">
    {% for i in (1..17) %}
      {% assign image_setting = 'service_image_' | append: i %}
      {% assign image = block.settings[image_setting] %}
      {% if image %}
        <img
          class="ai-services-image-{{ ai_gen_id }} w-full h-full object-cover"
          src="{{ image | image_url: width: 600}}"
          alt="{{ image.alt | escape }}"
          loading="lazy"
          data-service-image="{{ forloop.index0 }}"
          style="{% unless forloop.first %}display: none;{% endunless %}"
        >
      {% elsif forloop.first %}
        <div class="w-full h-full flex items-center justify-center bg-gray-100">
          <div class="w-3/5 h-3/5 opacity-40 text-gray-500">
            {{'image' | placeholder_svg_tag }}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</services-section-{{ ai_gen_id }}>

<script>
  (function() {
    class ServicesSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 0;
        this.activeServiceIndex = 0;}

      connectedCallback() {
        this.slider = this.querySelector('[data-slider]');
        this.slides = this.querySelectorAll('.min-w-full');
        this.serviceItems = this.querySelectorAll('.ai-service-item-{{ ai_gen_id }}');
        this.images = this.querySelectorAll('.ai-services-image-{{ ai_gen_id }}');
        this.placeholder = this.querySelector('.bg-gray-100');
        this.prevButton = this.querySelector('[data-nav="prev"]');
        this.nextButton = this.querySelector('[data-nav="next"]');
        this.dotsContainer = this.querySelector('[data-dots]');

        this.totalSlides = this.slides.length;
        this.setupDots();
        this.setupEventListeners();
        this.updateNavigation();
        this.setActiveService(0);
      }

      setupDots() {
        this.dotsContainer.innerHTML = '';
        for (let i = 0; i < this.totalSlides; i++) {
          const dot = document.createElement('button');
          dot.className = `ai-services-dot-{{ ai_gen_id }} w-2 h-2 rounded-full border-none p-0 cursor-pointer ${i === 0 ? 'transform scale-125' : ''}`;
          dot.style.backgroundColor = i === 0 ? '{{ block.settings.dot_active_color }}' : '{{ block.settings.dot_color }}';
          dot.setAttribute('data-slide', i);
          dot.setAttribute('type', 'button');
          dot.setAttribute('role', 'tab');
          dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
          dot.setAttribute('aria-selected', i === 0 ? 'true' : 'false');
          this.dotsContainer.appendChild(dot);
        }
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.goToSlide(this.currentSlide - 1));
        this.nextButton.addEventListener('click', () => this.goToSlide(this.currentSlide + 1));

        this.dotsContainer.addEventListener('click', (e) => {
          if (e.target.hasAttribute('data-slide')) {
            this.goToSlide(parseInt(e.target.getAttribute('data-slide')));
          }
        });

        this.serviceItems.forEach((item, index) => {
          item.addEventListener('click', () => this.setActiveService(index));
          item.addEventListener('mouseenter', () => this.setActiveService(index));
          item.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              this.setActiveService(index);
            }
          });
        });

        document.addEventListener('keydown', (e) => {
          if (e.target.closest('.ai-services-section-{{ ai_gen_id }}')) {
            if (e.key === 'ArrowLeft') {
              e.preventDefault();
              this.goToSlide(this.currentSlide - 1);
            } else if (e.key === 'ArrowRight') {
              e.preventDefault();
              this.goToSlide(this.currentSlide + 1);
            }
          }
        });
      }

      goToSlide(slideIndex) {
        if (slideIndex < 0 || slideIndex >= this.totalSlides) return;

        this.currentSlide = slideIndex;
        const translateX = -slideIndex * 100;
        this.slider.style.transform = `translateX(${translateX}%)`;

        this.updateNavigation();this.updateDots();
      }

      updateNavigation() {
        this.prevButton.disabled = this.currentSlide === 0;
        this.nextButton.disabled = this.currentSlide === this.totalSlides - 1;
      }

      updateDots() {
        this.querySelectorAll('.ai-services-dot-{{ ai_gen_id }}').forEach((dot, index) => {
          const isActive = index === this.currentSlide;
          dot.style.backgroundColor = isActive ? '{{ block.settings.dot_active_color }}' : '{{ block.settings.dot_color }}';
          dot.classList.toggle('transform', isActive);
          dot.classList.toggle('scale-125', isActive);
          dot.setAttribute('aria-selected', isActive ? 'true' : 'false');
        });
      }

      setActiveService(serviceIndex) {
        this.activeServiceIndex = serviceIndex;

        this.serviceItems.forEach((item, index) => {
          const isActive = index === serviceIndex;
          
          if (isActive) {
            item.style.backgroundColor = '{{ block.settings.item_active_background_color }}';
            item.style.color = '{{ block.settings.item_hover_title_color }}';item.classList.add('transform', '-translate-y-1');
          } else {
            item.style.backgroundColor = '{{ block.settings.item_background_color }}';
            item.style.color = '{{ block.settings.item_title_color }}';
            item.classList.remove('transform', '-translate-y-1');
          }
          
          item.setAttribute('aria-selected', isActive ? 'true' : 'false');
          item.setAttribute('tabindex', isActive ? '0' : '-1');
        });

        this.showServiceImage(serviceIndex);
      }

      showServiceImage(serviceIndex) {
        this.images.forEach((image, index) => {
          image.style.display = index === serviceIndex ? 'block' : 'none';
        });

        if (this.placeholder) {
          this.placeholder.style.display = this.images[serviceIndex] ? 'none' : 'flex';
        }
      }
    }

    customElements.define('services-section-{{ ai_gen_id }}', ServicesSection{{ ai_gen_id }});
  })();
</script>

