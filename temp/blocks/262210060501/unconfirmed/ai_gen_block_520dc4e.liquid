{% doc %}
  @prompt
    make a section that will show my google business profile like name reviews photos

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-google-business-profile-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-google-business-profile__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-google-business-profile__header-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap:20px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }

  .ai-google-business-profile__logo-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
  }

  .ai-google-business-profile__logo-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-google-business-profile__logo-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-google-business-profile__logo-placeholder-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
    color: #999;
  }

  .ai-google-business-profile__info-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-google-business-profile__name-{{ ai_gen_id }} {
    font-size: {{ block.settings.business_name_size }}px;
    font-weight: 700;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px 0;
  }

  .ai-google-business-profile__address-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0 0 8px 0;
  }

  .ai-google-business-profile__rating-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
  }

  .ai-google-business-profile__stars-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
  }

  .ai-google-business-profile__star-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    color: {{ block.settings.star_color }};
  }

  .ai-google-business-profile__star--empty-{{ ai_gen_id }} {
    color: #e0e0e0;
  }

  .ai-google-business-profile__rating-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
  }

  .ai-google-business-profile__review-count-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
  }

  .ai-google-business-profile__photos-{{ ai_gen_id }} {
    margin-top: 30px;
  }

  .ai-google-business-profile__photos-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 20px 0;
  }

  .ai-google-business-profile__photos-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
  }

  .ai-google-business-profile__photo-{{ ai_gen_id }} {
    aspect-ratio: 1;
    border-radius: {{ block.settings.photo_border_radius }}px;
    overflow: hidden;
  }

  .ai-google-business-profile__photo-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-google-business-profile__photo-{{ ai_gen_id }}:hover img {
    transform: scale(1.05);
  }

  .ai-google-business-profile__photo-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-google-business-profile__photo-placeholder-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
    color: #999;
  }

  .ai-google-business-profile__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-size:14px;
  }

  @media screen and (max-width: 768px) {
    .ai-google-business-profile__header-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
    }

    .ai-google-business-profile__photos-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));gap: 12px;
    }
  }
{% endstyle %}<div class="ai-google-business-profile-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-google-business-profile__container-{{ ai_gen_id }}">
    <div class="ai-google-business-profile__header-{{ ai_gen_id }}">
      <div class="ai-google-business-profile__logo-{{ ai_gen_id }}">
        {% if block.settings.business_logo %}
          <img
            src="{{ block.settings.business_logo | image_url: width: 160}}"
            alt="{{ block.settings.business_name | escape }}"
            loading="lazy"
            width="80"
            height="80">
        {% else %}
          <div class="ai-google-business-profile__logo-placeholder-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 1H5C3.89 1 3 1.89 3 3V21C3 22.11 3.89 23 5 23H19C20.11 23 21 22.11 21 21V9M19 9H14V4H19V9Z"/>
            </svg>
          </div>
        {% endif %}
      </div>

      <div class="ai-google-business-profile__info-{{ ai_gen_id }}">
        {% if block.settings.business_name != blank %}
          <h2 class="ai-google-business-profile__name-{{ ai_gen_id }}">{{ block.settings.business_name }}</h2>
        {% endif %}

        {% if block.settings.business_address != blank %}
          <div class="ai-google-business-profile__address-{{ ai_gen_id }}">{{ block.settings.business_address }}</div>
        {% endif %}

        {% if block.settings.show_rating %}
          <div class="ai-google-business-profile__rating-{{ ai_gen_id }}">
            <div class="ai-google-business-profile__stars-{{ ai_gen_id }}">
              {% for i in (1..5) %}<svg class="ai-google-business-profile__star-{{ ai_gen_id }} {% if i > block.settings.rating %}ai-google-business-profile__star--empty-{{ ai_gen_id }}{% endif %}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.46,13.97L5.82,21L12,17.27Z"/>
                </svg>
              {% endfor %}
            </div>
            <span class="ai-google-business-profile__rating-text-{{ ai_gen_id }}">{{ block.settings.rating }}.0</span>
            <span class="ai-google-business-profile__review-count-{{ ai_gen_id }}">
              ({{ block.settings.review_count }} reviews)
            </span>
          </div>
        {% endif %}
      </div>
    </div>

    {% if block.settings.show_photos %}
      <div class="ai-google-business-profile__photos-{{ ai_gen_id }}">
        {% if block.settings.photos_title != blank %}
          <h3 class="ai-google-business-profile__photos-title-{{ ai_gen_id }}">{{ block.settings.photos_title }}</h3>
        {% endif %}

        {% assign has_photos = false %}
        {% for i in (1..6) %}
          {% assign photo_key = 'photo_' | append: i %}
          {% if block.settings[photo_key] %}
            {% assign has_photos = true %}
            {% break %}
          {% endif %}
        {% endfor %}

        {% if has_photos %}
          <div class="ai-google-business-profile__photos-grid-{{ ai_gen_id }}">
            {% for i in (1..6) %}
              {% assign photo_key = 'photo_' | append: i %}
              {% if block.settings[photo_key] %}
                <div class="ai-google-business-profile__photo-{{ ai_gen_id }}">
                  <img
                    src="{{ block.settings[photo_key] | image_url: width: 400 }}"
                    alt="{{ block.settings.business_name | escape }} photo {{ i }}"
                    loading="lazy"
                    width="200"
                    height="200"
                  >
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% else %}
          <div class="ai-google-business-profile__photos-grid-{{ ai_gen_id }}">
            {% for i in (1..3) %}
              <div class="ai-google-business-profile__photo-{{ ai_gen_id }}">
                <div class="ai-google-business-profile__photo-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              </div>
            {% endfor %}
          </div><div class="ai-google-business-profile__empty-state-{{ ai_gen_id }}">
            Add photos to showcase your business
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Google Business Profile",
  "settings": [
    {
      "type": "header",
      "content": "Business information"
    },
    {
      "type": "text",
      "id": "business_name",
      "label": "Business name",
      "default": "Your Business Name"
    },
    {
      "type": "textarea",
      "id": "business_address",
      "label": "Business address",
      "default": "123 Main Street, City, State 12345"
    },
    {
      "type": "image_picker",
      "id": "business_logo",
      "label": "Business logo"
    },
    {
      "type": "header",
      "content": "Reviews"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show rating",
      "default": true
    },
    {
      "type": "range",
      "id": "rating",
      "min": 1,
      "max": 5,
      "step": 1,
      "label": "Rating",
      "default": 5
    },
    {
      "type": "range",
      "id": "review_count",
      "min": 0,
      "max": 1000,
      "step": 10,
      "label": "Number of reviews",
      "default": 50
    },
    {
      "type": "color",
      "id": "star_color",
      "label": "Star color",
      "default": "#FFD700"
    },
    {
      "type": "header",
      "content": "Photos"
    },
    {
      "type": "checkbox",
      "id": "show_photos",
      "label": "Show photos section",
      "default": true
    },
    {
      "type": "text",
      "id": "photos_title",
      "label": "Photos section title",
      "default": "Photos"
    },
    {
      "type": "image_picker",
      "id": "photo_1",
      "label": "Photo 1"
    },
    {
      "type": "image_picker",
      "id": "photo_2",
      "label": "Photo 2"
    },
    {
      "type": "image_picker",
      "id": "photo_3",
      "label": "Photo 3"
    },
    {
      "type": "image_picker",
      "id": "photo_4",
      "label": "Photo 4"
    },
    {
      "type": "image_picker",
      "id": "photo_5",
      "label": "Photo 5"
    },
    {
      "type": "image_picker",
      "id": "photo_6",
      "label": "Photo 6"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "business_name_size",
      "min": 18,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Business name size",
      "default": 28
    },
    {
      "type": "range",
      "id": "section_title_size",
      "min": 16,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Section title size",
      "default": 20
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 14
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 20,
      "max": 80,
      "step": 10,
      "unit": "px",
      "label": "Section padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "range",
      "id": "photo_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Photo border radius",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Google Business Profile"
    }
  ]
}
{% endschema %}