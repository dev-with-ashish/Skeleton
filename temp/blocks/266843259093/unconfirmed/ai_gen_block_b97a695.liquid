{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-uv-printing-service-{{ ai_gen_id }} {
    font-family: {{ settings.type_primary_font.family }}, sans-serif;
    background: linear-gradient(135deg, {{ block.settings.hero_bg_color }} 0%, {{ block.settings.hero_bg_gradient_color }} 100%);
    color: {{ block.settings.text_color }};
    padding: 0;
    margin: 0;
  }

  .ai-uv-hero-section-{{ ai_gen_id }} {
    padding: 60px 20px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .ai-uv-hero-content-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .ai-uv-hero-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_title_size }}px;
    font-weight: 700;
    margin: 0 0 20px;
    color: {{ block.settings.hero_title_color }};
    line-height: 1.2;
  }

  .ai-uv-hero-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_subtitle_size }}px;
    margin: 0 0 30px;
    color: {{ block.settings.hero_subtitle_color }};
    line-height: 1.5;
  }

  .ai-uv-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 30px;
  }

  .ai-uv-btn-primary-{{ ai_gen_id }}, .ai-uv-btn-secondary-{{ ai_gen_id }} {
    padding: 15px 30px;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
    border: 2px solid transparent;
  }

  .ai-uv-btn-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_color }};
    color: {{ block.settings.primary_button_text_color }};
  }

  .ai-uv-btn-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_color }};
    transform: translateY(-2px);
  }

  .ai-uv-btn-secondary-{{ ai_gen_id }} {
    background-color: transparent;
    color: {{ block.settings.secondary_button_color }};
    border-color: {{ block.settings.secondary_button_color }};
  }

  .ai-uv-btn-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_color }};
    color: {{ block.settings.secondary_button_text_color }};
  }

  .ai-uv-rating-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    font-size: 14px;
    color: {{ block.settings.rating_text_color }};
  }

  .ai-uv-stars-{{ ai_gen_id }} {
    color: {{ block.settings.star_color }};
  }

  .ai-uv-services-section-{{ ai_gen_id }} {
    padding: 60px 20px;
    background-color: {{ block.settings.services_bg_color }};
  }

  .ai-uv-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-uv-section-title-{{ ai_gen_id }} {
    text-align: center;
    font-size: {{ block.settings.section_title_size }}px;
    font-weight: 700;
    margin: 0 0 40px;
    color: {{ block.settings.section_title_color }};
  }

  .ai-uv-services-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    margin-bottom: 50px;
  }

  .ai-uv-service-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_bg_color }};
    padding: 30px;
    border-radius: {{ block.settings.card_border_radius }}px;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    transition: transform 0.3s ease;
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-uv-service-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .ai-uv-service-icon-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    margin: 0 auto 20px;
    background-color: {{ block.settings.icon_bg_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
    overflow: hidden;
  }

  .ai-uv-service-icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .ai-uv-service-icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.icon_bg_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  .ai-uv-service-icon-placeholder-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
    color: {{ block.settings.icon_color }};
  }

  .ai-uv-service-card-{{ ai_gen_id }} h3 {
    color: {{ block.settings.service_title_color }};
    margin: 0 0 15px;
    font-size: 18px;
    font-weight: 600;
  }

  .ai-uv-service-card-{{ ai_gen_id }} p {
    color: {{ block.settings.service_text_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-uv-materials-section-{{ ai_gen_id }} {
    padding: 60px 20px;
    background-color: {{ block.settings.materials_bg_color }};
  }

  .ai-uv-materials-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
  }

  .ai-uv-material-item-{{ ai_gen_id }} {
    background: {{ block.settings.material_card_bg }};
    padding: 20px;
    border-radius: {{ block.settings.card_border_radius }}px;
    text-align: center;
    border: 2px solid {{ block.settings.material_border_color }};
    transition: border-color 0.3s ease;
    box-shadow: 0 3px 10px rgba(0,0,0,0.2);
  }

  .ai-uv-material-item-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.primary_button_color }};
  }

  .ai-uv-material-icon-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    margin: 0 auto 15px;
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.material_icon_bg }};
  }

  .ai-uv-material-icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-uv-material-icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.material_icon_bg }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-uv-material-icon-placeholder-{{ ai_gen_id }} svg {
    width: 30px;
    height: 30px;
    color: {{ block.settings.material_icon_color }};
  }

  .ai-uv-material-item-{{ ai_gen_id }} h4 {
    color: {{ block.settings.material_title_color }};
    margin: 0;
    font-size: 16px;
    font-weight: 600;
  }

  .ai-uv-process-section-{{ ai_gen_id }} {
    padding: 60px 20px;
    background-color: {{ block.settings.process_bg_color }};
  }

  .ai-uv-process-steps-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
  }

  .ai-uv-process-step-{{ ai_gen_id }} {
    text-align: center;
    position: relative;
  }

  .ai-uv-step-number-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    background-color: {{ block.settings.primary_button_color }};
    color: {{ block.settings.primary_button_text_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    margin: 0 auto 20px;
  }

  .ai-uv-process-step-{{ ai_gen_id }} h4 {
    color: {{ block.settings.process_title_color }};
    margin: 0 0 10px;
    font-size: 18px;
    font-weight: 600;
  }

  .ai-uv-process-step-{{ ai_gen_id }} p {
    color: {{ block.settings.process_text_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-uv-pricing-section-{{ ai_gen_id }} {
    padding: 60px 20px;
    background-color: {{ block.settings.pricing_bg_color }};
  }

  .ai-uv-pricing-table-{{ ai_gen_id }} {
    background: {{ block.settings.card_bg_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-uv-pricing-table-{{ ai_gen_id }} table {
    width: 100%;
    border-collapse: collapse;
  }

  .ai-uv-pricing-table-{{ ai_gen_id }} th,
  .ai-uv-pricing-table-{{ ai_gen_id }} td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid {{ block.settings.table_border_color }};
  }

  .ai-uv-pricing-table-{{ ai_gen_id }} th {
    background-color: {{ block.settings.table_header_bg }};
    font-weight: 700;
    color: {{ block.settings.table_header_text }};
  }

  .ai-uv-pricing-table-{{ ai_gen_id }} td {
    color: {{ block.settings.table_text_color }};
  }

  .ai-uv-quote-section-{{ ai_gen_id }} {
    padding: 60px 20px;
    background-color: {{ block.settings.quote_bg_color }};
  }

  .ai-uv-quote-form-{{ ai_gen_id }} {
    background: {{ block.settings.card_bg_color }};
    padding: 40px;
    border-radius: {{ block.settings.card_border_radius }}px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    max-width: 600px;
    margin: 0 auto;
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-uv-form-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
  }

  .ai-uv-form-group-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-uv-form-group-{{ ai_gen_id }} label {
    margin-bottom: 5px;
    font-weight: 600;
    color: {{ block.settings.form_label_color }};
  }

  .ai-uv-form-group-{{ ai_gen_id }} input,
  .ai-uv-form-group-{{ ai_gen_id }} select,
  .ai-uv-form-group-{{ ai_gen_id }} textarea {
    padding: 12px;
    border: 1px solid {{ block.settings.form_border_color }};
    border-radius: {{ block.settings.form_border_radius }}px;
    font-size: 14px;
    background-color: {{ block.settings.form_input_bg }};
    color: {{ block.settings.form_input_text }};
  }

  .ai-uv-form-group-{{ ai_gen_id }} textarea {
    resize: vertical;
    min-height: 100px;
  }

  .ai-uv-form-submit-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_color }};
    color: {{ block.settings.primary_button_text_color }};
    padding: 15px 30px;
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    cursor: pointer;
    width: 100%;
    transition: background-color 0.3s ease;
  }

  .ai-uv-form-submit-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_color }};
  }

  .ai-uv-contact-section-{{ ai_gen_id }} {
    padding: 60px 20px;
    background-color: {{ block.settings.contact_bg_color }};
  }

  .ai-uv-contact-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
  }

  .ai-uv-contact-info-{{ ai_gen_id }} {
    background: {{ block.settings.card_bg_color }};
    padding: 30px;
    border-radius: {{ block.settings.card_border_radius }}px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-uv-contact-info-{{ ai_gen_id }} h3 {
    color: {{ block.settings.contact_title_color }};
    margin: 0 0 15px;
    font-size: 20px;
    font-weight: 600;
  }

  .ai-uv-contact-info-{{ ai_gen_id }} p {
    color: {{ block.settings.contact_text_color }};
    margin: 0 0 10px;
    line-height: 1.5;
  }

  .ai-uv-faq-section-{{ ai_gen_id }} {
    padding: 60px 20px;
    background-color: {{ block.settings.faq_bg_color }};
  }

  .ai-uv-faq-item-{{ ai_gen_id }} {
    background: {{ block.settings.card_bg_color }};
    margin-bottom: 15px;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0,0,0,0.3);
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-uv-faq-question-{{ ai_gen_id }} {
    padding: 20px;
    background-color: {{ block.settings.faq_question_bg }};
    cursor: pointer;
    font-weight: 600;
    color: {{ block.settings.faq_question_color }};
    border: none;
    width: 100%;
    text-align: left;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .ai-uv-faq-answer-{{ ai_gen_id }} {
    padding: 0 20px;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease, padding 0.3s ease;
    color: {{ block.settings.faq_answer_color }};
    background-color: {{ block.settings.card_bg_color }};
  }

  .ai-uv-faq-item-{{ ai_gen_id }}.active .ai-uv-faq-answer-{{ ai_gen_id }} {
    max-height: 200px;
    padding: 20px;
  }

  @media (max-width: 768px) {
    .ai-uv-hero-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.hero_title_size | times: 0.8 }}px;
    }
    
    .ai-uv-hero-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: center;
    }
    
    .ai-uv-btn-primary-{{ ai_gen_id }}, .ai-uv-btn-secondary-{{ ai_gen_id }} {
      width: 100%;
      max-width: 300px;
    }
    
    .ai-uv-form-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<uv-printing-service-{{ ai_gen_id }} class="ai-uv-printing-service-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <!-- Hero Section -->
  <section class="ai-uv-hero-section-{{ ai_gen_id }}">
    <div class="ai-uv-hero-content-{{ ai_gen_id }}">
      <h1 class="ai-uv-hero-title-{{ ai_gen_id }}">{{ block.settings.hero_title }}</h1>
      <p class="ai-uv-hero-subtitle-{{ ai_gen_id }}">{{ block.settings.hero_subtitle }}</p>
      
      <div class="ai-uv-hero-buttons-{{ ai_gen_id }}">
        {% if block.settings.primary_button_text != blank and block.settings.primary_button_link != blank %}
          <a href="{{ block.settings.primary_button_link }}" class="ai-uv-btn-primary-{{ ai_gen_id }}">
            {{ block.settings.primary_button_text }}
          </a>
        {% endif %}
        {% if block.settings.secondary_button_text != blank and block.settings.secondary_button_link != blank %}
          <a href="{{ block.settings.secondary_button_link }}" class="ai-uv-btn-secondary-{{ ai_gen_id }}">
            {{ block.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>
      
      <div class="ai-uv-rating-{{ ai_gen_id }}">
        <div class="ai-uv-stars-{{ ai_gen_id }}">★★★★★</div>
        <span>{{ block.settings.rating_text }}</span>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="ai-uv-services-section-{{ ai_gen_id }}">
    <div class="ai-uv-container-{{ ai_gen_id }}">
      <h2 class="ai-uv-section-title-{{ ai_gen_id }}">{{ block.settings.services_title }}</h2>
      <div class="ai-uv-services-grid-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% assign service_title_key = 'service_' | append: i | append: '_title' %}
          {% assign service_desc_key = 'service_' | append: i | append: '_description' %}
          {% assign service_image_key = 'service_' | append: i | append: '_image' %}
          {% if block.settings[service_title_key] != blank %}
            <div class="ai-uv-service-card-{{ ai_gen_id }}">
              <div class="ai-uv-service-icon-{{ ai_gen_id }}">
                {% if block.settings[service_image_key] %}
                  <img
                    src="{{ block.settings[service_image_key] | image_url: width: 160 }}"
                    alt="{{ block.settings[service_title_key] | escape }}"
                    width="80"
                    height="80"
                    loading="lazy"
                  >
                {% else %}
                  <div class="ai-uv-service-icon-placeholder-{{ ai_gen_id }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  </div>
                {% endif %}
              </div>
              <h3>{{ block.settings[service_title_key] }}</h3>
              <p>{{ block.settings[service_desc_key] }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- Materials Section -->
  <section class="ai-uv-materials-section-{{ ai_gen_id }}">
    <div class="ai-uv-container-{{ ai_gen_id }}">
      <h2 class="ai-uv-section-title-{{ ai_gen_id }}">{{ block.settings.materials_title }}</h2>
      <div class="ai-uv-materials-grid-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% assign material_key = 'material_' | append: i %}
          {% assign material_image_key = 'material_' | append: i | append: '_image' %}
          {% if block.settings[material_key] != blank %}
            <div class="ai-uv-material-item-{{ ai_gen_id }}">
              <div class="ai-uv-material-icon-{{ ai_gen_id }}">
                {% if block.settings[material_image_key] %}
                  <img
                    src="{{ block.settings[material_image_key] | image_url: width: 120 }}"
                    alt="{{ block.settings[material_key] | escape }}"
                    width="60"
                    height="60"
                    loading="lazy"
                  >
                {% else %}
                  <div class="ai-uv-material-icon-placeholder-{{ ai_gen_id }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
                    </svg>
                  </div>
                {% endif %}
              </div>
              <h4>{{ block.settings[material_key] }}</h4>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="ai-uv-process-section-{{ ai_gen_id }}">
    <div class="ai-uv-container-{{ ai_gen_id }}">
      <h2 class="ai-uv-section-title-{{ ai_gen_id }}">{{ block.settings.process_title }}</h2>
      <div class="ai-uv-process-steps-{{ ai_gen_id }}">
        {% for i in (1..3) %}
          {% assign step_title_key = 'process_step_' | append: i | append: '_title' %}
          {% assign step_desc_key = 'process_step_' | append: i | append: '_description' %}
          {% if block.settings[step_title_key] != blank %}
            <div class="ai-uv-process-step-{{ ai_gen_id }}">
              <div class="ai-uv-step-number-{{ ai_gen_id }}">{{ i }}</div>
              <h4>{{ block.settings[step_title_key] }}</h4>
              <p>{{ block.settings[step_desc_key] }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section class="ai-uv-pricing-section-{{ ai_gen_id }}">
    <div class="ai-uv-container-{{ ai_gen_id }}">
      <h2 class="ai-uv-section-title-{{ ai_gen_id }}">{{ block.settings.pricing_title }}</h2>
      <div class="ai-uv-pricing-table-{{ ai_gen_id }}">
        <table>
          <thead>
            <tr>
              <th>Material</th>
              <th>Size</th>
              <th>From</th>
            </tr>
          </thead>
          <tbody>
            {% for i in (1..5) %}
              {% assign material_key = 'pricing_material_' | append: i %}
              {% assign size_key = 'pricing_size_' | append: i %}
              {% assign price_key = 'pricing_price_' | append: i %}
              {% if block.settings[material_key] != blank %}
                <tr>
                  <td>{{ block.settings[material_key] }}</td>
                  <td>{{ block.settings[size_key] }}</td>
                  <td>{{ block.settings[price_key] }}</td>
                </tr>
              {% endif %}
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
