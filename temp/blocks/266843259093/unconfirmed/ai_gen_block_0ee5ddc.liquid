<script>
  (function() {
    class UVPrintingService{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupFAQ();
      }

      setupFAQ() {
        const faqToggles = this.querySelectorAll('[data-faq-toggle]');
        
        faqToggles.forEach(toggle => {
          toggle.addEventListener('click', () => {
            const answer = toggle.nextElementSibling;
            const icon = toggle.querySelector('.ai-uv-printing-faq-icon-{{ ai_gen_id }}');
            
            const isActive = answer.classList.contains('active');
            
            faqToggles.forEach(otherToggle => {
              const otherAnswer = otherToggle.nextElementSibling;
              const otherIcon = otherToggle.querySelector('.ai-uv-printing-faq-icon-{{ ai_gen_id }}');
              otherAnswer.classList.remove('active');
              otherIcon.classList.remove('active');
            });
            
            if (!isActive) {
              answer.classList.add('active');
              icon.classList.add('active');
            }
          });
        });
      }
    }

    customElements.define('uv-printing-service-{{ ai_gen_id }}', UVPrintingService{{ ai_gen_id }});
  })();
</script>

