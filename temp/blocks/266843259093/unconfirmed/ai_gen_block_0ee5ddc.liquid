      text-align: center;
    }

    .ai-uv-printing-contact-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<uv-printing-service-{{ ai_gen_id }} class="ai-uv-printing-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <section class="ai-uv-printing-hero-{{ ai_gen_id }}">
    <div class="ai-uv-printing-container-{{ ai_gen_id }}">
      <h1 class="ai-uv-printing-hero-title-{{ ai_gen_id }}">{{ block.settings.hero_title }}</h1>
      <p class="ai-uv-printing-hero-subtitle-{{ ai_gen_id }}">{{ block.settings.hero_subtitle }}</p>
      
      <div class="ai-uv-printing-hero-buttons-{{ ai_gen_id }}">
        {% if block.settings.primary_button_text != blank %}
          <a href="{{ block.settings.primary_button_link }}" class="ai-uv-printing-btn-{{ ai_gen_id }} ai-uv-printing-btn-primary-{{ ai_gen_id }}">
            {{ block.settings.primary_button_text }}
          </a>
        {% endif %}
        {% if block.settings.secondary_button_text != blank %}
          <a href="{{ block.settings.secondary_button_link }}" class="ai-uv-printing-btn-{{ ai_gen_id }} ai-uv-printing-btn-secondary-{{ ai_gen_id }}">
            {{ block.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>

      {% if block.settings.show_rating %}
        <div class="ai-uv-printing-rating-{{ ai_gen_id }}">
          <span>★★★★★</span>
          <span>{{ block.settings.rating_text }}</span>
        </div>
      {% endif %}
    </div>
  </section>

  <section class="ai-uv-printing-section-{{ ai_gen_id }}">
    <div class="ai-uv-printing-container-{{ ai_gen_id }}">
      <h2 class="ai-uv-printing-section-title-{{ ai_gen_id }}">{{ block.settings.services_title }}</h2>
      <div class="ai-uv-printing-services-grid-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign service_title_key = 'service_' | append: i | append: '_title'
            assign service_desc_key = 'service_' | append: i | append: '_description'
            assign service_image_key = 'service_' | append: i | append: '_image'
            
            assign service_title = block.settings[service_title_key]
            assign service_desc = block.settings[service_desc_key]
            assign service_image = block.settings[service_image_key]
          %}
          
          {% if service_title != blank %}
            <div class="ai-uv-printing-service-card-{{ ai_gen_id }}">
              <div class="ai-uv-printing-service-icon-{{ ai_gen_id }}">
                {% if service_image %}
                  <img src="{{ service_image | image_url: width: 100 }}" alt="{{ service_title }}" loading="lazy">
                {% else %}
                  ★
                {% endif %}
              </div>
              <h3 class="ai-uv-printing-service-title-{{ ai_gen_id }}">{{ service_title }}</h3>
              <p class="ai-uv-printing-service-desc-{{ ai_gen_id }}">{{ service_desc }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

  <section class="ai-uv-printing-section-{{ ai_gen_id }}">
    <div class="ai-uv-printing-container-{{ ai_gen_id }}">
      <h2 class="ai-uv-printing-section-title-{{ ai_gen_id }}">{{ block.settings.materials_title }}</h2>
      <div class="ai-uv-printing-materials-grid-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% liquid
            assign material_name_key = 'material_' | append: i | append: '_name'
            assign material_image_key = 'material_' | append: i | append: '_image'
            
            assign material_name = block.settings[material_name_key]
            assign material_image = block.settings[material_image_key]
          %}
          
          {% if material_name != blank %}
            <div class="ai-uv-printing-material-card-{{ ai_gen_id }}">
              <div class="ai-uv-printing-material-icon-{{ ai_gen_id }}">
                {% if material_image %}
                  <img src="{{ material_image | image_url: width: 80 }}" alt="{{ material_name }}" loading="lazy">
                {% else %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
                  </svg>
                {% endif %}
              </div>
              <div class="ai-uv-printing-material-name-{{ ai_gen_id }}">{{ material_name }}</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

