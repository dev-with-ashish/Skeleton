{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-uv-printing-{{ ai_gen_id }} {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    color: #ffffff;
    font-family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    font-weight: {{ settings.type_primary_font.weight }};
    font-style: {{ settings.type_primary_font.style }};
  }

  .ai-uv-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-uv-section-{{ ai_gen_id }} {
    padding: 60px 0;
    border-bottom: 1px solid #334155;
  }

  .ai-uv-section-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-uv-hero-{{ ai_gen_id }} {
    text-align: center;
    padding: 80px 0;
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
  }

  .ai-uv-hero-title-{{ ai_gen_id }} {
    font-size: 3.5rem;
    font-weight: 700;
    margin: 0 0 20px;
    background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .ai-uv-hero-subtitle-{{ ai_gen_id }} {
    font-size: 1.25rem;
    color: #cbd5e1;
    margin: 0 0 40px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-uv-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 40px;
  }

  .ai-uv-btn-primary-{{ ai_gen_id }} {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: #ffffff;
    padding: 15px 30px;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
  }

  .ai-uv-btn-primary-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4);
  }

  .ai-uv-btn-secondary-{{ ai_gen_id }} {
    background: transparent;
    color: #cbd5e1;
    padding: 15px 30px;
    border: 2px solid #475569;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }

  .ai-uv-btn-secondary-{{ ai_gen_id }}:hover {
    border-color: #60a5fa;
    color: #60a5fa;
    transform: translateY(-2px);
  }

  .ai-uv-rating-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    color: #cbd5e1;
    font-size: 0.9rem;
  }

  .ai-uv-stars-{{ ai_gen_id }} {
    color: #fbbf24;
  }

  .ai-uv-section-title-{{ ai_gen_id }} {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin: 0 0 50px;
    color: #ffffff;
  }

  .ai-uv-services-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
  }

  .ai-uv-service-card-{{ ai_gen_id }} {
    background: #1e293b;
    border-radius: 12px;
    padding: 30px;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid #334155;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .ai-uv-service-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
    border-color: #60a5fa;
  }

  .ai-uv-service-icon-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    margin: 0 auto 20px;
    border-radius: 12px;
    overflow: hidden;
    background: #334155;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-uv-service-icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-uv-service-icon-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
    color: #60a5fa;
  }

  .ai-uv-service-title-{{ ai_gen_id }} {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 15px;
    color: #ffffff;
  }

  .ai-uv-service-desc-{{ ai_gen_id }} {
    color: #cbd5e1;
    line-height: 1.6;
  }

  .ai-uv-materials-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 25px;
  }

  .ai-uv-material-card-{{ ai_gen_id }} {
    background: #1e293b;
    border-radius: 12px;
    padding: 25px;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid #334155;
  }

  .ai-uv-material-card-{{ ai_gen_id }}:hover {
    transform: translateY(-3px);
    border-color: #60a5fa;
  }

  .ai-uv-material-icon-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    margin: 0 auto 15px;
    border-radius: 8px;
    overflow: hidden;
    background: #334155;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-uv-material-icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-uv-material-icon-{{ ai_gen_id }} svg {
    width: 30px;
    height: 30px;
    color: #60a5fa;
  }

  .ai-uv-material-name-{{ ai_gen_id }} {
    font-size: 1.1rem;
    font-weight: 600;
    color: #ffffff;
  }

  .ai-uv-process-{{ ai_gen_id }} {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
  }

  .ai-uv-process-timeline-{{ ai_gen_id }} {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(to bottom, #3b82f6, #60a5fa, #3b82f6);
    transform: translateX(-50%);
    border-radius: 2px;
  }

  .ai-uv-process-step-{{ ai_gen_id }} {
    position: relative;
    margin-bottom: 60px;
    display: flex;
    align-items: center;
  }

  .ai-uv-process-step-{{ ai_gen_id }}:nth-child(odd) {
    flex-direction: row;
  }

  .ai-uv-process-step-{{ ai_gen_id }}:nth-child(even) {
    flex-direction: row-reverse;
  }

  .ai-uv-process-number-{{ ai_gen_id }} {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    border: 4px solid #0f172a;
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.5);
    z-index: 2;
  }

  .ai-uv-process-content-{{ ai_gen_id }} {
    background: #1e293b;
    border-radius: 12px;
    padding: 25px;
    width: calc(50% - 50px);
    border: 1px solid #334155;
    position: relative;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .ai-uv-process-step-{{ ai_gen_id }}:nth-child(odd) .ai-uv-process-content-{{ ai_gen_id }} {
    margin-right: auto;
  }

  .ai-uv-process-step-{{ ai_gen_id }}:nth-child(even) .ai-uv-process-content-{{ ai_gen_id }} {
    margin-left: auto;
  }

  .ai-uv-process-content-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 50%;
    width: 0;
    height: 0;
    border: 15px solid transparent;
    transform: translateY(-50%);
  }

  .ai-uv-process-step-{{ ai_gen_id }}:nth-child(odd) .ai-uv-process-content-{{ ai_gen_id }}::before {
    right: -30px;
    border-left-color: #1e293b;
  }

  .ai-uv-process-step-{{ ai_gen_id }}:nth-child(even) .ai-uv-process-content-{{ ai_gen_id }}::before {
    left: -30px;
    border-right-color: #1e293b;
  }

  .ai-uv-process-title-{{ ai_gen_id }} {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 10px;
    color: #ffffff;
  }

  .ai-uv-process-desc-{{ ai_gen_id }} {
    color: #cbd5e1;
    line-height: 1.6;
  }

  .ai-uv-pricing-table-{{ ai_gen_id }} {
    background: #1e293b;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid #334155;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .ai-uv-pricing-header-{{ ai_gen_id }} {
    background: #334155;
    padding: 20px;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 20px;
    font-weight: 600;
    color: #ffffff;
  }

  .ai-uv-pricing-row-{{ ai_gen_id }} {
    padding: 15px 20px;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 20px;
    border-bottom: 1px solid #334155;
    color: #cbd5e1;
  }

  .ai-uv-pricing-row-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-uv-pricing-row-{{ ai_gen_id }}:hover {
    background: #334155;
  }

  .ai-uv-form-{{ ai_gen_id }} {
    background: #1e293b;
    border-radius: 12px;
    padding: 40px;
    border: 1px solid #334155;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .ai-uv-form-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }

  .ai-uv-form-group-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-uv-form-label-{{ ai_gen_id }} {
    color: #cbd5e1;
    margin-bottom: 8px;
    font-weight: 500;
  }

  .ai-uv-form-input-{{ ai_gen_id }} {
    background: #0f172a;
    border: 1px solid #475569;
    border-radius: 8px;
    padding: 12px 16px;
    color: #ffffff;
    font-size: 1rem;
  }

  .ai-uv-form-input-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: #60a5fa;
    box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.1);
  }

  .ai-uv-form-textarea-{{ ai_gen_id }} {
    background: #0f172a;
    border: 1px solid #475569;
    border-radius: 8px;
    padding: 12px 16px;
    color: #ffffff;
    font-size: 1rem;
    min-height: 120px;
    resize: vertical;
  }

  .ai-uv-form-textarea-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: #60a5fa;
    box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.1);
  }

  .ai-uv-form-checkbox-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 20px;
  }

  .ai-uv-form-checkbox-{{ ai_gen_id }} input {
    width: 18px;
    height: 18px;
  }

  .ai-uv-contact-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
  }

  .ai-uv-contact-card-{{ ai_gen_id }} {
    background: #1e293b;
    border-radius: 12px;
    padding: 30px;
    border: 1px solid #334155;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .ai-uv-contact-title-{{ ai_gen_id }} {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 20px;
    color: #ffffff;
  }

  .ai-uv-contact-info-{{ ai_gen_id }} {
    color: #cbd5e1;
    line-height: 1.8;
  }

  .ai-uv-gallery-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 25px;
  }

  .ai-uv-gallery-item-{{ ai_gen_id }} {
    background: #1e293b;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid #334155;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .ai-uv-gallery-item-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
    border-color: #60a5fa;
  }

  .ai-uv-gallery-image-{{ ai_gen_id }} {
    width: 100%;
    height: 250px;
    overflow: hidden;
    background: #334155;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-uv-gallery-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-uv-gallery-image-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    color: #60a5fa;
  }

  .ai-uv-gallery-content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-uv-gallery-title-{{ ai_gen_id }} {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 10px;
    color: #ffffff;
  }

  .ai-uv-gallery-desc-{{ ai_gen_id }} {
    color: #cbd5e1;
    line-height: 1.6;
    margin: 0;
  }

  .ai-uv-faq-list-{{ ai_gen_id }} {
    max-width: 800px;
    margin: 0 auto;
  }

  .ai-uv-faq-item-{{ ai_gen_id }} {
    background: #1e293b;
    border-radius: 12px;
    margin-bottom: 20px;
    border: 1px solid #334155;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .ai-uv-faq-question-{{ ai_gen_id }} {
    width: 100%;
    background: none;
    border: none;
    padding: 25px;
    text-align: left;
    font-size: 1.1rem;
    font-weight: 600;
    color: #ffffff;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.3s ease;
  }

  .ai-uv-faq-question-{{ ai_gen_id }}:hover {
    background: #334155;
  }

  .ai-uv-faq-icon-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
    color: #60a5fa;
  }

  .ai-uv-faq-item-{{ ai_gen_id }}.active .ai-uv-faq-icon-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .ai-uv-faq-answer-{{ ai_gen_id }} {
    padding: 0 25px;
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease;
    color: #cbd5e1;
    line-height: 1.6;
  }

  .ai-uv-faq-item-{{ ai_gen_id }}.active .ai-uv-faq-answer-{{ ai_gen_id }} {
    padding: 0 25px 25px;
    max-height: 200px;
  }

  @media (max-width: 768px) {
    .ai-uv-hero-title-{{ ai_gen_id }} {
      font-size: 2.5rem;
    }

    .ai-uv-section-title-{{ ai_gen_id }} {
      font-size: 2rem;
    }

    .ai-uv-hero-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: center;
    }

    .ai-uv-process-timeline-{{ ai_gen_id }} {
      left: 30px;
    }

    .ai-uv-process-step-{{ ai_gen_id }} {
      flex-direction: row !important;
      padding-left: 80px;
    }

    .ai-uv-process-number-{{ ai_gen_id }} {
      left: 30px;
      transform: none;
    }

    .ai-uv-process-content-{{ ai_gen_id }} {
      width: 100%;
      margin: 0 !important;
    }

    .ai-uv-process-content-{{ ai_gen_id }}::before {
      left: -30px !important;
      right: auto !important;
      border-right-color: #1e293b !important;
      border-left-color: transparent !important;
    }

    .ai-uv-pricing-header-{{ ai_gen_id }},
    .ai-uv-pricing-row-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 10px;
    }

    .ai-uv-form-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-uv-contact-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-uv-gallery-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<uv-printing-service-{{ ai_gen_id }} class="ai-uv-printing-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <!-- Hero Section -->
  <section class="ai-uv-hero-{{ ai_gen_id }}">
    <div class="ai-uv-container-{{ ai_gen_id }}">
      <h1 class="ai-uv-hero-title-{{ ai_gen_id }}">{{ block.settings.hero_title }}</h1>
      <p class="ai-uv-hero-subtitle-{{ ai_gen_id }}">{{ block.settings.hero_subtitle }}</p>
      
      <div class="ai-uv-hero-buttons-{{ ai_gen_id }}">
        {% if block.settings.primary_button_text != blank %}
          <a href="{{ block.settings.primary_button_link }}" class="ai-uv-btn-primary-{{ ai_gen_id }}">
            {{ block.settings.primary_button_text }}
          </a>
        {% endif %}
        {% if block.settings.secondary_button_text != blank %}
          <a href="{{ block.settings.secondary_button_link }}" class="ai-uv-btn-secondary-{{ ai_gen_id }}">
            {{ block.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>

      <div class="ai-uv-rating-{{ ai_gen_id }}">
        <div class="ai-uv-stars-{{ ai_gen_id }}">★★★★★</div>
        <span>{{ block.settings.rating_text }}</span>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="ai-uv-section-{{ ai_gen_id }}">
    <div class="ai-uv-container-{{ ai_gen_id }}">
      <h2 class="ai-uv-section-title-{{ ai_gen_id }}">{{ block.settings.services_title }}</h2>
      <div class="ai-uv-services-grid-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign service_title_key = 'service_' | append: i | append: '_title'
            assign service_desc_key = 'service_' | append: i | append: '_description'
            assign service_image_key = 'service_' | append: i | append: '_image'
            
            assign service_title = block.settings[service_title_key]
            assign service_desc = block.settings[service_desc_key]
            assign service_image = block.settings[service_image_key]
          %}
          
          {% if service_title != blank %}
            <div class="ai-uv-service-card-{{ ai_gen_id }}">
              <div class="ai-uv-service-icon-{{ ai_gen_id }}">
                {% if service_image %}
                  <img src="{{ service_image | image_url: width: 160 }}" alt="{{ service_title }}" loading="lazy">
                {% else %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                  </svg>
                {% endif %}
              </div>
              <h3 class="ai-uv-service-title-{{ ai_gen_id }}">{{ service_title }}</h3>
              <p class="ai-uv-service-desc-{{ ai_gen_id }}">{{ service_desc }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- Materials Section -->
