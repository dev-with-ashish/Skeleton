<script>
  (function() {
    class UVPrintingService{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupFAQ();
      }

      setupFAQ() {
        const faqQuestions = this.querySelectorAll('.ai-uv-faq-question-{{ ai_gen_id }}');
        
        faqQuestions.forEach(question => {
          question.addEventListener('click', () => {
            const faqItem = question.closest('.ai-uv-faq-item-{{ ai_gen_id }}');
            const isActive = faqItem.classList.contains('active');
            
            // Close all other FAQ items
            this.querySelectorAll('.ai-uv-faq-item-{{ ai_gen_id }}').forEach(item => {
              item.classList.remove('active');
            });
            
            // Toggle current item
            if (!isActive) {
              faqItem.classList.add('active');
            }
          });
        });
      }
    }

    customElements.define('uv-printing-service-{{ ai_gen_id }}', UVPrintingService{{ ai_gen_id }});
  })();
</script>

