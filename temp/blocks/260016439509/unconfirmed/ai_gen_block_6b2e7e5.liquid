    align-items: center;
    gap: 12px;
    padding: 16px 32px;
    background-color: #25D366;
    color: white;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
