{% doc %}
  @prompt
    contact us page best styled

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-page-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-contact-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 60px;
  }

  .ai-contact-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-contact-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .ai-contact-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }

  .ai-contact-form-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.form_background_color }};
    padding: 40px;
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .ai-contact-form-title-{{ ai_gen_id }} {
    font-size: 24px;
    color: {{ block.settings.text_color }};
    margin: 0 0 24px;
    font-weight: 600;
  }

  .ai-contact-form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ai-contact-form-group-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-contact-form-row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
  }

  .ai-contact-label-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 500;
    color: {{ block.settings.text_color }};
  }

  .ai-contact-input-{{ ai_gen_id }},
  .ai-contact-textarea-{{ ai_gen_id }} {
    padding: 12px 16px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 16px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.text_color }};
    transition: border-color 0.3s ease;
  }

  .ai-contact-input-{{ ai_gen_id }}:focus,
  .ai-contact-textarea-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.accent_color }};
  }

  .ai-contact-textarea-{{ ai_gen_id }} {
    min-height: 120px;
    resize: vertical;
  }

  .ai-contact-submit-{{ ai_gen_id }} {
    padding: 16px 32px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .ai-contact-submit-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-2px);
  }

  .ai-contact-info-section-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .ai-contact-info-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    padding: 32px;
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    border-left: 4px solid {{ block.settings.accent_color }};
  }

  .ai-contact-info-icon-{{ ai_gen_id }} {
    width: 48px;
    height: 48px;
    background-color: {{ block.settings.accent_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
    color: white;
  }

  .ai-contact-info-title-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px;
  }

  .ai-contact-info-text-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    line-height: 1.5;
  }

  .ai-contact-success-{{ ai_gen_id }} {
    background-color: #d4edda;
    color: #155724;
    padding: 16px;
    border-radius: {{ block.settings.input_border_radius }}px;
    margin-bottom: 20px;
    border: 1px solid #c3e6cb;
  }

  .ai-contact-error-{{ ai_gen_id }} {
    background-color: #f8d7da;
    color: #721c24;
    padding: 16px;
    border-radius: {{ block.settings.input_border_radius }}px;
    margin-bottom: 20px;
    border: 1px solid #f5c6cb;
  }

  @media screen and (max-width: 768px) {
    .ai-contact-page-{{ ai_gen_id }} {
      padding: 40px 16px;
    }

    .ai-contact-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-contact-form-section-{{ ai_gen_id }},
    .ai-contact-info-card-{{ ai_gen_id }} {
      padding: 24px;
    }

    .ai-contact-form-row-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-contact-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-contact-page-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-contact-header-{{ ai_gen_id }}">
    {% if block.settings.page_title != blank %}
      <h1 class="ai-contact-title-{{ ai_gen_id }}">{{ block.settings.page_title }}</h1>
    {% endif %}
    {% if block.settings.page_subtitle != blank %}
      <div class="ai-contact-subtitle-{{ ai_gen_id }}">{{ block.settings.page_subtitle }}</div>
    {% endif %}
  </div>

  <div class="ai-contact-content-{{ ai_gen_id }}">
    <div class="ai-contact-form-section-{{ ai_gen_id }}">
      <h2 class="ai-contact-form-title-{{ ai_gen_id }}">{{ block.settings.form_title }}</h2>
      
      {% form 'contact' %}
        {% if form.posted_successfully? %}
          <div class="ai-contact-success-{{ ai_gen_id }}">
            {{ block.settings.success_message }}
          </div>
        {% endif %}

        {% if form.errors %}
          <div class="ai-contact-error-{{ ai_gen_id }}">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <div class="ai-contact-form-{{ ai_gen_id }}">
          <div class="ai-contact-form-row-{{ ai_gen_id }}">
            <div class="ai-contact-form-group-{{ ai_gen_id }}">
              <label for="contact-name-{{ ai_gen_id }}" class="ai-contact-label-{{ ai_gen_id }}">Name *</label>
              <input
                type="text"
                id="contact-name-{{ ai_gen_id }}"
                name="contact[name]"
                class="ai-contact-input-{{ ai_gen_id }}"
                value="{% if form.name %}{{ form.name }}{% endif %}"
                required
              >
            </div>
            <div class="ai-contact-form-group-{{ ai_gen_id }}">
              <label for="contact-email-{{ ai_gen_id }}" class="ai-contact-label-{{ ai_gen_id }}">Email *</label>
              <input
                type="email"
                id="contact-email-{{ ai_gen_id }}"
                name="contact[email]"
                class="ai-contact-input-{{ ai_gen_id }}"
                value="{% if form.email %}{{ form.email }}{% endif %}"
                autocomplete="email"
                required
              >
            </div>
          </div>

          <div class="ai-contact-form-group-{{ ai_gen_id }}">
            <label for="contact-phone-{{ ai_gen_id }}" class="ai-contact-label-{{ ai_gen_id }}">Phone</label>
            <input
              type="tel"
              id="contact-phone-{{ ai_gen_id }}"
              name="contact[phone]"
              class="ai-contact-input-{{ ai_gen_id }}"
              value="{% if form.phone %}{{ form.phone }}{% endif %}"
              autocomplete="tel"
            >
          </div>

          <div class="ai-contact-form-group-{{ ai_gen_id }}">
            <label for="contact-subject-{{ ai_gen_id }}" class="ai-contact-label-{{ ai_gen_id }}">Subject *</label>
            <input
              type="text"
              id="contact-subject-{{ ai_gen_id }}"
              name="contact[subject]"
              class="ai-contact-input-{{ ai_gen_id }}"
              value="{% if form.subject %}{{ form.subject }}{% endif %}"
              required
            >
          </div>

          <div class="ai-contact-form-group-{{ ai_gen_id }}">
            <label for="contact-message-{{ ai_gen_id }}" class="ai-contact-label-{{ ai_gen_id }}">Message *</label>
            <textarea
              id="contact-message-{{ ai_gen_id }}"
              name="contact[body]"
              class="ai-contact-textarea-{{ ai_gen_id }}"
              required
            >{% if form.body %}{{ form.body }}{% endif %}</textarea>
          </div>

          <button type="submit" class="ai-contact-submit-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </button>
        </div>
      {% endform %}
    </div>

    <div class="ai-contact-info-section-{{ ai_gen_id }}">
      {% if block.settings.show_email_info %}
        <div class="ai-contact-info-card-{{ ai_gen_id }}">
          <div class="ai-contact-info-icon-{{ ai_gen_id }}">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <h3 class="ai-contact-info-title-{{ ai_gen_id }}">Email us</h3>
          <div class="ai-contact-info-text-{{ ai_gen_id }}">{{ block.settings.email_text }}</div>
        </div>
      {% endif %}

      {% if block.settings.show_phone_info %}
        <div class="ai-contact-info-card-{{ ai_gen_id }}">
          <div class="ai-contact-info-icon-{{ ai_gen_id }}">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </div>
          <h3 class="ai-contact-info-title-{{ ai_gen_id }}">Call us</h3>
          <div class="ai-contact-info-text-{{ ai_gen_id }}">{{ block.settings.phone_text }}</div>
        </div>
      {% endif %}

      {% if block.settings.show_address_info %}
        <div class="ai-contact-info-card-{{ ai_gen_id }}">
          <div class="ai-contact-info-icon-{{ ai_gen_id }}">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
          </div>
          <h3 class="ai-contact-info-title-{{ ai_gen_id }}">Visit us</h3>
          <div class="ai-contact-info-text-{{ ai_gen_id }}">{{ block.settings.address_text }}</div>
        </div>
      {% endif %}

      {% if block.settings.show_hours_info %}
        <div class="ai-contact-info-card-{{ ai_gen_id }}">
          <div class="ai-contact-info-icon-{{ ai_gen_id }}">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12,6 12,12 16,14"></polyline>
            </svg>
          </div>
          <h3 class="ai-contact-info-title-{{ ai_gen_id }}">Business hours</h3>
          <div class="ai-contact-info-text-{{ ai_gen_id }}">{{ block.settings.hours_text }}</div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

