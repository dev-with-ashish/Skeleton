{% doc %}
  @prompt
    a section which will have three layers main content area which can be adjusted with padding margin above that a transparent layer to select transparent png and option to assign percentage wise coverage for left to right coverage and top to bottom coverge
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-layered-content-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-layered-content__main-{{ ai_gen_id }} {
    position: relative;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    padding-left: {{ block.settings.padding_left }}px;
    padding-right: {{ block.settings.padding_right }}px;
    margin-top: {{ block.settings.margin_top }}px;
    margin-bottom: {{ block.settings.margin_bottom }}px;
    background-color: {{ block.settings.background_color }};
    min-height: {{ block.settings.min_height }}px;
    z-index: 1;
  }

  .ai-layered-content__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: {{ block.settings.horizontal_coverage }}%;
    height: {{ block.settings.vertical_coverage }}%;
    z-index: 2;
    pointer-events: none;
    background-size: cover;
    background-position: top left;
    background-repeat: no-repeat;
  }

  .ai-layered-content__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    color: {{ block.settings.text_color }};
  }

  .ai-layered-content__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
  }

  .ai-layered-content__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-layered-content__main-{{ ai_gen_id }} {
      padding-top: {{ block.settings.padding_top | times: 0.7 | round }}px;
      padding-bottom: {{ block.settings.padding_bottom | times: 0.7 | round }}px;
      padding-left: {{ block.settings.padding_left | times: 0.7 | round }}px;
      padding-right: {{ block.settings.padding_right | times: 0.7 | round }}px;
    }

    .ai-layered-content__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 | round }}px;
    }

    .ai-layered-content__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 | round }}px;
    }
  }
{% endstyle %}

<div class="ai-layered-content-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-layered-content__main-{{ ai_gen_id }}">
    {% if block.settings.overlay_image %}
      <div 
        class="ai-layered-content__overlay-{{ ai_gen_id }}"
        style="background-image: url('{{ block.settings.overlay_image | image_url: width: 2000 }}');"
      ></div>
    {% endif %}

    <div class="ai-layered-content__content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-layered-content__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="ai-layered-content__text-{{ ai_gen_id }}">
          {{ block.settings.text }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

