{% doc %}
  @prompt
    a section which will have three layers main content area which can be adjusted with padding margin above that a transparent layer to select transparent png and option to assign percentage wise coverage for left to right coverage and top to bottom coverge, Add your content here with customizable spacing and overlay effects. intead of text i want a navigation area here having margin from left and right as compared to the transparent one 
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-layered-content-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-layered-content__main-{{ ai_gen_id }} {
    position: relative;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    padding-left: {{ block.settings.padding_left }}px;
    padding-right: {{ block.settings.padding_right }}px;
    margin-top: {{ block.settings.margin_top }}px;
    margin-bottom: {{ block.settings.margin_bottom }}px;
    background-color: {{ block.settings.background_color }};
    min-height: {{ block.settings.min_height }}px;
    z-index: 1;
  }

  .ai-layered-content__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: {{ block.settings.horizontal_coverage }}%;
    height: {{ block.settings.vertical_coverage }}%;
    z-index: 2;
    pointer-events: none;
    background-size: cover;
    background-position: top left;
    background-repeat: no-repeat;
  }

  .ai-layered-content__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    color: {{ block.settings.text_color }};
  }

  .ai-layered-content__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
  }

  .ai-layered-content__nav-{{ ai_gen_id }} {
    margin-left: {{ block.settings.nav_margin_left }}px;
    margin-right: {{ block.settings.nav_margin_right }}px;
    margin-top: {{ block.settings.nav_margin_top }}px;
  }

  .ai-layered-content__nav-list-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.nav_gap }}px;
    justify-content: {{ block.settings.nav_alignment }};
  }

  .ai-layered-content__nav-item-{{ ai_gen_id }} {
    margin: 0;
  }

  .ai-layered-content__nav-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.nav_link_padding_vertical }}px {{ block.settings.nav_link_padding_horizontal }}px;
    color: {{ block.settings.nav_link_color }};
    text-decoration: none;
    font-size: {{ block.settings.nav_link_size }}px;
    border-radius: {{ block.settings.nav_link_border_radius }}px;
    background-color: {{ block.settings.nav_link_bg_color }};
    transition: all 0.3s ease;
  }

  .ai-layered-content__nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.nav_link_hover_color }};
    background-color: {{ block.settings.nav_link_hover_bg_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-layered-content__main-{{ ai_gen_id }} {
      padding-top: {{ block.settings.padding_top | times: 0.7 | round }}px;
      padding-bottom: {{ block.settings.padding_bottom | times: 0.7 | round }}px;
      padding-left: {{ block.settings.padding_left | times: 0.7 | round }}px;
      padding-right: {{ block.settings.padding_right | times: 0.7 | round }}px;
    }

    .ai-layered-content__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 | round }}px;
    }

    .ai-layered-content__nav-{{ ai_gen_id }} {
      margin-left: {{ block.settings.nav_margin_left | times: 0.7 | round }}px;
      margin-right: {{ block.settings.nav_margin_right | times: 0.7 | round }}px;
    }

    .ai-layered-content__nav-list-{{ ai_gen_id }} {
      gap: {{ block.settings.nav_gap | times: 0.7 | round }}px;
    }

    .ai-layered-content__nav-link-{{ ai_gen_id }} {
      font-size: {{ block.settings.nav_link_size | times: 0.9 | round }}px;
      padding: {{ block.settings.nav_link_padding_vertical | times: 0.8 | round }}px {{ block.settings.nav_link_padding_horizontal | times: 0.8 | round }}px;
    }
  }
{% endstyle %}

<div class="ai-layered-content-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-layered-content__main-{{ ai_gen_id }}">
    {% if block.settings.overlay_image %}
      <div 
        class="ai-layered-content__overlay-{{ ai_gen_id }}"
        style="background-image: url('{{ block.settings.overlay_image | image_url: width: 2000 }}');"
      ></div>
    {% endif %}

    <div class="ai-layered-content__content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-layered-content__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      <nav class="ai-layered-content__nav-{{ ai_gen_id }}">
        <ul class="ai-layered-content__nav-list-{{ ai_gen_id }}">
          {% if block.settings.nav_link_1_text != blank %}
            <li class="ai-layered-content__nav-item-{{ ai_gen_id }}">
              <a href="{{ block.settings.nav_link_1_url }}" class="ai-layered-content__nav-link-{{ ai_gen_id }}">
                {{ block.settings.nav_link_1_text }}
              </a>
            </li>
          {% endif %}

          {% if block.settings.nav_link_2_text != blank %}
            <li class="ai-layered-content__nav-item-{{ ai_gen_id }}">
              <a href="{{ block.settings.nav_link_2_url }}" class="ai-layered-content__nav-link-{{ ai_gen_id }}">
                {{ block.settings.nav_link_2_text }}
              </a>
            </li>
          {% endif %}

          {% if block.settings.nav_link_3_text != blank %}
            <li class="ai-layered-content__nav-item-{{ ai_gen_id }}">
              <a href="{{ block.settings.nav_link_3_url }}" class="ai-layered-content__nav-link-{{ ai_gen_id }}">
                {{ block.settings.nav_link_3_text }}
              </a>
            </li>
          {% endif %}

          {% if block.settings.nav_link_4_text != blank %}
            <li class="ai-layered-content__nav-item-{{ ai_gen_id }}">
              <a href="{{ block.settings.nav_link_4_url }}" class="ai-layered-content__nav-link-{{ ai_gen_id }}">
                {{ block.settings.nav_link_4_text }}
              </a>
            </li>
          {% endif %}

          {% if block.settings.nav_link_5_text != blank %}
            <li class="ai-layered-content__nav-item-{{ ai_gen_id }}">
              <a href="{{ block.settings.nav_link_5_url }}" class="ai-layered-content__nav-link-{{ ai_gen_id }}">
                {{ block.settings.nav_link_5_text }}
              </a>
            </li>
          {% endif %}

          {% if block.settings.nav_link_6_text != blank %}
            <li class="ai-layered-content__nav-item-{{ ai_gen_id }}">
              <a href="{{ block.settings.nav_link_6_url }}" class="ai-layered-content__nav-link-{{ ai_gen_id }}">
                {{ block.settings.nav_link_6_text }}
              </a>
            </li>
          {% endif %}
        </ul>
      </nav>
    </div>
  </div>
</div>

