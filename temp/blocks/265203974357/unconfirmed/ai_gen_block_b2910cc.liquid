<nameplate-customizer-{{ ai_gen_id }}
  class="ai-nameplate-container-{{ ai_gen_id }}"
  data-font-family="{{ block.settings.text_font.family }}"
  data-font-weight="{{ block.settings.text_font.weight | default: 400 }}"
  data-font-style="{{ block.settings.text_font.style | default: 'normal' }}"
  data-font-fallback="{{ block.settings.text_font.fallback_families }}"
  data-font-family-2="{{ block.settings.text_font_2.family }}"
  data-font-weight-2="{{ block.settings.text_font_2.weight | default: 400 }}"
  data-font-style-2="{{ block.settings.text_font_2.style | default: 'normal' }}"
  data-font-fallback-2="{{ block.settings.text_font_2.fallback_families }}"
  data-show-layer-2="{{ block.settings.show_layer_2 }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-nameplate-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.product and block.settings.product.featured_image %}
      <img
        src="{{ block.settings.product.featured_image | image_url: width: 1000 }}"
        alt="{{ block.settings.product.featured_image.alt | escape }}"
        class="ai-nameplate-image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.product.featured_image.width }}"
        height="{{ block.settings.product.featured_image.height }}"
      >
    {% else %}
      <div class="ai-nameplate-placeholder-{{ ai_gen_id }}">
        {{ 'product-apparel-1' | placeholder_svg_tag }}
        <div class="ai-nameplate-empty-state-{{ ai_gen_id }}">
          Select a product to display nameplate
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_layer_2 %}
      <div class="ai-nameplate-text-overlay-2-{{ ai_gen_id }}">
        <div class="ai-nameplate-text-display-2-{{ ai_gen_id }}" data-text-display-2>
          {{ block.settings.default_text }}
        </div>
      </div>
    {% endif %}

    <div class="ai-nameplate-text-overlay-{{ ai_gen_id }}">
      <div class="ai-nameplate-text-display-{{ ai_gen_id }}" data-text-display>
        {{ block.settings.default_text }}
      </div>
    </div>
  </div>

  <div class="ai-nameplate-controls-{{ ai_gen_id }}">
    <div class="ai-nameplate-input-wrapper-{{ ai_gen_id }}">
      {% if block.settings.show_label %}
        <label class="ai-nameplate-label-{{ ai_gen_id }}" for="nameplate-input-{{ ai_gen_id }}">
          {{ block.settings.input_label }}
        </label>
      {% endif %}
      
      <input
        type="text"
        id="nameplate-input-{{ ai_gen_id }}"
        class="ai-nameplate-input-{{ ai_gen_id }}"
        placeholder="{{ block.settings.placeholder_text }}"
        maxlength="{{ block.settings.max_characters }}"
        data-text-input
        autocomplete="off"
      >
      
      {% if block.settings.show_character_count %}
        <div class="ai-nameplate-character-count-{{ ai_gen_id }}" data-character-count>
          0 / {{ block.settings.max_characters }}
        </div>
      {% endif %}

      {% if block.settings.show_font_preview %}
        <div class="ai-nameplate-font-preview-{{ ai_gen_id }}">
          <div class="ai-nameplate-font-preview-item-{{ ai_gen_id }} ai-nameplate-font-preview-1-{{ ai_gen_id }}">
            Layer 1: {{ block.settings.text_font.family | replace: '_', ' ' | capitalize }}
          </div>
          {% if block.settings.show_layer_2 %}
            <div class="ai-nameplate-font-preview-item-{{ ai_gen_id }} ai-nameplate-font-preview-2-{{ ai_gen_id }}">
              Layer 2: {{ block.settings.text_font_2.family | replace: '_', ' ' | capitalize }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</nameplate-customizer-{{ ai_gen_id }}>

<script>
  (function() {
    class NameplateCustomizer{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.textInput = null;
        this.textDisplay = null;
        this.textDisplay2 = null;
        this.characterCount = null;
        this.fontFamily = '';
        this.fontWeight = '';
        this.fontStyle = '';
        this.fontFallback = '';
        this.fontFamily2 = '';
        this.fontWeight2 = '';
        this.fontStyle2 = '';
        this.fontFallback2 = '';
        this.showLayer2 = false;
      }

      connectedCallback() {
        this.textInput = this.querySelector('[data-text-input]');
        this.textDisplay = this.querySelector('[data-text-display]');
        this.textDisplay2 = this.querySelector('[data-text-display-2]');
        this.characterCount = this.querySelector('[data-character-count]');
        
        this.fontFamily = this.dataset.fontFamily || 'helvetica';
        this.fontWeight = this.dataset.fontWeight || '400';
        this.fontStyle = this.dataset.fontStyle || 'normal';
        this.fontFallback = this.dataset.fontFallback || 'sans-serif';
        
        this.fontFamily2 = this.dataset.fontFamily2 || 'helvetica';
        this.fontWeight2 = this.dataset.fontWeight2 || '400';
        this.fontStyle2 = this.dataset.fontStyle2 || 'normal';
        this.fontFallback2 = this.dataset.fontFallback2 || 'sans-serif';
        
        this.showLayer2 = this.dataset.showLayer2 === 'true';

        if (this.textInput && this.textDisplay) {
          this.setupEventListeners();
          this.updateDisplay();
          this.applyFonts();
        }
      }

      setupEventListeners() {
        this.textInput.addEventListener('input', () => {
          this.updateDisplay();
          this.updateCharacterCount();
        });

        this.textInput.addEventListener('keyup', () => {
          this.updateDisplay();
        });

        this.textInput.addEventListener('paste', () => {
          setTimeout(() => {
            this.updateDisplay();
            this.updateCharacterCount();
          }, 10);
        });

        this.textInput.addEventListener('focus', () => {
          if (!this.textInput.value.trim()) {
            this.textDisplay.textContent = '';
            if (this.textDisplay2 && this.showLayer2) {
              this.textDisplay2.textContent = '';
            }
          }
        });

        this.textInput.addEventListener('blur', () => {
          if (!this.textInput.value.trim()) {
            this.textDisplay.textContent = '{{ block.settings.default_text | escape }}';
            if (this.textDisplay2 && this.showLayer2) {
              this.textDisplay2.textContent = '{{ block.settings.default_text | escape }}';
            }
          }
        });
      }

      updateDisplay() {
        const inputValue = this.textInput.value.trim();
        const defaultText = '{{ block.settings.default_text | escape }}';
        
        if (inputValue) {
          this.textDisplay.textContent = inputValue;
          if (this.textDisplay2 && this.showLayer2) {
            this.textDisplay2.textContent = inputValue;
          }
        } else if (document.activeElement !== this.textInput) {
          this.textDisplay.textContent = defaultText;
          if (this.textDisplay2 && this.showLayer2) {
            this.textDisplay2.textContent = defaultText;
          }
        }
      }

      updateCharacterCount() {
        if (this.characterCount) {
          const currentLength = this.textInput.value.length;
          const maxLength = {{ block.settings.max_characters }};
          this.characterCount.textContent = `${currentLength} / ${maxLength}`;
          
          if (currentLength >= maxLength * 0.9) {
            this.characterCount.style.color = '#d82c0d';
          } else {
            this.characterCount.style.color = '{{ block.settings.label_color }}';
          }
        }
      }

      applyFonts() {
        const fullFontFamily = `${this.fontFamily}, ${this.fontFallback}`;
        const fullFontFamily2 = `${this.fontFamily2}, ${this.fontFallback2}`;
        
        this.textDisplay.style.setProperty('font-family', fullFontFamily, 'important');
        this.textDisplay.style.setProperty('font-weight', this.fontWeight, 'important');
        this.textDisplay.style.setProperty('font-style', this.fontStyle, 'important');

        if (this.textDisplay2 && this.showLayer2) {
          this.textDisplay2.style.setProperty('font-family', fullFontFamily2, 'important');
          this.textDisplay2.style.setProperty('font-weight', this.fontWeight2, 'important');
          this.textDisplay2.style.setProperty('font-style', this.fontStyle2, 'important');
        }

        if ('fonts' in document) {
          const fontDescriptor = `${this.fontWeight} ${this.fontStyle} 16px ${this.fontFamily}`;
          const fontDescriptor2 = `${this.fontWeight2} ${this.fontStyle2} 16px ${this.fontFamily2}`;
          
          document.fonts.load(fontDescriptor).then(() => {
            this.textDisplay.style.setProperty('font-family', fullFontFamily, 'important');
          }).catch(() => {
            this.textDisplay.style.setProperty('font-family', this.fontFallback, 'important');
          });

          if (this.textDisplay2 && this.showLayer2) {
            document.fonts.load(fontDescriptor2).then(() => {
              this.textDisplay2.style.setProperty('font-family', fullFontFamily2, 'important');
            }).catch(() => {
              this.textDisplay2.style.setProperty('font-family', this.fontFallback2, 'important');
            });
          }

          document.fonts.ready.then(() => {
            this.textDisplay.style.setProperty('font-family', fullFontFamily, 'important');
            if (this.textDisplay2 && this.showLayer2) {
              this.textDisplay2.style.setProperty('font-family', fullFontFamily2, 'important');
            }
          });
        }
      }
    }

    customElements.define('nameplate-customizer-{{ ai_gen_id }}', NameplateCustomizer{{ ai_gen_id }});
  })();
</script>

