  .ai-nameplate-font-preview-1-{{ ai_gen_id }} {
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight | default: 400 }};
    font-style: {{ block.settings.text_font.style | default: 'normal' }};
