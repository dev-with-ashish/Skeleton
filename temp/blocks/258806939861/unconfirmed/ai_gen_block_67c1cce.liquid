{% doc %}
  @prompt
    A magazine-style editorial layout

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-layout-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    color: {{ block.settings.text_color }};
  }

  .ai-editorial-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 60px;
    border-bottom: 1px solid {{ block.settings.accent_color }};padding-bottom: 40px;
  }

  .ai-editorial-category-{{ ai_gen_id }} {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: {{ block.settings.accent_color }};
    margin-bottom: 15px;font-weight: 600;
  }

  .ai-editorial-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.title_size }}px;
    line-height: 1.2;
    margin: 0 0 20px;
    color: {{ block.settings.heading_color }};}

  .ai-editorial-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    line-height: 1.4;
    color: {{ block.settings.subtitle_color }};
    font-style: italic;
    margin: 0 0 25px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-editorial-meta-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    font-size: 14px;
    color: {{ block.settings.meta_color }};}

  .ai-editorial-author-{{ ai_gen_id }} {
    font-weight: 600;}

  .ai-editorial-date-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-editorial-date-{{ ai_gen_id }}::before {
    content: '•';
    margin-right: 20px;
  }

  .ai-editorial-hero-image-{{ ai_gen_id }} {
    margin-bottom: 50px;
    position: relative;
  }

  .ai-editorial-hero-image-{{ ai_gen_id }} img {
    width: 100%;
    height: {{ block.settings.hero_height }}px;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-editorial-hero-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.hero_height }}px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    opacity: 0.3;
  }

  .ai-editorial-caption-{{ ai_gen_id }} {
    font-size: 13px;
    color: {{ block.settings.caption_color }};
    font-style: italic;
    text-align: center;
    margin-top: 15px;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-editorial-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 60px;
    margin-bottom: 50px;
  }

  .ai-editorial-main-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_text_size }}px;
    line-height: 1.7;
  }

  .ai-editorial-main-{{ ai_gen_id }} p {
    margin-bottom: 25px;
  }

  .ai-editorial-main-{{ ai_gen_id }} p:first-of-type::first-letter {
    font-size: 4em;
    line-height: 1;
    float: left;
    margin: 0 8px 0 0;
    font-weight: bold;
    color: {{ block.settings.accent_color }};
  }

  .ai-editorial-sidebar-{{ ai_gen_id }} {
    padding: 30px;
    background-color: {{ block.settings.sidebar_bg_color }};
    border-radius: {{ block.settings.sidebar_border_radius }}px;
    height: fit-content;
    position: sticky;
    top: 20px;
  }

  .ai-editorial-sidebar-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: 18px;
    margin: 0 0 20px;
    color: {{ block.settings.heading_color }};
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-editorial-sidebar-content-{{ ai_gen_id }} {
    font-size: 14px;
    line-height: 1.6;
  }

  .ai-editorial-sidebar-content-{{ ai_gen_id }} p {
    margin-bottom: 15px;
  }

  .ai-editorial-quote-{{ ai_gen_id }} {
    margin: 40px 0;
    padding: 30px;
    background-color: {{ block.settings.quote_bg_color }};
    border-left: 4px solid {{ block.settings.accent_color }};
    border-radius: 0 {{ block.settings.quote_border_radius }}px {{ block.settings.quote_border_radius }}px 0;
  }

  .ai-editorial-quote-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_text_size }}px;
    line-height: 1.5;
    font-style: italic;
    margin: 0 0 15px;
    color: {{ block.settings.quote_text_color }};
  }

  .ai-editorial-quote-author-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 600;
    color: {{ block.settings.accent_color }};
    text-align: right;
  }

  .ai-editorial-quote-author-{{ ai_gen_id }}::before {
    content: '— ';
  }

  .ai-editorial-gallery-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.gallery_columns }}, 1fr);
    gap: 20px;
    margin: 50px 0;
  }

  .ai-editorial-gallery-item-{{ ai_gen_id }} img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-editorial-gallery-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 250px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-editorial-gallery-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  @media screen and (max-width: 768px) {
    .ai-editorial-layout-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.7 }}px 15px;
    }

    .ai-editorial-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-editorial-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }

    .ai-editorial-meta-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 10px;
    }

    .ai-editorial-date-{{ ai_gen_id }}::before {
      display: none;
    }

    .ai-editorial-hero-image-{{ ai_gen_id }} img,
    .ai-editorial-hero-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.hero_height | times: 0.7 }}px;
    }

    .ai-editorial-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-editorial-sidebar-{{ ai_gen_id }} {
      position: static;
      order: -1;
    }

    .ai-editorial-main-{{ ai_gen_id }} p:first-of-type::first-letter {
      font-size: 3em;
    }

    .ai-editorial-gallery-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.gallery_columns_mobile }}, 1fr);
      gap: 15px;
    }

    .ai-editorial-gallery-item-{{ ai_gen_id }} img,
    .ai-editorial-gallery-placeholder-{{ ai_gen_id }} {
      height: 200px;
    }
  }
{% endstyle %}<article class="ai-editorial-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <header class="ai-editorial-header-{{ ai_gen_id }}">
    {% if block.settings.category != blank %}
      <div class="ai-editorial-category-{{ ai_gen_id }}">{{ block.settings.category }}</div>
    {% endif %}
    
    {% if block.settings.title != blank %}
      <h1 class="ai-editorial-title-{{ ai_gen_id }}">{{ block.settings.title }}</h1>
    {% endif %}
    
    {% if block.settings.subtitle != blank %}
      <div class="ai-editorial-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
    {% endif %}<div class="ai-editorial-meta-{{ ai_gen_id }}">
      {% if block.settings.author != blank %}
        <div class="ai-editorial-author-{{ ai_gen_id }}">{{ block.settings.author }}</div>
      {% endif %}
      {% if block.settings.date != blank %}
        <div class="ai-editorial-date-{{ ai_gen_id }}">{{ block.settings.date }}</div>
      {% endif %}
    </div>
  </header>

  {% if block.settings.hero_image != blank or block.settings.show_hero_placeholder %}
    <div class="ai-editorial-hero-image-{{ ai_gen_id }}">
      {% if block.settings.hero_image %}<img
          src="{{ block.settings.hero_image | image_url: width: 1200 }}"
          alt="{{ block.settings.hero_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.hero_image.width }}"
          height="{{ block.settings.hero_image.height }}"
        >
      {% else %}
        <div class="ai-editorial-hero-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
      {% if block.settings.hero_caption != blank %}
        <div class="ai-editorial-caption-{{ ai_gen_id }}">{{ block.settings.hero_caption }}</div>
      {% endif %}
    </div>
  {% endif %}

  <div class="ai-editorial-content-{{ ai_gen_id }}"><main class="ai-editorial-main-{{ ai_gen_id }}">
      {% if block.settings.main_content != blank %}
        {{ block.settings.main_content }}
      {% endif %}

      {% if block.settings.show_quote and block.settings.quote_text != blank %}
        <blockquote class="ai-editorial-quote-{{ ai_gen_id }}">
          <p class="ai-editorial-quote-text-{{ ai_gen_id }}">{{ block.settings.quote_text }}</p>
          {% if block.settings.quote_author != blank %}
            <cite class="ai-editorial-quote-author-{{ ai_gen_id }}">{{ block.settings.quote_author }}</cite>
          {% endif %}
        </blockquote>
      {% endif %}

      {% if block.settings.show_gallery %}
        <div class="ai-editorial-gallery-{{ ai_gen_id }}">
          {% for i in (1..6) %}
            {% assign image_key = 'gallery_image_' | append: i %}
            {% assign image = block.settings[image_key] %}
            {% if image != blank %}
              <div class="ai-editorial-gallery-item-{{ ai_gen_id }}">
                <img
                  src="{{ image | image_url: width: 400 }}"
                  alt="{{ image.alt | escape }}"
                  loading="lazy"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                >
              </div>
            {% elsif forloop.index <= 3 %}
              <div class="ai-editorial-gallery-item-{{ ai_gen_id }}">
                <div class="ai-editorial-gallery-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </main>

    {% if block.settings.show_sidebar %}
      <aside class="ai-editorial-sidebar-{{ ai_gen_id }}">
        {% if block.settings.sidebar_title != blank %}
          <h3 class="ai-editorial-sidebar-title-{{ ai_gen_id }}">{{ block.settings.sidebar_title }}</h3>
        {% endif %}
        
        {% if block.settings.sidebar_content != blank %}
          <div class="ai-editorial-sidebar-content-{{ ai_gen_id }}">{{ block.settings.sidebar_content }}</div>
        {% endif %}
      </aside>
    {% endif %}
  </div>
</article>

