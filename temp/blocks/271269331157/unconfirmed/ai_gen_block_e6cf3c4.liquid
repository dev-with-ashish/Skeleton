{% doc %}
  @prompt
    section to display at least 10 products with view all button with horizontal scroll on all devices for a selected collection and this section can have multiple collection, make it dark themed with google collection schema data json-ld
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-scroll-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-collection-scroll-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.horizontal_padding }}px;
  }

  .ai-collection-scroll-item-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.collection_spacing }}px;
  }

  .ai-collection-scroll-item-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-collection-scroll-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
    gap: 16px;
  }

  .ai-collection-scroll-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    font-weight: 700;
  }

  .ai-collection-scroll-view-all-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    white-space: nowrap;
    border: none;
    cursor: pointer;
  }

  .ai-collection-scroll-view-all-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-collection-scroll-products-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.product_gap }}px;
    overflow-x: auto;
    overflow-y: hidden;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: {{ block.settings.scrollbar_color }} transparent;
    padding-bottom: 8px;
  }

  .ai-collection-scroll-products-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 8px;
  }

  .ai-collection-scroll-products-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: transparent;
  }

  .ai-collection-scroll-products-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background-color: {{ block.settings.scrollbar_color }};
    border-radius: 4px;
  }

  .ai-collection-scroll-product-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.product_width }}px;
    min-width: {{ block.settings.product_width }}px;
    display: flex;
    flex-direction: column;
  }

  .ai-collection-scroll-product-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .ai-collection-scroll-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    background-color: {{ block.settings.image_bg_color }};
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    margin-bottom: 12px;
  }

  .ai-collection-scroll-product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-scroll-product-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collection-scroll-product-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collection-scroll-product-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-collection-scroll-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0;
    font-weight: 600;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .ai-collection-scroll-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    font-weight: 600;
  }

  .ai-collection-scroll-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #999;
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-scroll-product-{{ ai_gen_id }} {
      flex: 0 0 {{ block.settings.product_width_mobile }}px;
      min-width: {{ block.settings.product_width_mobile }}px;
    }

    .ai-collection-scroll-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-collection-scroll-header-{{ ai_gen_id }} {
      flex-wrap: wrap;
    }
  }
{% endstyle %}

<div class="ai-collection-scroll-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-scroll-container-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign collection_key = 'collection_' | append: i
        assign collection = block.settings[collection_key]
        assign show_collection_key = 'show_collection_' | append: i
        assign show_collection = block.settings[show_collection_key]
      %}

      {% if show_collection and collection != blank %}
        <div class="ai-collection-scroll-item-{{ ai_gen_id }}">
          <div class="ai-collection-scroll-header-{{ ai_gen_id }}">
            <h2 class="ai-collection-scroll-title-{{ ai_gen_id }}">{{ collection.title }}</h2>
            <a href="{{ collection.url }}" class="ai-collection-scroll-view-all-{{ ai_gen_id }}">
              {{ block.settings.view_all_text }}
            </a>
          </div>

          {% if collection.products.size > 0 %}
            <div class="ai-collection-scroll-products-{{ ai_gen_id }}">
              {% for product in collection.products limit: block.settings.products_to_show %}
                <div class="ai-collection-scroll-product-{{ ai_gen_id }}">
                  <a href="{{ product.url }}" class="ai-collection-scroll-product-link-{{ ai_gen_id }}">
                    <div class="ai-collection-scroll-product-image-wrapper-{{ ai_gen_id }}">
                      {% if product.featured_image %}
                        <img
                          src="{{ product.featured_image | image_url: width: 600 }}"
                          alt="{{ product.featured_image.alt | escape }}"
                          class="ai-collection-scroll-product-image-{{ ai_gen_id }}"
                          loading="lazy"
                          width="600"
                          height="600"
                        >
                      {% else %}
                        <div class="ai-collection-scroll-product-placeholder-{{ ai_gen_id }}">
                          {{ 'product-1' | placeholder_svg_tag }}
                        </div>
                      {% endif %}
                    </div>
                    <div class="ai-collection-scroll-product-info-{{ ai_gen_id }}">
                      <h3 class="ai-collection-scroll-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                      <div class="ai-collection-scroll-product-price-{{ ai_gen_id }}">
                        {{ product.price | money }}
                      </div>
                    </div>
                  </a>
                </div>
              {% endfor %}
            </div>

            {% if block.settings.enable_schema %}
              <script type="application/ld+json">
              {
                "@context": "https://schema.org",
                "@type": "CollectionPage",
                "name": {{ collection.title | json }},
                "url": "{{ shop.url }}{{ collection.url }}",
                "description": {{ collection.description | strip_html | truncate: 200 | json }},
                "numberOfItems": {{ collection.products_count }},
                "itemListElement": [
                  {% for product in collection.products limit: block.settings.products_to_show %}
                    {
                      "@type": "ListItem",
                      "position": {{ forloop.index }},
                      "item": {
                        "@type": "Product",
                        "name": {{ product.title | json }},
                        "url": "{{ shop.url }}{{ product.url }}",
                        "image": {% if product.featured_image %}"{{ product.featured_image | image_url: width: 1200 }}"{% else %}""{% endif %},
                        "description": {{ product.description | strip_html | truncate: 200 | json }},
                        "offers": {
                          "@type": "Offer",
                          "price": "{{ product.price | money_without_currency | remove: ',' }}",
                          "priceCurrency": "{{ cart.currency.iso_code }}",
                          "availability": {% if product.available %}"https://schema.org/InStock"{% else %}"https://schema.org/OutOfStock"{% endif %},
                          "url": "{{ shop.url }}{{ product.url }}"
                        }
                      }
                    }{% unless forloop.last %},{% endunless %}
                  {% endfor %}
                ]
              }
              </script>
            {% endif %}
          {% else %}
            <div class="ai-collection-scroll-empty-{{ ai_gen_id }}">
              This collection has no products yet.
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

