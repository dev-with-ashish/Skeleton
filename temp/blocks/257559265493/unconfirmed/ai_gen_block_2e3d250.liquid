{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    min-height: {{ block.settings.section_height }}px;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    gap: {{ block.settings.content_gap }}px;
  }

  .ai-hero-cards-container-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    height: {{ block.settings.cards_container_height }}px;
    transform: translate({{ block.settings.cards_group_x }}px, {{ block.settings.cards_group_y }}px);
  }

  .ai-hero-card-{{ ai_gen_id }} {
    position: absolute;
    width: {{ block.settings.card_width }}px;
    height: {{ block.settings.card_height }}px;
    border-radius: {{ block.settings.card_border_radius }}px;
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity }});
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .ai-hero-card-{{ ai_gen_id }}:hover {
    transform: scale({{ block.settings.card_hover_scale }});
    z-index: 10;
  }

  .ai-hero-card-1-{{ ai_gen_id }} {
    transform: translate({{ block.settings.card_1_x }}px, {{ block.settings.card_1_y }}px) rotate({{ block.settings.card_1_rotation }}deg);
    z-index: 3;
  }

  .ai-hero-card-2-{{ ai_gen_id }} {
    transform: translate({{ block.settings.card_2_x }}px, {{ block.settings.card_2_y }}px) rotate({{ block.settings.card_2_rotation }}deg);
    z-index: 2;
  }

  .ai-hero-card-3-{{ ai_gen_id }} {
    transform: translate({{ block.settings.card_3_x }}px, {{ block.settings.card_3_y }}px) rotate({{ block.settings.card_3_rotation }}deg);
    z-index: 1;
  }

  .ai-hero-card-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-card-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
    padding-left: {{ block.settings.content_padding_left }}px;
  }

  .ai-hero-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: {{ block.settings.headline_weight }};
    color: {{ block.settings.headline_color }};
    line-height: {{ block.settings.headline_line_height }};
    margin: 0;
  }

  .ai-hero-subheadline-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheadline_size }}px;
    color: {{ block.settings.subheadline_color }};
    line-height: {{ block.settings.subheadline_line_height }};
    margin: 0;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_y }}px {{ block.settings.button_padding_x }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: all 0.3s ease;
    align-self: flex-start;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .ai-hero-section-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-hero-cards-container-{{ ai_gen_id }} {
      order: {{ block.settings.mobile_cards_order }};
      height: {{ block.settings.mobile_cards_height }}px;
    }

    .ai-hero-content-{{ ai_gen_id }} {
      order: {{ block.settings.mobile_content_order }};
      padding-left: 0;
    }

    .ai-hero-card-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_card_width }}px;
      height: {{ block.settings.mobile_card_height }}px;
    }

    .ai-hero-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_headline_size }}px;
    }

    .ai-hero-subheadline-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_subheadline_size }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-cards-container-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% assign card_image_key = 'card_' | append: i | append: '_image' %}
      {% assign card_image = block.settings[card_image_key] %}
      
      <div class="ai-hero-card-{{ ai_gen_id }} ai-hero-card-{{ i }}-{{ ai_gen_id }}">
        {% if card_image %}
          <img
            src="{{ card_image | image_url: width: 600 }}"
            alt="{{ card_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.card_width }}"
            height="{{ block.settings.card_height }}"
          >
        {% else %}
          <div class="ai-hero-card-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.headline != blank %}
      <h1 class="ai-hero-headline-{{ ai_gen_id }}">{{ block.settings.headline }}</h1>
    {% endif %}

    {% if block.settings.subheadline != blank %}
      <p class="ai-hero-subheadline-{{ ai_gen_id }}">{{ block.settings.subheadline }}</p>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <a 
        href="{{ block.settings.button_link | default: '#' }}" 
        class="ai-hero-button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

