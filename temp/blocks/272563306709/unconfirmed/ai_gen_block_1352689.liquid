{% doc %}
  @prompt
    design this section exactly as  https://www.tentree.com/ styled homepage
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .tentree-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.section_height }}vh;
    min-height: 500px;
    overflow: hidden;
  }

  .tentree-hero__media-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .tentree-hero__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .tentree-hero__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #e8f5e9;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .tentree-hero__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 600px;
    max-height: 600px;
    opacity: 0.3;
  }

  .tentree-hero__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 24px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
    font-size: 14px;
    color: #333;
    text-align: center;
    pointer-events: none;
  }

  .tentree-hero__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
  }

  .tentree-hero__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_position }};
    align-items: {{ block.settings.content_alignment }};
    padding: 60px 40px;
    text-align: {{ block.settings.text_alignment }};
  }

  .tentree-hero__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    color: {{ block.settings.heading_color }};
    margin: 0 0 20px;
    line-height: 1.1;
    letter-spacing: -0.02em;
    max-width: 800px;
  }

  .tentree-hero__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    font-weight: 400;
    color: {{ block.settings.text_color }};
    margin: 0 0 32px;
    line-height: 1.5;
    max-width: 600px;
  }

  .tentree-hero__buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: {{ block.settings.text_alignment }};
  }

  .tentree-hero__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    min-width: 160px;
  }

  .tentree-hero__button--primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_color }};
    border-color: {{ block.settings.primary_button_bg }};
  }

  .tentree-hero__button--primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
    border-color: {{ block.settings.primary_button_hover_bg }};
    transform: translateY(-2px);
  }

  .tentree-hero__button--secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_button_bg }};
    color: {{ block.settings.secondary_button_color }};
    border-color: {{ block.settings.secondary_button_border }};
  }

  .tentree-hero__button--secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_bg }};
    border-color: {{ block.settings.secondary_button_hover_border }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 749px) {
    .tentree-hero-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_section_height }}vh;
      min-height: 400px;
    }

    .tentree-hero__content-{{ ai_gen_id }} {
      padding: 40px 20px;
      text-align: center;
      align-items: center;
    }

    .tentree-hero__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
      margin-bottom: 16px;
    }

    .tentree-hero__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.85 }}px;
      margin-bottom: 24px;
    }

    .tentree-hero__buttons-{{ ai_gen_id }} {
      flex-direction: column;
      width: 100%;
      justify-content: center;
    }

    .tentree-hero__button-{{ ai_gen_id }} {
      width: 100%;
      max-width: 300px;
    }
  }
{% endstyle %}

<div class="tentree-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="tentree-hero__media-{{ ai_gen_id }}">
    {% if block.settings.hero_image %}
      <img
        src="{{ block.settings.hero_image | image_url: width: 2400 }}"
        srcset="{{ block.settings.hero_image | image_url: width: 750 }} 750w,
                {{ block.settings.hero_image | image_url: width: 1100 }} 1100w,
                {{ block.settings.hero_image | image_url: width: 1500 }} 1500w,
                {{ block.settings.hero_image | image_url: width: 2400 }} 2400w"
        sizes="100vw"
        alt="{{ block.settings.hero_image.alt | escape }}"
        loading="eager"
        width="{{ block.settings.hero_image.width }}"
        height="{{ block.settings.hero_image.height }}"
        class="tentree-hero__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="tentree-hero__image-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="tentree-hero__empty-state-{{ ai_gen_id }}">
          Add a hero image to get started
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="tentree-hero__overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="tentree-hero__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="tentree-hero__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="tentree-hero__subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}

    {% if block.settings.primary_btn_text != blank or block.settings.secondary_btn_text != blank %}
      <div class="tentree-hero__buttons-{{ ai_gen_id }}">
        {% if block.settings.primary_btn_text != blank %}
          <a
            href="{{ block.settings.primary_btn_link }}"
            class="tentree-hero__button-{{ ai_gen_id }} tentree-hero__button--primary-{{ ai_gen_id }}"
          >
            {{ block.settings.primary_btn_text }}
          </a>
        {% endif %}

        {% if block.settings.secondary_btn_text != blank %}
          <a
            href="{{ block.settings.secondary_btn_link }}"
            class="tentree-hero__button-{{ ai_gen_id }} tentree-hero__button--secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.secondary_btn_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

