{% doc %}
  @prompt
    Create a full-width hero section in a clean, modern style similar to tentree.com. Use a soft beige/neutral background, max-width container centered, and a two-column layout: text on the left, image on the right. Add this H1 exactly once: “Premium Wall Art & Professional UV Printing Services”. Add a short paragraph about shopping wall art or booking same-day UV printing from our Noida studio. Add two pill-shaped buttons side by side: “Shop By Category” linking to #shop-by-category and “Book Services” linking to #book-services. The right image should be large, with rounded corners and a soft shadow. On mobile, stack text above image with generous padding.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-hero-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_max_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.container_padding }}px;
  }

  .ai-hero-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.grid_gap }}px;
    align-items: center;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_gap }}px;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 700;
  }

  .ai-hero-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.button_gap }}px;
    flex-wrap: wrap;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_primary_bg }};
    color: {{ block.settings.button_primary_text }};
    border-color: {{ block.settings.button_primary_bg }};
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_primary_hover_bg }};
    border-color: {{ block.settings.button_primary_hover_bg }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_secondary_bg }};
    color: {{ block.settings.button_secondary_text }};
    border-color: {{ block.settings.button_secondary_border }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_secondary_hover_bg }};
    border-color: {{ block.settings.button_secondary_hover_border }};
  }

  .ai-hero-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: {{ block.settings.image_min_height }}px;
  }

  .ai-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: {{ block.settings.image_shadow_x }}px {{ block.settings.image_shadow_y }}px {{ block.settings.image_shadow_blur }}px {{ block.settings.image_shadow_color }};
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: {{ block.settings.image_min_height }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: {{ block.settings.image_shadow_x }}px {{ block.settings.image_shadow_y }}px {{ block.settings.image_shadow_blur }}px {{ block.settings.image_shadow_color }};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-hero-buttons-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-hero-section-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding_top }}px 0 {{ block.settings.mobile_padding_bottom }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-container-{{ ai_gen_id }}">
    <div class="ai-hero-grid-{{ ai_gen_id }}">
      <div class="ai-hero-content-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
        {% endif %}

        {% if block.settings.text != blank %}
          <div class="ai-hero-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
        {% endif %}

        <div class="ai-hero-buttons-{{ ai_gen_id }}">
          {% if block.settings.button_1_text != blank %}
            <a
              href="{{ block.settings.button_1_link }}"
              class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}"
            >
              {{ block.settings.button_1_text }}
            </a>
          {% endif %}

          {% if block.settings.button_2_text != blank %}
            <a
              href="{{ block.settings.button_2_link }}"
              class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
            >
              {{ block.settings.button_2_text }}
            </a>
          {% endif %}
        </div>
      </div>

      <div class="ai-hero-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 1200 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            class="ai-hero-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-hero-image-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
            <div class="ai-hero-empty-state-{{ ai_gen_id }}">
              Add an image to complete your hero section
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

