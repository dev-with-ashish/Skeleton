                <div class="ai-shop-category-card-meta-{{ ai_gen_id }}">{{ product.price | money }}</div>
                <a
                  href="{{ product.url }}"
                  class="ai-shop-category-card-button-{{ ai_gen_id }}"
                >
                  {{ block.settings.button_text }}
                </a>
              </div>
            </div>
          {% endfor %}
