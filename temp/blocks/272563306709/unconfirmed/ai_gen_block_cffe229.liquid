{% doc %}
  @prompt
    Create a testimonials section matching the same tentree-style design: soft neutral background, centered max-width container, generous padding. Add an H2: “What Our Customers Say” and a short subtitle line. Below, show a responsive grid of 3 testimonial cards. Each card has a light background, rounded corners, soft shadow, quote text, and customer name. Use simple typography and spacing similar to tentree review/quote blocks.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonials-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
  }

  .ai-testimonials-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    text-align: center;
  }

  .ai-testimonials-header-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-testimonials-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.subtitle_spacing }}px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-testimonials-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-testimonials-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.card_gap }}px;
    margin-top: {{ block.settings.grid_spacing }}px;
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }};
    text-align: left;
    transition: transform 0.2s ease;
  }

  .ai-testimonial-card-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
  }

  .ai-testimonial-quote-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_size }}px;
    color: {{ block.settings.quote_color }};
    line-height: 1.6;
    margin: 0 0 {{ block.settings.quote_spacing }}px;
  }

  .ai-testimonial-author-{{ ai_gen_id }} {
    font-size: {{ block.settings.author_size }}px;
    color: {{ block.settings.author_color }};
    font-weight: 600;
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .ai-testimonials-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-testimonials-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-testimonials-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-testimonials-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-testimonial-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-testimonials-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-testimonials-container-{{ ai_gen_id }}">
    <div class="ai-testimonials-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-testimonials-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-testimonials-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="ai-testimonials-grid-{{ ai_gen_id }}">
      {% if block.settings.testimonial_1_quote != blank %}
        <div class="ai-testimonial-card-{{ ai_gen_id }}">
          <p class="ai-testimonial-quote-{{ ai_gen_id }}">"{{ block.settings.testimonial_1_quote }}"</p>
          {% if block.settings.testimonial_1_author != blank %}
            <p class="ai-testimonial-author-{{ ai_gen_id }}">{{ block.settings.testimonial_1_author }}</p>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.testimonial_2_quote != blank %}
        <div class="ai-testimonial-card-{{ ai_gen_id }}">
          <p class="ai-testimonial-quote-{{ ai_gen_id }}">"{{ block.settings.testimonial_2_quote }}"</p>
          {% if block.settings.testimonial_2_author != blank %}
            <p class="ai-testimonial-author-{{ ai_gen_id }}">{{ block.settings.testimonial_2_author }}</p>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.testimonial_3_quote != blank %}
        <div class="ai-testimonial-card-{{ ai_gen_id }}">
          <p class="ai-testimonial-quote-{{ ai_gen_id }}">"{{ block.settings.testimonial_3_quote }}"</p>
          {% if block.settings.testimonial_3_author != blank %}
            <p class="ai-testimonial-author-{{ ai_gen_id }}">{{ block.settings.testimonial_3_author }}</p>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

