{% doc %}
  @prompt
    Prompt 1 – HERO (H1 + 2 CTAs)
    
    Use this first:
    
    Create a Shopify section hero for aarohipixelprint.com with a clean, modern design similar to tentree.com.
    Add a left text column and a right image column.
    Use this H1 text exactly once: “Premium Wall Art & Professional UV Printing Services”.
    Below it add a short paragraph about shopping wall art and booking same-day UV printing done in-house in Noida.
    Add two pill-shaped buttons:
    • “Shop By Category” linking to #shop-by-category
    • “Book Services” linking to #book-services
    On the right, add one hero image (image picker) with rounded corners and a soft shadow.
    Make it fully responsive with text above image on mobile.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-{{ ai_gen_id }} {
    padding: 60px {{ settings.min_page_margin }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-hero-container-{{ ai_gen_id }} {
    max-width: {{ settings.max_page_width }};
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .ai-hero-text-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 700;
  }

  .ai-hero-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    border-radius: 50px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_text }};
    border-color: {{ block.settings.primary_button_bg }};
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
    border-color: {{ block.settings.primary_button_hover_bg }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_button_bg }};
    color: {{ block.settings.secondary_button_text }};
    border-color: {{ block.settings.secondary_button_border }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_bg }};
    border-color: {{ block.settings.secondary_button_hover_border }};
  }

  .ai-hero-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: {{ block.settings.image_shadow_x }}px {{ block.settings.image_shadow_y }}px {{ block.settings.image_shadow_blur }}px {{ block.settings.image_shadow_color }};
    display: block;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4 / 3;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: {{ block.settings.image_shadow_x }}px {{ block.settings.image_shadow_y }}px {{ block.settings.image_shadow_blur }}px {{ block.settings.image_shadow_color }};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-hero-{{ ai_gen_id }} {
      padding: 40px {{ settings.min_page_margin }}px;
    }

    .ai-hero-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-hero-text-{{ ai_gen_id }} {
      order: 2;
    }

    .ai-hero-image-wrapper-{{ ai_gen_id }} {
      order: 1;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-hero-buttons-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-container-{{ ai_gen_id }}">
    <div class="ai-hero-text-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-hero-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}

      <div class="ai-hero-buttons-{{ ai_gen_id }}">
        {% if block.settings.button_1_text != blank %}
          <a 
            href="{{ block.settings.button_1_link }}" 
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}"
          >
            {{ block.settings.button_1_text }}
          </a>
        {% endif %}

        {% if block.settings.button_2_text != blank %}
          <a 
            href="{{ block.settings.button_2_link }}" 
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.button_2_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <div class="ai-hero-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.hero_image %}
        <img
          src="{{ block.settings.hero_image | image_url: width: 1200 }}"
          alt="{{ block.settings.hero_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.hero_image.width }}"
          height="{{ block.settings.hero_image.height }}"
          class="ai-hero-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-hero-image-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
          <div class="ai-hero-empty-state-{{ ai_gen_id }}">
            Add a hero image
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

