{% doc %}
  @prompt
    design this section exactly as  https://www.tentree.com/ styled homepage, design all section of the website https://www.tentree.com/ including tabs in this section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .tabbed-products-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .tabbed-products__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .tabbed-products__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .tabbed-products__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    letter-spacing: -0.02em;
  }

  .tabbed-products__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .tabbed-products__tabs-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-bottom: 40px;
    flex-wrap: wrap;
  }

  .tabbed-products__tab-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: transparent;
    border: 2px solid {{ block.settings.tab_border_color }};
    border-radius: {{ block.settings.tab_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.tab_text_color }};
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .tabbed-products__tab-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.tab_hover_bg }};
    border-color: {{ block.settings.tab_hover_border }};
    color: {{ block.settings.tab_hover_text }};
  }

  .tabbed-products__tab-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.tab_active_bg }};
    border-color: {{ block.settings.tab_active_border }};
    color: {{ block.settings.tab_active_text }};
  }

  .tabbed-products__content-{{ ai_gen_id }} {
    position: relative;
  }

  .tabbed-products__panel-{{ ai_gen_id }} {
    display: none;
  }

  .tabbed-products__panel-{{ ai_gen_id }}.active {
    display: block;
  }

  .tabbed-products__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .tabbed-products__product-{{ ai_gen_id }} {
    text-decoration: none;
    display: block;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .tabbed-products__product-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .tabbed-products__product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_ratio }};
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .tabbed-products__product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .tabbed-products__product-{{ ai_gen_id }}:hover .tabbed-products__product-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .tabbed-products__product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .tabbed-products__product-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .tabbed-products__product-info-{{ ai_gen_id }} {
    padding: 16px 0;
  }

  .tabbed-products__product-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .tabbed-products__product-price-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 700;
    color: {{ block.settings.product_price_color }};
  }

  .tabbed-products__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
    font-size: 16px;
  }

  @media screen and (max-width: 989px) {
    .tabbed-products__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .tabbed-products-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .tabbed-products__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.7 }}px;
    }

    .tabbed-products__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .tabbed-products__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }

    .tabbed-products__tabs-{{ ai_gen_id }} {
      gap: 6px;
    }

    .tabbed-products__tab-{{ ai_gen_id }} {
      padding: 10px 16px;
      font-size: 14px;
    }
  }
{% endstyle %}

<tabbed-products-{{ ai_gen_id }} class="tabbed-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="tabbed-products__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="tabbed-products__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="tabbed-products__title-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="tabbed-products__subtitle-{{ ai_gen_id }}">
            {{ block.settings.subtitle }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="tabbed-products__tabs-{{ ai_gen_id }}" role="tablist">
      {% for i in (1..3) %}
        {% liquid
          assign tab_label_key = 'tab_' | append: i | append: '_label'
          assign collection_key = 'tab_' | append: i | append: '_collection'
          assign tab_label = block.settings[tab_label_key]
          assign collection = block.settings[collection_key]
        %}
        {% if tab_label != blank %}
          <button
            class="tabbed-products__tab-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            role="tab"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
            data-tab="{{ i }}"
          >
            {{ tab_label }}
          </button>
        {% endif %}
      {% endfor %}
    </div>

    <div class="tabbed-products__content-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign tab_label_key = 'tab_' | append: i | append: '_label'
          assign collection_key = 'tab_' | append: i | append: '_collection'
          assign tab_label = block.settings[tab_label_key]
          assign collection = block.settings[collection_key]
        %}
        {% if tab_label != blank %}
          <div
            class="tabbed-products__panel-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            role="tabpanel"
            data-panel="{{ i }}"
          >
            {% if collection != blank and collection.products.size > 0 %}
              <div class="tabbed-products__grid-{{ ai_gen_id }}">
                {% for product in collection.products limit: block.settings.products_to_show %}
                  <a href="{{ product.url }}" class="tabbed-products__product-{{ ai_gen_id }}">
                    <div class="tabbed-products__product-image-wrapper-{{ ai_gen_id }}">
                      {% if product.featured_image %}
                        <img
                          src="{{ product.featured_image | image_url: width: 600 }}"
                          srcset="{{ product.featured_image | image_url: width: 300 }} 300w,
                                  {{ product.featured_image | image_url: width: 600 }} 600w"
                          sizes="(min-width: 990px) calc(100vw / {{ block.settings.columns_desktop }}), (min-width: 750px) 33vw, 50vw"
                          alt="{{ product.featured_image.alt | escape }}"
                          loading="lazy"
                          width="{{ product.featured_image.width }}"
                          height="{{ product.featured_image.height }}"
                          class="tabbed-products__product-image-{{ ai_gen_id }}"
                        >
                      {% else %}
                        <div class="tabbed-products__product-image-placeholder-{{ ai_gen_id }}">
                          {{ 'product-apparel-1' | placeholder_svg_tag }}
                        </div>
                      {% endif %}
                    </div>
                    <div class="tabbed-products__product-info-{{ ai_gen_id }}">
                      <h3 class="tabbed-products__product-title-{{ ai_gen_id }}">
                        {{ product.title }}
                      </h3>
                      <div class="tabbed-products__product-price-{{ ai_gen_id }}">
                        {{ product.price | money }}
                      </div>
                    </div>
                  </a>
                {% endfor %}
              </div>
            {% else %}
              <div class="tabbed-products__empty-state-{{ ai_gen_id }}">
                Select a collection for this tab
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</tabbed-products-{{ ai_gen_id }}>

<script>
  (function() {
    class TabbedProducts{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.tabbed-products__tab-{{ ai_gen_id }}');
        this.panels = this.querySelectorAll('.tabbed-products__panel-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const tabId = tab.getAttribute('data-tab');
            this.switchTab(tabId);
          });
        });
      }

      switchTab(tabId) {
        this.tabs.forEach((tab) => {
          const isActive = tab.getAttribute('data-tab') === tabId;
          tab.classList.toggle('active', isActive);
          tab.setAttribute('aria-selected', isActive);
        });

        this.panels.forEach((panel) => {
          const isActive = panel.getAttribute('data-panel') === tabId;
          panel.classList.toggle('active', isActive);
        });
      }
    }

    customElements.define('tabbed-products-{{ ai_gen_id }}', TabbedProducts{{ ai_gen_id }});
  })();
</script>

