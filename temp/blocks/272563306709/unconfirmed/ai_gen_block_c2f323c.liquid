{% doc %}
  @prompt
    design this section exactly as  https://www.tentree.com/ styled homepage, design all section of the website https://www.tentree.com/ including tabs in this section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .features-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .features-grid__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .features-grid__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 48px;
  }

  .features-grid__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    letter-spacing: -0.02em;
  }

  .features-grid__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .features-grid__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .features-grid__item-{{ ai_gen_id }} {
    text-align: center;
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_bg_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    transition: transform 0.3s ease;
  }

  .features-grid__item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .features-grid__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_bg_color }};
    border-radius: 50%;
  }

  .features-grid__icon-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size | times: 0.5 }}px;
    height: {{ block.settings.icon_size | times: 0.5 }}px;
    stroke: {{ block.settings.icon_color }};
  }

  .features-grid__item-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_title_size }}px;
    font-weight: 700;
    color: {{ block.settings.item_title_color }};
    margin: 0 0 12px;
  }

  .features-grid__item-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_text_size }}px;
    color: {{ block.settings.item_text_color }};
    line-height: 1.5;
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .features-grid__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .features-grid-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .features-grid__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.7 }}px;
    }

    .features-grid__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .features-grid__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }

    .features-grid__header-{{ ai_gen_id }} {
      margin-bottom: 32px;
    }
  }
{% endstyle %}

<div class="features-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="features-grid__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="features-grid__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="features-grid__title-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="features-grid__subtitle-{{ ai_gen_id }}">
            {{ block.settings.subtitle }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="features-grid__grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign title_key = 'feature_' | append: i | append: '_title'
          assign text_key = 'feature_' | append: i | append: '_text'
          assign icon_key = 'feature_' | append: i | append: '_icon'
          
          assign feature_title = block.settings[title_key]
          assign feature_text = block.settings[text_key]
          assign feature_icon = block.settings[icon_key]
        %}

        {% if feature_title != blank %}
          <div class="features-grid__item-{{ ai_gen_id }}">
            <div class="features-grid__icon-{{ ai_gen_id }}">
              {% case feature_icon %}
                {% when 'leaf' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3c0-1.66 4-3 9-3s9 1.34 9 3z M3 5c0 1.66 4 3 9 3s9-1.34 9-3c0-1.66-4-3-9-3S3 3.34 3 5z M3 12v7c0 1.66 4 3 9 3s9-1.34 9-3v-7" />
                  </svg>
                {% when 'truck' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />
                  </svg>
                {% when 'shield' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                {% when 'heart' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                {% else %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
              {% endcase %}
            </div>

            <h3 class="features-grid__item-title-{{ ai_gen_id }}">
              {{ feature_title }}
            </h3>

            {% if feature_text != blank %}
              <p class="features-grid__item-text-{{ ai_gen_id }}">
                {{ feature_text }}
              </p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

