{% doc %}
  @prompt
    design this section exactly as  https://www.tentree.com/ styled homepage, design all section of the website https://www.tentree.com/ including tabs in this section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .image-text-split-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .image-text-split__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: {% if block.settings.layout == 'image_first' %}1fr 1fr{% else %}1fr 1fr{% endif %};
    gap: {{ block.settings.content_gap }}px;
    align-items: center;
  }

  .image-text-split__image-wrapper-{{ ai_gen_id }} {
    {% if block.settings.layout == 'image_first' %}
      order: 1;
    {% else %}
      order: 2;
    {% endif %}
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .image-text-split__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .image-text-split__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4/3;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .image-text-split__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .image-text-split__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 24px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
    font-size: 14px;
    color: #333;
    text-align: center;
    pointer-events: none;
  }

  .image-text-split__content-{{ ai_gen_id }} {
    {% if block.settings.layout == 'image_first' %}
      order: 2;
    {% else %}
      order: 1;
    {% endif %}
    padding: 20px;
  }

  .image-text-split__eyebrow-{{ ai_gen_id }} {
    font-size: {{ block.settings.eyebrow_size }}px;
    font-weight: 600;
    color: {{ block.settings.eyebrow_color }};
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 16px;
  }

  .image-text-split__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    color: {{ block.settings.heading_color }};
    margin: 0 0 20px;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .image-text-split__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0 0 32px;
  }

  .image-text-split__cta-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    background-color: {{ block.settings.cta_bg }};
    color: {{ block.settings.cta_text_color }};
    border: 2px solid {{ block.settings.cta_border }};
    border-radius: {{ block.settings.cta_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .image-text-split__cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.cta_hover_bg }};
    color: {{ block.settings.cta_hover_text }};
    border-color: {{ block.settings.cta_hover_border }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 989px) {
    .image-text-split__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.content_gap | times: 0.7 }}px;
    }

    .image-text-split__image-wrapper-{{ ai_gen_id }},
    .image-text-split__content-{{ ai_gen_id }} {
      order: unset;
    }

    .image-text-split__content-{{ ai_gen_id }} {
      padding: 10px;
    }
  }

  @media screen and (max-width: 749px) {
    .image-text-split-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .image-text-split__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .image-text-split__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
      margin-bottom: 24px;
    }

    .image-text-split__cta-{{ ai_gen_id }} {
      width: 100%;
      max-width: 300px;
    }
  }
{% endstyle %}

<div class="image-text-split-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="image-text-split__container-{{ ai_gen_id }}">
    <div class="image-text-split__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1200 }}"
          srcset="{{ block.settings.image | image_url: width: 600 }} 600w,
                  {{ block.settings.image | image_url: width: 900 }} 900w,
                  {{ block.settings.image | image_url: width: 1200 }} 1200w"
          sizes="(min-width: 990px) 50vw, 100vw"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="image-text-split__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="image-text-split__image-placeholder-{{ ai_gen_id }}">
          {{ 'detailed-apparel-1' | placeholder_svg_tag }}
          <div class="image-text-split__empty-state-{{ ai_gen_id }}">
            Add an image
          </div>
        </div>
      {% endif %}
    </div>

    <div class="image-text-split__content-{{ ai_gen_id }}">
      {% if block.settings.eyebrow != blank %}
        <div class="image-text-split__eyebrow-{{ ai_gen_id }}">
          {{ block.settings.eyebrow }}
        </div>
      {% endif %}

      {% if block.settings.heading != blank %}
        <h2 class="image-text-split__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="image-text-split__text-{{ ai_gen_id }}">
          {{ block.settings.text }}
        </div>
      {% endif %}

      {% if block.settings.cta_label != blank %}
        <a
          href="{{ block.settings.cta_link }}"
          class="image-text-split__cta-{{ ai_gen_id }}"
        >
          {{ block.settings.cta_label }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

