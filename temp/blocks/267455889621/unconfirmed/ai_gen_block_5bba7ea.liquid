    border-radius: {{ block.settings.border_radius }}px;
    margin: {{ block.settings.margin }}px 0;
  }

  .ai-trust-features-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.gap }}px;
    max-width: 100%;
