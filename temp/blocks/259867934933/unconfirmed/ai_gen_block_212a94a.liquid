{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-event-services-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    padding: 60px 40px;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    max-width: 1200px;
    margin: 0 auto;
    opacity: 0;
    animation: ai-fade-in-{{ ai_gen_id }} 1s ease-out 0.2s forwards;
  }

  .ai-event-services-left-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transform: translateX(-50px);
    opacity: 0;
    animation: ai-slide-in-left-{{ ai_gen_id }} 0.8s ease-out 0.4s forwards;
  }

  .ai-event-services-right-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 30px;
    transform: translateX(50px);
    opacity: 0;
    animation: ai-slide-in-right-{{ ai_gen_id }} 0.8s ease-out 0.6s forwards;
  }

  .ai-event-services-wheel-container-{{ ai_gen_id }} {
    position: relative;
    width: 400px;
    height: 400px;
    margin-bottom: 30px;
  }

  .ai-event-services-wheel-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 3px solid {{ block.settings.wheel_border_color }};
    position: relative;
    background-color: {{ block.settings.wheel_background_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    animation: ai-wheel-rotate-{{ ai_gen_id }} 20s linear infinite;
  }

  .ai-event-services-wheel-{{ ai_gen_id }}:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    animation-play-state: paused;
  }

  .ai-event-services-wheel-center-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: {{ block.settings.center_background_color }};
    color: {{ block.settings.center_text_color }};
    border-radius: 50%;
    width: 120px;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 16px;
    text-align: center;
    z-index: 2;
    transition: transform 0.3s ease, background-color 0.3s ease;
  }

  .ai-event-services-wheel-{{ ai_gen_id }}:hover .ai-event-services-wheel-center-{{ ai_gen_id }} {
    transform: translate(-50%, -50%) scale(1.1);
    background-color: {{ block.settings.accent_color }};
  }

  .ai-event-services-wheel-item-{{ ai_gen_id }} {
    position: absolute;
    width: 80px;
    height: 80px;
    background-color: {{ block.settings.item_background_color }};
    color: {{ block.settings.item_text_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: 500;
    text-align: center;
    padding: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
  }

  .ai-event-services-wheel-item-{{ ai_gen_id }}:hover {
    transform: scale(1.2);
    background-color: {{ block.settings.accent_color }};
    color: {{ block.settings.center_text_color }};
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    z-index: 3;
  }

  .ai-event-services-wheel-item-1-{{ ai_gen_id }} {
    top: 30px;
    left: 50%;
    transform: translateX(-50%);
    animation-delay: 0.8s;
  }

  .ai-event-services-wheel-item-2-{{ ai_gen_id }} {
    top: 75px;
    right: 75px;
    animation-delay: 1s;
  }

  .ai-event-services-wheel-item-3-{{ ai_gen_id }} {
    top: 50%;
    right: 30px;
    transform: translateY(-50%);
    animation-delay: 1.2s;
  }

  .ai-event-services-wheel-item-4-{{ ai_gen_id }} {
    bottom: 75px;
    right: 75px;
    animation-delay: 1.4s;
  }

  .ai-event-services-wheel-item-5-{{ ai_gen_id }} {
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    animation-delay: 1.6s;
  }

  .ai-event-services-wheel-item-6-{{ ai_gen_id }} {
    bottom: 75px;
    left: 75px;
    animation-delay: 1.8s;
  }

  .ai-event-services-wheel-item-7-{{ ai_gen_id }} {
    top: 50%;
    left: 30px;
    transform: translateY(-50%);
    animation-delay: 2s;
  }

  .ai-event-services-wheel-item-8-{{ ai_gen_id }} {
    top: 75px;
    left: 75px;
    animation-delay: 2.2s;
  }

  .ai-event-services-who-we-are-{{ ai_gen_id }} {
    text-align: center;
    transform: translateY(30px);
    opacity: 0;
    animation: ai-fade-up-{{ ai_gen_id }} 0.8s ease-out 1s forwards;
  }

  .ai-event-services-who-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    font-weight: 700;
    margin: 0 0 20px;
    color: {{ block.settings.title_color }};
    transition: color 0.3s ease;
  }

  .ai-event-services-who-title-{{ ai_gen_id }}:hover {
    color: {{ block.settings.accent_color }};
  }

  .ai-event-services-who-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
    margin: 0;
    transition: transform 0.3s ease;
  }

  .ai-event-services-who-we-are-{{ ai_gen_id }}:hover .ai-event-services-who-description-{{ ai_gen_id }} {
    transform: translateY(-5px);
  }

  .ai-event-services-main-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.main_title_size }}px;
    font-weight: 700;
    margin: 0 0 30px;
    color: {{ block.settings.title_color }};
    transform: translateY(30px);
    opacity: 0;
    animation: ai-fade-up-{{ ai_gen_id }} 0.8s ease-out 0.8s forwards;
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .ai-event-services-main-title-{{ ai_gen_id }}:hover {
    color: {{ block.settings.accent_color }};
    transform: translateY(-5px);
  }

  .ai-event-services-pillars-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 25px;
  }

  .ai-event-services-pillar-{{ ai_gen_id }} {
    background-color: {{ block.settings.pillar_background_color }};
    padding: 25px;
    border-radius: {{ block.settings.pillar_border_radius }}px;
    border-left: 4px solid {{ block.settings.accent_color }};
    transform: translateX(50px);
    opacity: 0;
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-left-width 0.3s ease;
    cursor: pointer;
  }

  .ai-event-services-pillar-{{ ai_gen_id }}:nth-child(1) {
    animation: ai-slide-in-right-{{ ai_gen_id }} 0.8s ease-out 1s forwards;
  }

  .ai-event-services-pillar-{{ ai_gen_id }}:nth-child(2) {
    animation: ai-slide-in-right-{{ ai_gen_id }} 0.8s ease-out 1.2s forwards;
  }

  .ai-event-services-pillar-{{ ai_gen_id }}:nth-child(3) {
    animation: ai-slide-in-right-{{ ai_gen_id }} 0.8s ease-out 1.4s forwards;
  }

  .ai-event-services-pillar-{{ ai_gen_id }}:hover {
    transform: translateX(10px) translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    border-left-width: 8px;
  }

  .ai-event-services-pillar-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.pillar_title_size }}px;
    font-weight: 600;
    margin: 0 0 12px;
    color: {{ block.settings.pillar_title_color }};
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .ai-event-services-pillar-{{ ai_gen_id }}:hover .ai-event-services-pillar-title-{{ ai_gen_id }} {
    color: {{ block.settings.accent_color }};
    transform: translateX(5px);
  }

  .ai-event-services-pillar-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.pillar_description_size }}px;
    line-height: 1.5;
    margin: 0;
    transition: transform 0.3s ease;
  }

  .ai-event-services-pillar-{{ ai_gen_id }}:hover .ai-event-services-pillar-description-{{ ai_gen_id }} {
    transform: translateX(5px);
  }

  .ai-event-services-examples-{{ ai_gen_id }} {
    margin-top: 20px;
    transform: translateY(30px);
    opacity: 0;
    animation: ai-fade-up-{{ ai_gen_id }} 0.8s ease-out 1.6s forwards;
  }

  .ai-event-services-examples-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    font-weight: 600;
    margin: 0 0 20px;
    color: {{ block.settings.title_color }};
    transition: color 0.3s ease;
  }

  .ai-event-services-examples-title-{{ ai_gen_id }}:hover {
    color: {{ block.settings.accent_color }};
  }

  .ai-event-services-examples-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
  }

  .ai-event-services-example-{{ ai_gen_id }} {
    background-color: {{ block.settings.example_background_color }};
    padding: 15px;
    border-radius: {{ block.settings.example_border_radius }}px;
    text-align: center;
    font-size: {{ block.settings.example_text_size }}px;
    font-weight: 500;
    color: {{ block.settings.example_text_color }};
    transition: transform 0.3s ease, background-color 0.3s ease, color 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    transform: scale(0.9);
    opacity: 0;
  }

  .ai-event-services-example-{{ ai_gen_id }}:nth-child(1) {
    animation: ai-scale-in-{{ ai_gen_id }} 0.6s ease-out 1.8s forwards;
  }

  .ai-event-services-example-{{ ai_gen_id }}:nth-child(2) {
    animation: ai-scale-in-{{ ai_gen_id }} 0.6s ease-out 2s forwards;
  }

  .ai-event-services-example-{{ ai_gen_id }}:nth-child(3) {
    animation: ai-scale-in-{{ ai_gen_id }} 0.6s ease-out 2.2s forwards;
  }

  .ai-event-services-example-{{ ai_gen_id }}:nth-child(4) {
    animation: ai-scale-in-{{ ai_gen_id }} 0.6s ease-out 2.4s forwards;
  }

  .ai-event-services-example-{{ ai_gen_id }}:nth-child(5) {
    animation: ai-scale-in-{{ ai_gen_id }} 0.6s ease-out 2.6s forwards;
  }

  .ai-event-services-example-{{ ai_gen_id }}:nth-child(6) {
    animation: ai-scale-in-{{ ai_gen_id }} 0.6s ease-out 2.8s forwards;
  }

  .ai-event-services-example-{{ ai_gen_id }}:hover {
    transform: translateY(-8px) scale(1.05);
    background-color: {{ block.settings.accent_color }};
    color: {{ block.settings.center_text_color }};
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  @keyframes ai-fade-in-{{ ai_gen_id }} {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes ai-slide-in-left-{{ ai_gen_id }} {
    from {
      transform: translateX(-50px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes ai-slide-in-right-{{ ai_gen_id }} {
    from {
      transform: translateX(50px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes ai-fade-up-{{ ai_gen_id }} {
    from {
      transform: translateY(30px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes ai-scale-in-{{ ai_gen_id }} {
    from {
      transform: scale(0.9);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  @keyframes ai-wheel-rotate-{{ ai_gen_id }} {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @media screen and (max-width: 768px) {
    .ai-event-services-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
      padding: 40px 20px;
    }

    .ai-event-services-wheel-container-{{ ai_gen_id }} {
      width: 300px;
      height: 300px;
    }

    .ai-event-services-wheel-center-{{ ai_gen_id }} {
      width: 90px;
      height: 90px;font-size: 14px;
    }

    .ai-event-services-wheel-item-{{ ai_gen_id }} {
      width: 60px;
      height: 60px;
      font-size: 10px;
    }

    .ai-event-services-wheel-item-1-{{ ai_gen_id }} {
      top: 22px;
    }

    .ai-event-services-wheel-item-2-{{ ai_gen_id }} {
      top: 56px;
      right: 56px;
    }

    .ai-event-services-wheel-item-3-{{ ai_gen_id }} {
      right: 22px;
    }

    .ai-event-services-wheel-item-4-{{ ai_gen_id }} {
      bottom: 56px;
      right: 56px;
    }

    .ai-event-services-wheel-item-5-{{ ai_gen_id }} {
      bottom: 22px;
    }

    .ai-event-services-wheel-item-6-{{ ai_gen_id }} {
      bottom: 56px;
      left: 56px;
    }

    .ai-event-services-wheel-item-7-{{ ai_gen_id }} {
      left: 22px;
    }

    .ai-event-services-wheel-item-8-{{ ai_gen_id }} {
      top: 56px;
      left: 56px;
    }

    .ai-event-services-examples-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }

    .ai-event-services-left-{{ ai_gen_id }},
    .ai-event-services-right-{{ ai_gen_id }} {
      transform: none;
      animation: ai-fade-up-{{ ai_gen_id }} 0.8s ease-out 0.4s forwards;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-event-services-wheel-{{ ai_gen_id }} {
      animation: none;
    }
    * {
      animation-duration: 0.01ms !important;animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
