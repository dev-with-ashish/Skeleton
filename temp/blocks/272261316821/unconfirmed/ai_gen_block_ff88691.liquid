<script>
  (function() {
    class HomepageSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.parallaxElements = [];
      }

      connectedCallback() {
        this.initParallax();
        window.addEventListener('scroll', this.handleScroll.bind(this));
      }

      disconnectedCallback() {
        window.removeEventListener('scroll', this.handleScroll.bind(this));
      }

      initParallax() {
        const heroBg = this.querySelector('.ai-hero-bg-{{ ai_gen_id }}');
        if (heroBg) {
          this.parallaxElements.push({
            element: heroBg,
            speed: parseFloat(heroBg.dataset.parallaxSpeed) || 0.5
          });
        }
      }

      handleScroll() {
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        
        this.parallaxElements.forEach(item => {
          const yPos = -(scrollTop * item.speed);
          item.element.style.transform = `translate3d(0, ${yPos}px, 0)`;
        });
      }
    }

    customElements.define('homepage-section-{{ ai_gen_id }}', HomepageSection{{ ai_gen_id }});
  })();
</script>

