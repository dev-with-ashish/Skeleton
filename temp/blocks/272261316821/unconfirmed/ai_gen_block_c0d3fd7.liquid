<script>
(function() {
  class HomepageBlock{{ai_gen_id}} extends HTMLElement {
    constructor() {
      super();
      this.parallaxEnabled = {{ block.settings.enable_parallax }};
      this.parallaxSpeed = {{ block.settings.parallax_speed }};
    }

    connectedCallback() {
      this.setupIntersectionObserver();
      if (this.parallaxEnabled) {
        this.setupParallax();
      }
    }

    setupIntersectionObserver() {
      const cards = this.querySelectorAll('[data-card]');
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry, index) => {
          if (entry.isIntersecting) {
            setTimeout(() => {
              entry.target.classList.add('ai-visible-{{ ai_gen_id }}');
            }, index * 100);
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      cards.forEach(card => observer.observe(card));
    }

    setupParallax() {
      const heroBg = this.querySelector('[data-parallax-bg]');
      const cardBgs = this.querySelectorAll('[data-parallax-card]');

      const handleScroll = () => {
        const scrolled = window.pageYOffset;

        if (heroBg) {
          const heroSection = this.querySelector('[data-parallax-hero]');
          const heroRect = heroSection.getBoundingClientRect();
          if (heroRect.top < window.innerHeight && heroRect.bottom > 0) {
            const yPos = scrolled * this.parallaxSpeed;
            heroBg.style.transform = `translateY(${yPos}px)`;
          }
        }

        cardBgs.forEach(cardBg => {
          const rect = cardBg.getBoundingClientRect();
          if (rect.top < window.innerHeight && rect.bottom > 0) {
            const cardScrolled = (window.innerHeight - rect.top) * (this.parallaxSpeed * 0.5);
            cardBg.style.transform = `translateY(${cardScrolled * 0.1}px)`;
          }
        });
      };

      let ticking = false;
      window.addEventListener('scroll', () => {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            handleScroll();
            ticking = false;
          });
          ticking = true;
        }
      });

      handleScroll();
    }
  }

  customElements.define('homepage-block-{{ ai_gen_id }}', HomepageBlock{{ai_gen_id}});
})();
</script>

