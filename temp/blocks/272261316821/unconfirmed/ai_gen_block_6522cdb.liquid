<script>
  (function() {
    class TentreeHomepage{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.parallaxBg = this.querySelector('[data-parallax]');
        this.tabButtons = this.querySelectorAll('.tentree-tab-{{ ai_gen_id }}');
      }

      connectedCallback() {
        this.setupParallax();
        this.setupTabs();
      }

      setupParallax() {
        if (!this.parallaxBg) return;

        let ticking = false;
        const handleScroll = () => {
          if (!ticking) {
            window.requestAnimationFrame(() => {
              const scrolled = window.pageYOffset;
              const parallaxSpeed = {{ block.settings.parallax_speed }};
              this.parallaxBg.style.transform = 'translateY(' + (scrolled * parallaxSpeed) + 'px)';
              ticking = false;
            });
            ticking = true;
          }
        };

        window.addEventListener('scroll', handleScroll, { passive: true });
      }

      setupTabs() {
        this.tabButtons.forEach(button => {
          button.addEventListener('click', (e) => {
            e.preventDefault();
            
            const tabId = button.getAttribute('data-tab');
            const tabList = button.closest('.tentree-tabs-{{ ai_gen_id }}');
            const sectionType = tabList.getAttribute('data-section');
            const parentSection = button.closest('.tentree-section-{{ ai_gen_id }}');
            
            const sectionTabs = parentSection.querySelectorAll('.tentree-tab-{{ ai_gen_id }}');
            const sectionContents = parentSection.querySelectorAll('.tentree-tab-content-{{ ai_gen_id }}[data-section="' + sectionType + '"]');

            sectionTabs.forEach(tab => {
              tab.classList.remove('active');
              tab.setAttribute('aria-selected', 'false');
            });

            sectionContents.forEach(content => {
              content.classList.remove('active');
            });

            button.classList.add('active');
            button.setAttribute('aria-selected', 'true');

            const targetContent = parentSection.querySelector('.tentree-tab-content-{{ ai_gen_id }}[data-content="' + tabId + '"][data-section="' + sectionType + '"]');
            if (targetContent) {
              targetContent.classList.add('active');
            }
          });
        });
      }
    }

    customElements.define('tentree-homepage-{{ ai_gen_id }}', TentreeHomepage{{ ai_gen_id }});
  })();
</script>

