  @prompt
    A newly styled about Us Page according to your choice using tailwind css and threejs

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-about-us-{{ ai_gen_id }} {
    padding: 80px 20px;
    background: {{ block.settings.background_color }};
    position: relative;
    overflow: hidden;
  }

  .ai-about-us-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .ai-about-us-hero-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 80px;
  }

  .ai-about-us-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 24px;
    font-weight: 700;
    line-height: 1.2;
  }

  .ai-about-us-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .ai-about-us-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    margin-bottom: 80px;
  }

  .ai-about-us-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.body_size }}px;
    line-height: 1.7;
  }

  .ai-about-us-text-{{ ai_gen_id }} h3 {
    font-size: {{ block.settings.section_title_size }}px;
    margin: 0 0 20px;
    color: {{ block.settings.accent_color }};
    font-weight: 600;
  }

  .ai-about-us-image-container-{{ ai_gen_id }} {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .ai-about-us-image-{{ ai_gen_id }} {
    width: 100%;
    height: 400px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-about-us-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 400px;
    background: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-about-us-image-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-about-us-stats-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
    margin-bottom: 80px;
  }

  .ai-about-us-stat-{{ ai_gen_id }} {
    text-align: center;
    padding: 30px 20px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-about-us-stat-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .ai-about-us-stat-number-{{ ai_gen_id }} {
    font-size: 48px;
    font-weight: 700;
    color: {{ block.settings.accent_color }};
    margin: 0 0 8px;
    line-height: 1;
  }

  .ai-about-us-stat-label-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0;
  }

  .ai-about-us-team-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-about-us-team-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 50px;
    font-weight: 600;
  }

  .ai-about-us-team-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
  }

  .ai-about-us-team-member-{{ ai_gen_id }} {
    text-align: center;
    padding: 30px 20px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: transform 0.3s ease;
  }

  .ai-about-us-team-member-{{ ai_gen_id }}:hover {
    transform: translateY(-10px);
  }

  .ai-about-us-team-avatar-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin: 0 auto 20px;
    background: {{ block.settings.accent_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32px;
    font-weight: 700;
    color: white;
  }

  .ai-about-us-team-name-{{ ai_gen_id }} {
    font-size: 20px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px;
  }

  .ai-about-us-team-role-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.accent_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-about-us-floating-shapes-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .ai-about-us-shape-{{ ai_gen_id }} {
    position: absolute;
    background: {{ block.settings.accent_color }};
    opacity: 0.1;
    border-radius: 50%;
    animation: ai-about-us-float-{{ ai_gen_id }} 6s ease-in-out infinite;
  }

  .ai-about-us-shape-1-{{ ai_gen_id }} {
    width: 100px;
    height: 100px;
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }

  .ai-about-us-shape-2-{{ ai_gen_id }} {
    width: 150px;
    height: 150px;
    top: 60%;
    right: 10%;
    animation-delay: 2s;
  }

  .ai-about-us-shape-3-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    bottom: 20%;
    left: 20%;
    animation-delay: 4s;
  }

  @keyframes ai-about-us-float-{{ ai_gen_id }} {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
    }
  }

  @media screen and (max-width: 768px) {
    .ai-about-us-{{ ai_gen_id }} {
      padding: 60px 20px;
    }

    .ai-about-us-hero-{{ ai_gen_id }} {
      margin-bottom: 60px;
    }

    .ai-about-us-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-about-us-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
      margin-bottom: 60px;
    }

    .ai-about-us-stats-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
      margin-bottom: 60px;
    }

    .ai-about-us-team-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }
{% endstyle %}

<about-us-{{ ai_gen_id }} class="ai-about-us-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-about-us-floating-shapes-{{ ai_gen_id }}">
    <div class="ai-about-us-shape-{{ ai_gen_id }} ai-about-us-shape-1-{{ ai_gen_id }}"></div>
    <div class="ai-about-us-shape-{{ ai_gen_id }} ai-about-us-shape-2-{{ ai_gen_id }}"></div>
    <div class="ai-about-us-shape-{{ ai_gen_id }} ai-about-us-shape-3-{{ ai_gen_id }}"></div>
  </div>

  <div class="ai-about-us-container-{{ ai_gen_id }}">
    <div class="ai-about-us-hero-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h1 class="ai-about-us-title-{{ ai_gen_id }}">{{ block.settings.title }}</h1>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <div class="ai-about-us-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
      {% endif %}
    </div>

    <div class="ai-about-us-content-{{ ai_gen_id }}">
      <div class="ai-about-us-text-{{ ai_gen_id }}">
        {% if block.settings.section_title != blank %}
          <h3>{{ block.settings.section_title }}</h3>
        {% endif %}
        {% if block.settings.description != blank %}
          {{ block.settings.description }}
        {% endif %}
      </div>
      <div class="ai-about-us-image-container-{{ ai_gen_id }}">
        {% if block.settings.about_image %}
          <img
            src="{{ block.settings.about_image | image_url: width: 600 }}"
            alt="{{ block.settings.about_image.alt | escape }}"
            class="ai-about-us-image-{{ ai_gen_id }}"
            loading="lazy"
            width="600"
            height="400"
          >
        {% else %}
          <div class="ai-about-us-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>

    {% if block.settings.show_stats %}
      <div class="ai-about-us-stats-{{ ai_gen_id }}">
        {% if block.settings.stat_1_number != blank %}
          <div class="ai-about-us-stat-{{ ai_gen_id }}">
            <div class="ai-about-us-stat-number-{{ ai_gen_id }}">{{ block.settings.stat_1_number }}</div>
            <div class="ai-about-us-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_1_label }}</div>
          </div>
        {% endif %}
        {% if block.settings.stat_2_number != blank %}
          <div class="ai-about-us-stat-{{ ai_gen_id }}">
            <div class="ai-about-us-stat-number-{{ ai_gen_id }}">{{ block.settings.stat_2_number }}</div>
            <div class="ai-about-us-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_2_label }}</div>
          </div>
        {% endif %}
        {% if block.settings.stat_3_number != blank %}
          <div class="ai-about-us-stat-{{ ai_gen_id }}">
            <div class="ai-about-us-stat-number-{{ ai_gen_id }}">{{ block.settings.stat_3_number }}</div>
            <div class="ai-about-us-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_3_label }}</div>
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.show_team %}
      <div class="ai-about-us-team-{{ ai_gen_id }}">
        {% if block.settings.team_title != blank %}
          <h2 class="ai-about-us-team-title-{{ ai_gen_id }}">{{ block.settings.team_title }}</h2>
        {% endif %}
        <div class="ai-about-us-team-grid-{{ ai_gen_id }}">
          {% if block.settings.member_1_name != blank %}
            <div class="ai-about-us-team-member-{{ ai_gen_id }}">
              <div class="ai-about-us-team-avatar-{{ ai_gen_id }}">
                {{ block.settings.member_1_name | slice: 0 }}
              </div>
              <div class="ai-about-us-team-name-{{ ai_gen_id }}">{{ block.settings.member_1_name }}</div>
              <div class="ai-about-us-team-role-{{ ai_gen_id }}">{{ block.settings.member_1_role }}</div>
            </div>
          {% endif %}
          {% if block.settings.member_2_name != blank %}
            <div class="ai-about-us-team-member-{{ ai_gen_id }}">
              <div class="ai-about-us-team-avatar-{{ ai_gen_id }}">
                {{ block.settings.member_2_name | slice: 0 }}
              </div>
              <div class="ai-about-us-team-name-{{ ai_gen_id }}">{{ block.settings.member_2_name }}</div>
              <div class="ai-about-us-team-role-{{ ai_gen_id }}">{{ block.settings.member_2_role }}</div>
            </div>
          {% endif %}
          {% if block.settings.member_3_name != blank %}
            <div class="ai-about-us-team-member-{{ ai_gen_id }}">
              <div class="ai-about-us-team-avatar-{{ ai_gen_id }}">
                {{ block.settings.member_3_name | slice: 0 }}
              </div>
              <div class="ai-about-us-team-name-{{ ai_gen_id }}">{{ block.settings.member_3_name }}</div>
              <div class="ai-about-us-team-role-{{ ai_gen_id }}">{{ block.settings.member_3_role }}</div>
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</about-us-{{ ai_gen_id }}>

<script>
  (function() {
    class AboutUs{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.initScrollAnimations();
      }

      initScrollAnimations() {
        const elements = this.querySelectorAll('.ai-about-us-stat-{{ ai_gen_id }}, .ai-about-us-team-member-{{ ai_gen_id }}');
        
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0)';
            }
          });
        }, {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        });

        elements.forEach((element) => {
          element.style.opacity = '0';
          element.style.transform = 'translateY(30px)';
          element.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
          observer.observe(element);
        });
      }
    }

    customElements.define('about-us-{{ ai_gen_id }}', AboutUs{{ ai_gen_id }});
  })();
</script>

