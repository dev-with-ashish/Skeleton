{% doc %}
  @prompt
    a section to show our printing service with 3 feature and 9 products generate a newly and latest styled section using tailwind and threejs

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-printing-service-{{ ai_gen_id }} {
    padding: 80px 20px;
    background: linear-gradient(135deg, {{ block.settings.background_color }} 0%, {{ block.settings.background_gradient_color }} 100%);
    color: {{ block.settings.text_color }};
  }

  .ai-printing-service-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-printing-service-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 60px;
  }

  .ai-printing-service-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    margin: 0 0 16px;
    background: linear-gradient(45deg, {{ block.settings.title_color }}, {{ block.settings.title_accent_color }});
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .ai-printing-service-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .ai-printing-service-features-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-bottom: 80px;
  }

  .ai-printing-service-feature-{{ ai_gen_id }} {
    background: {{ block.settings.feature_bg_color }};
    padding: 40px 30px;
    border-radius: {{ block.settings.border_radius }}px;
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .ai-printing-service-feature-{{ ai_gen_id }}:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .ai-printing-service-feature-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, {{ block.settings.accent_color }}, {{ block.settings.accent_secondary_color }});
  }

  .ai-printing-service-feature-icon-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    margin: 0 auto 20px;
    background: linear-gradient(45deg, {{ block.settings.accent_color }}, {{ block.settings.accent_secondary_color }});
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 24px;
  }

  .ai-printing-service-feature-title-{{ ai_gen_id }} {
    font-size: 20px;
    font-weight: 600;
    margin: 0 0 12px;
    color: {{ block.settings.feature_title_color }};
  }

  .ai-printing-service-feature-description-{{ ai_gen_id }} {
    font-size: 14px;
    line-height: 1.6;
    opacity: 0.8;
  }

  .ai-printing-service-products-{{ ai_gen_id }} {
    margin-top: 60px;
  }

  .ai-printing-service-products-title-{{ ai_gen_id }} {
    font-size: 32px;
    font-weight: 600;
    text-align: center;
    margin-bottom: 40px;
    color: {{ block.settings.products_title_color }};
  }

  .ai-printing-service-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
  }

  .ai-printing-service-product-{{ ai_gen_id }} {
    background: {{ block.settings.product_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
  }

  .ai-printing-service-product-{{ ai_gen_id }}:hover {
    transform: scale(1.05);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
  }

  .ai-printing-service-product-image-{{ ai_gen_id }} {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .ai-printing-service-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-printing-service-product-{{ ai_gen_id }}:hover .ai-printing-service-product-image-{{ ai_gen_id }} img {
    transform: scale(1.1);
  }

  .ai-printing-service-product-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, #f0f0f0, #e0e0e0);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-printing-service-product-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.5;
  }

  .ai-printing-service-product-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, {{ block.settings.accent_color }}cc, {{ block.settings.accent_secondary_color }}cc);
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-printing-service-product-{{ ai_gen_id }}:hover .ai-printing-service-product-overlay-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-printing-service-product-view-btn-{{ ai_gen_id }} {
    background: white;
    color: {{ block.settings.accent_color }};
    padding: 10px 20px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    transition: transform 0.2s ease;
  }

  .ai-printing-service-product-view-btn-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
  }

  .ai-printing-service-product-info-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-printing-service-product-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px;
    color: {{ block.settings.product_title_color }};
  }

  .ai-printing-service-product-price-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 700;
    color: {{ block.settings.accent_color }};
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    .ai-printing-service-{{ ai_gen_id }} {
      padding: 40px 15px;
    }

    .ai-printing-service-features-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
      margin-bottom: 40px;
    }

    .ai-printing-service-products-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }

    .ai-printing-service-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-printing-service-products-title-{{ ai_gen_id }} {
      font-size: 24px;
    }
  }
{% endstyle %}

<div class="ai-printing-service-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-printing-service-container-{{ ai_gen_id }}">
    <div class="ai-printing-service-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-printing-service-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-printing-service-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="ai-printing-service-features-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign feature_title_key = 'feature_' | append: i | append: '_title'
          assign feature_description_key = 'feature_' | append: i | append: '_description'
          assign feature_icon_key = 'feature_' | append: i | append: '_icon'
          
          assign feature_title = block.settings[feature_title_key]
          assign feature_description = block.settings[feature_description_key]
          assign feature_icon = block.settings[feature_icon_key]
        %}
        
        {% if feature_title != blank %}
          <div class="ai-printing-service-feature-{{ ai_gen_id }}">
            <div class="ai-printing-service-feature-icon-{{ ai_gen_id }}">
              {% case feature_icon %}
                {% when 'print' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
                  </svg>
                {% when 'fast' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                {% when 'quality' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                {% when 'design' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3H5a2 2 0 00-2 2v12a4 4 0 004 4h2a2 2 0 002-2V5a2 2 0 00-2-2z" />
                  </svg>
                {% else %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                  </svg>
              {% endcase %}
            </div>
            <h3 class="ai-printing-service-feature-title-{{ ai_gen_id }}">{{ feature_title }}</h3>
            {% if feature_description != blank %}
              <p class="ai-printing-service-feature-description-{{ ai_gen_id }}">{{ feature_description }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.products_title != blank %}
      <div class="ai-printing-service-products-{{ ai_gen_id }}">
        <h3 class="ai-printing-service-products-title-{{ ai_gen_id }}">{{ block.settings.products_title }}</h3>
        <div class="ai-printing-service-products-grid-{{ ai_gen_id }}">
          {% for i in (1..9) %}
            {% liquid
              assign product_key = 'product_' | append: i
              assign product = block.settings[product_key]
            %}
            
            {% if product != blank %}
              <div class="ai-printing-service-product-{{ ai_gen_id }}">
                <div class="ai-printing-service-product-image-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 400 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      loading="lazy"
                      width="400"
                      height="200"
                    >
                  {% else %}
                    <div class="ai-printing-service-product-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                  <div class="ai-printing-service-product-overlay-{{ ai_gen_id }}">
                    <a href="{{ product.url }}" class="ai-printing-service-product-view-btn-{{ ai_gen_id }}">
                      View Product
                    </a>
                  </div>
                </div>
                <div class="ai-printing-service-product-info-{{ ai_gen_id }}">
                  <h4 class="ai-printing-service-product-title-{{ ai_gen_id }}">{{ product.title }}</h4>
                  <p class="ai-printing-service-product-price-{{ ai_gen_id }}">{{ product.price | money }}</p>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

