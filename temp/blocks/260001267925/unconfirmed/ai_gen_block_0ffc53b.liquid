  .ai-event-planning-image-8-{{ ai_gen_id }} {
    top: 14.6%;
    left: 14.6%;
    transform: translate(-50%, -50%);
    background-color: {{ block.settings.circle_color_8 }};
  }

  @media screen and (max-width: 768px) {
    .ai-event-planning-{{ ai_gen_id }} {
