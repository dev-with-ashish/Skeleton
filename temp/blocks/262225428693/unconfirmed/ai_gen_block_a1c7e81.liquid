{% doc %}
  @prompt
    A magazine-style editorial layout

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-layout-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-editorial-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto auto;
    gap: {{ block.settings.grid_gap }}px;
    grid-template-areas:
      "hero hero"
      "article1 article2"
      "article3 article4";
  }

  .ai-editorial-hero-{{ ai_gen_id }} {
    grid-area: hero;
    position: relative;
    min-height: 400px;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-editorial-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-hero-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-editorial-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-editorial-hero-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    color: white;
    padding: 40px 30px 30px;
  }

  .ai-editorial-hero-category-{{ ai_gen_id }} {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 8px;
    color: {{ block.settings.accent_color }};
    font-weight: 600;
  }

  .ai-editorial-hero-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_title_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 12px;}

  .ai-editorial-hero-excerpt-{{ ai_gen_id }} {
    font-size: 16px;
    line-height: 1.5;
    opacity: 0.9;
    margin: 0;
  }

  .ai-editorial-article-{{ ai_gen_id }} {
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.card_background_color }};
    transition: transform 0.3s ease;
  }

  .ai-editorial-article-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-editorial-article-1-{{ ai_gen_id }} {
    grid-area: article1;
  }

  .ai-editorial-article-2-{{ ai_gen_id }} {
    grid-area: article2;
  }

  .ai-editorial-article-3-{{ ai_gen_id }} {
    grid-area: article3;
  }

  .ai-editorial-article-4-{{ ai_gen_id }} {
    grid-area: article4;
  }

  .ai-editorial-article-image-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .ai-editorial-article-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-editorial-article-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
  }

  .ai-editorial-article-content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-editorial-article-category-{{ ai_gen_id }} {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: {{ block.settings.accent_color }};
    font-weight: 600;
    margin-bottom: 8px;
  }

  .ai-editorial-article-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.article_title_size }}px;
    font-weight: 600;
    line-height: 1.3;
    margin: 0 0 8px;
    color: {{ block.settings.text_color }};
  }

  .ai-editorial-article-excerpt-{{ ai_gen_id }} {
    font-size: 14px;
    line-height: 1.5;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0 0 12px;
  }

  .ai-editorial-article-meta-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-editorial-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-editorial-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      grid-template-areas:
        "hero"
        "article1"
        "article2"
        "article3"
        "article4";
    }

    .ai-editorial-hero-{{ ai_gen_id }} {
      min-height: 300px;
    }

    .ai-editorial-hero-content-{{ ai_gen_id }} {
      padding: 30px 20px 20px;
    }

    .ai-editorial-hero-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.hero_title_size | times: 0.8 }}px;
    }

    .ai-editorial-article-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.article_title_size | times: 0.9 }}px;
    }
  }
{% endstyle %}<div class="ai-editorial-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-editorial-grid-{{ ai_gen_id }}">
    <article class="ai-editorial-hero-{{ ai_gen_id }}">
      {% if block.settings.hero_image %}
        <img
          src="{{ block.settings.hero_image | image_url: width: 1200}}"
          alt="{{ block.settings.hero_image.alt | escape }}"
          class="ai-editorial-hero-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.hero_image.width }}"
          height="{{ block.settings.hero_image.height }}"
        >
      {% else %}
        <div class="ai-editorial-hero-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}<div class="ai-editorial-empty-state-{{ ai_gen_id }}">
            Add a hero image to get started
          </div>
        </div>
      {% endif %}
      <div class="ai-editorial-hero-content-{{ ai_gen_id }}">
        {% if block.settings.hero_category != blank %}
          <div class="ai-editorial-hero-category-{{ ai_gen_id }}">
            {{ block.settings.hero_category }}
          </div>
        {% endif %}
        {% if block.settings.hero_title != blank %}
          <h2 class="ai-editorial-hero-title-{{ ai_gen_id }}">
            {{ block.settings.hero_title }}
          </h2>
        {% endif %}
        {% if block.settings.hero_excerpt != blank %}
          <p class="ai-editorial-hero-excerpt-{{ ai_gen_id }}">
            {{ block.settings.hero_excerpt }}
          </p>
        {% endif %}
      </div>
    </article>

    {% for i in (1..4) %}
      {% liquid
        assign article_image_key = 'article_' | append: i | append: '_image'
        assign article_category_key = 'article_' | append: i | append: '_category'
        assign article_title_key = 'article_' | append: i | append: '_title'
        assign article_excerpt_key = 'article_' | append: i | append: '_excerpt'
        assign article_date_key = 'article_' | append: i | append: '_date'
        assign article_author_key = 'article_' | append: i | append: '_author'

        assign article_image = block.settings[article_image_key]
        assign article_category = block.settings[article_category_key]
        assign article_title = block.settings[article_title_key]
        assign article_excerpt = block.settings[article_excerpt_key]
        assign article_date = block.settings[article_date_key]
        assign article_author = block.settings[article_author_key]
      %}

      <article class="ai-editorial-article-{{ ai_gen_id }} ai-editorial-article-{{ i }}-{{ ai_gen_id }}">
        {% if article_image %}
          <img
            src="{{ article_image | image_url: width: 600 }}"
            alt="{{ article_image.alt | escape }}"
            class="ai-editorial-article-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ article_image.width }}"
            height="{{ article_image.height }}"
          >
        {% else %}
          <div class="ai-editorial-article-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}

        <div class="ai-editorial-article-content-{{ ai_gen_id }}">
          {% if article_category != blank %}
            <div class="ai-editorial-article-category-{{ ai_gen_id }}">
              {{ article_category }}
            </div>
          {% endif %}
          {% if article_title != blank %}
            <h3 class="ai-editorial-article-title-{{ ai_gen_id }}">
              {{ article_title }}
            </h3>
          {% endif %}
          {% if article_excerpt != blank %}
            <p class="ai-editorial-article-excerpt-{{ ai_gen_id }}">
              {{ article_excerpt }}
            </p>
          {% endif %}
          {% if article_date != blank or article_author != blank %}
            <div class="ai-editorial-article-meta-{{ ai_gen_id }}">
              {% if article_date != blank %}
                {{ article_date }}
              {% endif %}
              {% if article_date != blank and article_author != blank %}
                â€¢
              {% endif %}
              {% if article_author != blank %}
                {{ article_author }}
              {% endif %}
            </div>
          {% endif %}
        </div>
      </article>
    {% endfor %}
  </div>
</div>

