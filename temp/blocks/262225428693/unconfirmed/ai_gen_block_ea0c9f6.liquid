{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-news-section-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-news-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-news-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-news-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;}

  .ai-news-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 30px;
    margin-bottom: 40px;
  }

  .ai-news-featured-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-news-featured-image-{{ ai_gen_id }} {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-news-featured-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 400px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-news-featured-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-news-featured-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    padding: 30px;
    border-radius: 0 0 {{ block.settings.border_radius }}px {{ block.settings.border_radius }}px;}

  .ai-news-featured-category-{{ ai_gen_id }} {
    background-color: {{ block.settings.accent_color }};
    color: white;
    padding: 4px 12px;
    border-radius: 15px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    display: inline-block;
    margin-bottom: 10px;
  }

  .ai-news-featured-title-{{ ai_gen_id }} {
    color: white;
    font-size: 24px;
    font-weight: 700;
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .ai-news-featured-excerpt-{{ ai_gen_id }} {
    color: rgba(255, 255, 255, 0.9);
    font-size: 14px;
    line-height: 1.5;
    margin: 0 0 10px;
  }

  .ai-news-featured-meta-{{ ai_gen_id }} {
    color: rgba(255, 255, 255, 0.8);
    font-size: 12px;
  }

  .ai-news-sidebar-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ai-news-sidebar-item-{{ ai_gen_id }} {
    display: flex;
    gap: 15px;
    padding-bottom: 20px;
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-news-sidebar-item-{{ ai_gen_id }}:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .ai-news-sidebar-image-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: {{ block.settings.border_radius }}px;
    flex-shrink: 0;
  }

  .ai-news-sidebar-placeholder-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .ai-news-sidebar-placeholder-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
  }

  .ai-news-sidebar-content-{{ ai_gen_id }} {
    flex: 1;}

  .ai-news-sidebar-category-{{ ai_gen_id }} {
    color: {{ block.settings.accent_color }};
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 5px;
  }

  .ai-news-sidebar-title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: 14px;
    font-weight: 600;
    line-height: 1.4;
    margin: 0 0 5px;
  }

  .ai-news-sidebar-meta-{{ ai_gen_id }} {
    color: {{ block.settings.meta_color }};
    font-size: 11px;
  }

  .ai-news-more-stories-{{ ai_gen_id }} {
    border-top: 2px solid {{ block.settings.accent_color }};
    padding-top: 30px;
  }

  .ai-news-more-title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: 18px;
    font-weight: 700;
    margin: 0 0 20px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-news-more-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 25px;
  }

  .ai-news-more-item-{{ ai_gen_id }} {
    border: 1px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-news-more-item-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .ai-news-more-image-{{ ai_gen_id }} {
    width: 100%;
    height: 180px;
    object-fit: cover;
  }

  .ai-news-more-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 180px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-news-more-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
  }

  .ai-news-more-content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-news-more-category-{{ ai_gen_id }} {
    color: {{ block.settings.accent_color }};
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
  }

  .ai-news-more-item-title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: 16px;
    font-weight: 600;
    line-height: 1.4;
    margin: 0 0 8px;
  }

  .ai-news-more-excerpt-{{ ai_gen_id }} {
    color: {{ block.settings.meta_color }};
    font-size: 13px;
    line-height: 1.5;
    margin: 0 0 10px;
  }

  .ai-news-more-meta-{{ ai_gen_id }} {
    color: {{ block.settings.meta_color }};
    font-size: 11px;
  }

  .ai-news-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #666;
    font-size: 14px;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-news-section-{{ ai_gen_id }} {
      padding: 20px 15px;
    }

    .ai-news-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-news-featured-image-{{ ai_gen_id }},
    .ai-news-featured-placeholder-{{ ai_gen_id }} {
      height: 250px;
    }

    .ai-news-featured-title-{{ ai_gen_id }} {
      font-size: 20px;
    }

    .ai-news-more-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-news-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-news-header-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank %}
      <h2 class="ai-news-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
    {% endif %}
    {% if block.settings.section_subtitle != blank %}
      <p class="ai-news-subtitle-{{ ai_gen_id }}">{{ block.settings.section_subtitle }}</p>
    {% endif %}
  </div>

  <div class="ai-news-grid-{{ ai_gen_id }}">
    <div class="ai-news-featured-{{ ai_gen_id }}">
      {% if block.settings.featured_article %}
        {% assign featured = block.settings.featured_article %}
        {% if featured.image %}
          <img
            src="{{ featured.image | image_url: width: 800 }}"
            alt="{{ featured.image.alt | escape }}"
            class="ai-news-featured-image-{{ ai_gen_id }}"
            loading="lazy"
          >
        {% else %}
          <div class="ai-news-featured-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
        <div class="ai-news-featured-overlay-{{ ai_gen_id }}">
          {% if block.settings.featured_category != blank %}
            <span class="ai-news-featured-category-{{ ai_gen_id }}">{{ block.settings.featured_category }}</span>
          {% endif %}<h3 class="ai-news-featured-title-{{ ai_gen_id }}">{{ featured.title }}</h3>
          {% if featured.excerpt != blank %}
            <p class="ai-news-featured-excerpt-{{ ai_gen_id }}">{{ featured.excerpt | truncate: 120 }}</p>
          {% endif %}
          <div class="ai-news-featured-meta-{{ ai_gen_id }}">
            {{ featured.published_at | date: '%B %d, %Y' }} â€¢ {{ featured.author }}
          </div>
        </div>
      {% else %}
        <div class="ai-news-featured-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-news-empty-state-{{ ai_gen_id }}">
            Select a featured article
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-news-sidebar-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% assign article_key = 'sidebar_article_' | append: i %}
        {% assign category_key = 'sidebar_category_' | append: i %}
        {% assign article = block.settings[article_key] %}
        {% assign category = block.settings[category_key] %}

        {% if article %}
          <div class="ai-news-sidebar-item-{{ ai_gen_id }}">
            {% if article.image %}
              <img
                src="{{ article.image | image_url: width: 160 }}"
                alt="{{ article.image.alt | escape }}"
                class="ai-news-sidebar-image-{{ ai_gen_id }}"
                loading="lazy"
              >
            {% else %}
              <div class="ai-news-sidebar-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
            <div class="ai-news-sidebar-content-{{ ai_gen_id }}">
              {% if category != blank %}
                <div class="ai-news-sidebar-category-{{ ai_gen_id }}">{{ category }}</div>
              {% endif %}
              <h4 class="ai-news-sidebar-title-{{ ai_gen_id }}">{{ article.title }}</h4>
              <div class="ai-news-sidebar-meta-{{ ai_gen_id }}">
                {{ article.published_at | date: '%b %d' }} â€¢ {{ article.author }}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  {% if block.settings.show_more_stories %}
    <div class="ai-news-more-stories-{{ ai_gen_id }}">
      <h3 class="ai-news-more-title-{{ ai_gen_id }}">More Stories</h3>
      <div class="ai-news-more-grid-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% assign more_article_key = 'more_article_' | append: i %}
          {% assign more_category_key = 'more_category_' | append: i %}
          {% assign more_article = block.settings[more_article_key] %}
          {% assign more_category = block.settings[more_category_key] %}

          {% if more_article %}
            <div class="ai-news-more-item-{{ ai_gen_id }}">
              {% if more_article.image %}
                <img
                  src="{{ more_article.image | image_url: width: 400 }}"
                  alt="{{ more_article.image.alt | escape }}"
                  class="ai-news-more-image-{{ ai_gen_id }}"
                  loading="lazy"
                >
              {% else %}
                <div class="ai-news-more-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
              <div class="ai-news-more-content-{{ ai_gen_id }}">
                {% if more_category != blank %}
                  <div class="ai-news-more-category-{{ ai_gen_id }}">{{ more_category }}</div>
                {% endif %}
                <h4 class="ai-news-more-item-title-{{ ai_gen_id }}">{{ more_article.title }}</h4>
                {% if more_article.excerpt != blank %}
                  <p class="ai-news-more-excerpt-{{ ai_gen_id }}">{{ more_article.excerpt | truncate: 80 }}</p>
                {% endif %}
                <div class="ai-news-more-meta-{{ ai_gen_id }}">
                  {{ more_article.published_at | date: '%B %d, %Y' }} â€¢ {{ more_article.author }}
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>

