{% doc %}
  @prompt
    create a best new styled service showcase section having title description with a suqared shape bigger image at top new slide for each serrvice when hoverd glowing shadow below

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-service-showcase-{{ ai_gen_id }} {
    padding: 60px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-service-showcase__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-service-showcase__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 50px;
  }

  .ai-service-showcase__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 20px;
    font-weight: 700;
  }

  .ai-service-showcase__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .ai-service-showcase__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-top: 50px;
  }

  .ai-service-showcase__card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 30px;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid {{ block.settings.card_border_color }};
    position: relative;
    overflow: hidden;
  }

  .ai-service-showcase__card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px {{ block.settings.glow_color }}40;
  }

  .ai-service-showcase__card-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, {{ block.settings.glow_color }}10, transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .ai-service-showcase__card-{{ ai_gen_id }}:hover::before {
    opacity: 1;
  }

  .ai-service-showcase__image-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
    margin: 0 auto25px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    position: relative;background-color: #f8f9fa;
  }

  .ai-service-showcase__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-service-showcase__card-{{ ai_gen_id }}:hover .ai-service-showcase__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-service-showcase__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f8f9fa;
  }

  .ai-service-showcase__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    color: #dee2e6;}

  .ai-service-showcase__service-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.service_title_size }}px;
    color: {{ block.settings.service_title_color }};
    margin: 0 0 15px;
    font-weight: 600;
  }

  .ai-service-showcase__service-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.service_description_size }}px;
    color: {{ block.settings.service_description_color }};
    line-height: 1.6;
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    .ai-service-showcase-{{ ai_gen_id }} {
      padding: 40px 15px;
    }

    .ai-service-showcase__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-service-showcase__card-{{ ai_gen_id }} {
      padding: 25px;
    }

    .ai-service-showcase__image-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.image_size | times: 0.8 }}px;
      height: {{ block.settings.image_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<service-showcase-{{ ai_gen_id }}
  class="ai-service-showcase-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-service-showcase__container-{{ ai_gen_id }}">
    <div class="ai-service-showcase__header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-service-showcase__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.description != blank %}
        <div class="ai-service-showcase__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}
    </div>

    <div class="ai-service-showcase__grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign service_enabled_key = 'service_' | append: i | append: '_enabled'
          assign service_image_key = 'service_' | append: i | append: '_image'
          assign service_title_key = 'service_' | append: i | append: '_title'
          assign service_description_key = 'service_' | append: i | append: '_description'

          assign service_enabled = block.settings[service_enabled_key]
          assign service_image = block.settings[service_image_key]
          assign service_title = block.settings[service_title_key]
          assign service_description = block.settings[service_description_key]
        %}

        {% if service_enabled %}
          <div class="ai-service-showcase__card-{{ ai_gen_id }}" data-service="{{ i }}">
            <div class="ai-service-showcase__image-wrapper-{{ ai_gen_id }}">
              {% if service_image %}
                <img
                  src="{{ service_image | image_url: width: 400 }}"
                  alt="{{ service_image.alt | escape }}"
                  class="ai-service-showcase__image-{{ ai_gen_id }}"
                loading="lazy"width="400"
                  height="400"
                >
              {% else %}
                <div class="ai-service-showcase__image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if service_title != blank %}
              <h3 class="ai-service-showcase__service-title-{{ ai_gen_id }}">{{ service_title }}</h3>
            {% endif %}

            {% if service_description != blank %}
              <div class="ai-service-showcase__service-description-{{ ai_gen_id }}">{{ service_description }}</div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</service-showcase-{{ ai_gen_id }}><script>
  (function() {
    class ServiceShowcase{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.cards = this.querySelectorAll('.ai-service-showcase__card-{{ ai_gen_id }}');
        this.setupHoverEffects();
      }

      setupHoverEffects() {
        this.cards.forEach((card) => {
          card.addEventListener('mouseenter', () => {
            card.style.zIndex = '10';});

          card.addEventListener('mouseleave', () => {
            card.style.zIndex = '1';
          });
        });
      }
    }

    customElements.define('service-showcase-{{ ai_gen_id }}', ServiceShowcase{{ ai_gen_id }});
  })();
</script>

