{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-new-arrivals-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    width: 100%;
  }

  .ai-new-arrivals-container-{{ ai_gen_id }} {
    width: 100%;
    margin: 0 auto;
  }

  .ai-new-arrivals-header-{{ ai_gen_id }} {
    text-align: left;
    margin-bottom: 32px;
  }

  .ai-new-arrivals-eyebrow-{{ ai_gen_id }} {
    font-size: 12px;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: {{ block.settings.eyebrow_color }};
    margin-bottom: 12px;
    font-weight: 500;
  }

  .ai-new-arrivals-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-new-arrivals-description-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.text_color }};
    max-width: 100%;
    margin: 0;
    line-height: 1.6;
  }

  .ai-new-arrivals-tabs-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    margin-bottom: 40px;
    flex-wrap: wrap;
  }

  .ai-new-arrivals-tab-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: transparent;
    color: {{ block.settings.tab_text_color }};
    border: 1px solid {{ block.settings.tab_border_color }};
    font-size: 14px;
    letter-spacing: 1px;
    text-transform: uppercase;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: {{ block.settings.tab_border_radius }}px;
  }

  .ai-new-arrivals-tab-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.tab_hover_background }};
    border-color: {{ block.settings.tab_hover_border }};
  }

  .ai-new-arrivals-tab-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.tab_active_background }};
    color: {{ block.settings.tab_active_text_color }};
    border-color: {{ block.settings.tab_active_background }};
  }

  .ai-new-arrivals-grid-{{ ai_gen_id }} {
    display: none;
    grid-template-columns: repeat({{ block.settings.products_per_row }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: 40px;
  }

  .ai-new-arrivals-grid-{{ ai_gen_id }}.active {
    display: grid;
  }

  .ai-new-arrivals-product-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.3s ease;
  }

  .ai-new-arrivals-product-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-new-arrivals-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin-bottom: 16px;
    background-color: #f5f5f5;
    aspect-ratio: 3 / 4;
  }

  .ai-new-arrivals-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-new-arrivals-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
  }

  .ai-new-arrivals-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-new-arrivals-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    font-size: 11px;
    letter-spacing: 1px;
    text-transform: uppercase;
    font-weight: 600;
    border-radius: 2px;
  }

  .ai-new-arrivals-product-info-{{ ai_gen_id }} {
    text-align: left;
  }

  .ai-new-arrivals-product-title-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    font-weight: 500;
    line-height: 1.4;
  }

  .ai-new-arrivals-product-price-{{ ai_gen_id }} {
    font-size: 15px;
    color: {{ block.settings.product_price_color }};
    font-weight: 600;
  }

  .ai-new-arrivals-cta-wrapper-{{ ai_gen_id }} {
    text-align: left;
  }

  .ai-new-arrivals-cta-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-size: 14px;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    font-weight: 600;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: background-color 0.3s ease;
  }

  .ai-new-arrivals-cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  @media screen and (max-width: 989px) {
    .ai-new-arrivals-grid-{{ ai_gen_id }} {
