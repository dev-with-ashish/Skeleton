{% doc %}
  @prompt
    tentree.com home page styled new arrivals section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-new-arrivals-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-new-arrivals-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-new-arrivals-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 48px;
  }

  .ai-new-arrivals-eyebrow-{{ ai_gen_id }} {
    font-size: 12px;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: {{ block.settings.eyebrow_color }};
    margin-bottom: 12px;
    font-weight: 500;
  }

  .ai-new-arrivals-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-new-arrivals-description-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.text_color }};
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .ai-new-arrivals-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.products_per_row }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: 40px;
  }

  .ai-new-arrivals-product-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.3s ease;
  }

  .ai-new-arrivals-product-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-new-arrivals-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin-bottom: 16px;
    background-color: #f5f5f5;
    aspect-ratio: 3 / 4;
  }

  .ai-new-arrivals-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-new-arrivals-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
  }

  .ai-new-arrivals-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-new-arrivals-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    font-size: 11px;
    letter-spacing: 1px;
    text-transform: uppercase;
    font-weight: 600;
    border-radius: 2px;
  }

  .ai-new-arrivals-product-info-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-new-arrivals-product-title-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    font-weight: 500;
    line-height: 1.4;
  }

  .ai-new-arrivals-product-price-{{ ai_gen_id }} {
    font-size: 15px;
    color: {{ block.settings.product_price_color }};
    font-weight: 600;
  }

  .ai-new-arrivals-cta-wrapper-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-new-arrivals-cta-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-size: 14px;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    font-weight: 600;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: background-color 0.3s ease;
  }

  .ai-new-arrivals-cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  @media screen and (max-width: 989px) {
    .ai-new-arrivals-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .ai-new-arrivals-title-{{ ai_gen_id }} {
      font-size: 32px;
    }

    .ai-new-arrivals-header-{{ ai_gen_id }} {
      margin-bottom: 32px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-new-arrivals-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.6 }}px 16px {{ block.settings.section_padding_bottom | times: 0.6 }}px;
    }

    .ai-new-arrivals-grid-{{ ai_gen_id }} {
      gap: 16px;
    }

    .ai-new-arrivals-title-{{ ai_gen_id }} {
      font-size: 28px;
    }
  }
{% endstyle %}

<div class="ai-new-arrivals-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-new-arrivals-container-{{ ai_gen_id }}">
    <div class="ai-new-arrivals-header-{{ ai_gen_id }}">
      {% if block.settings.eyebrow_text != blank %}
        <div class="ai-new-arrivals-eyebrow-{{ ai_gen_id }}">{{ block.settings.eyebrow_text }}</div>
      {% endif %}
      {% if block.settings.heading != blank %}
        <h2 class="ai-new-arrivals-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.description != blank %}
        <div class="ai-new-arrivals-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}
    </div>

    <div class="ai-new-arrivals-grid-{{ ai_gen_id }}">
      {% if block.settings.collection != blank %}
        {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
          <a href="{{ product.url }}" class="ai-new-arrivals-product-{{ ai_gen_id }}">
            <div class="ai-new-arrivals-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-new-arrivals-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="800"
                >
              {% else %}
                <div class="ai-new-arrivals-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
              {% if block.settings.show_badge %}
                <div class="ai-new-arrivals-badge-{{ ai_gen_id }}">{{ block.settings.badge_text }}</div>
              {% endif %}
            </div>
            <div class="ai-new-arrivals-product-info-{{ ai_gen_id }}">
              <h3 class="ai-new-arrivals-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              <div class="ai-new-arrivals-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
            </div>
          </a>
        {% endfor %}
      {% else %}
        {% for i in (1..block.settings.products_to_show) %}
          <div class="ai-new-arrivals-product-{{ ai_gen_id }}">
            <div class="ai-new-arrivals-image-wrapper-{{ ai_gen_id }}">
              <div class="ai-new-arrivals-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
              {% if block.settings.show_badge %}
                <div class="ai-new-arrivals-badge-{{ ai_gen_id }}">{{ block.settings.badge_text }}</div>
              {% endif %}
            </div>
            <div class="ai-new-arrivals-product-info-{{ ai_gen_id }}">
              <h3 class="ai-new-arrivals-product-title-{{ ai_gen_id }}">Product title</h3>
              <div class="ai-new-arrivals-product-price-{{ ai_gen_id }}">â‚¹0.00</div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if block.settings.show_cta and block.settings.cta_text != blank %}
      <div class="ai-new-arrivals-cta-wrapper-{{ ai_gen_id }}">
        <a href="{{ block.settings.cta_link }}" class="ai-new-arrivals-cta-{{ ai_gen_id }}">
          {{ block.settings.cta_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

