      {% endif %}
      
      {% if block.settings.baby_name != blank %}
        <h2 class="ai-naming-ceremony-baby-name-{{ ai_gen_id }}">{{ block.settings.baby_name }}</h2>
      {% endif %}
    </div>

    <div class="ai-naming-ceremony-content-{{ ai_gen_id }}">
      <div class="ai-naming-ceremony-card-{{ ai_gen_id }}">
        <div class="ai-naming-ceremony-card-icon-{{ ai_gen_id }}">
          üïâÔ∏è
        </div>
        <h3 class="ai-naming-ceremony-card-title-{{ ai_gen_id }}">{{ block.settings.worship_title }}</h3>
        {% if block.settings.worship_time != blank %}
          <div class="ai-naming-ceremony-time-{{ ai_gen_id }}">{{ block.settings.worship_time }}</div>
        {% endif %}
        {% if block.settings.worship_description != blank %}
