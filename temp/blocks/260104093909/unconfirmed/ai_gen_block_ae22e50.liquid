        {% endif %}</div>

      <div class="ai-naming-ceremony-card-{{ ai_gen_id }}">
        <div class="ai-naming-ceremony-card-icon-{{ ai_gen_id }}">üçΩÔ∏è
        </div>
        <h3 class="ai-naming-ceremony-card-title-{{ ai_gen_id }}">{{ block.settings.lunch_title }}</h3>
        {% if block.settings.lunch_time != blank %}
          <div class="ai-naming-ceremony-time-{{ ai_gen_id }}">{{ block.settings.lunch_time }}</div>
        {% endif %}
        {% if block.settings.lunch_description != blank %}
          <p class="ai-naming-ceremony-description-{{ ai_gen_id }}">{{ block.settings.lunch_description }}</p>
        {% endif %}
      </div>
    </div>

    {% if block.settings.venue_name != blank or block.settings.venue_address != blank %}
      <div class="ai-naming-ceremony-venue-{{ ai_gen_id }}">
        {% if block.settings.venue_name != blank %}
          <h3 class="ai-naming-ceremony-venue-title-{{ ai_gen_id }}">üìç {{ block.settings.venue_name }}</h3>
        {% endif %}
        {% if block.settings.venue_address != blank %}
          <div class="ai-naming-ceremony-venue-address-{{ ai_gen_id }}">{{ block.settings.venue_address }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.blessing_text != blank %}
      <div class="ai-naming-ceremony-blessing-{{ ai_gen_id }}">
        <p class="ai-naming-ceremony-blessing-text-{{ ai_gen_id }}">{{ block.settings.blessing_text }}</p>
      </div>
    {% endif %}
  </div>
</div>

