{% doc %}
  @prompt
    make a section for traditional Hindu naming ceremony for a newborn baby, where the child receives their official name add venue timing 2 time one for worship and after few hours there will be a lunch so make a animated best section for this

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-naming-ceremony-{{ ai_gen_id }} {
    background: linear-gradient(135deg, {{ block.settings.background_color_1 }} 0%, {{ block.settings.background_color_2 }} 100%);
    padding: 60px 20px;
    position: relative;
    overflow: hidden;}

  .ai-naming-ceremony-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;z-index: 2;
  }

  .ai-naming-ceremony-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 50px;
  }

  .ai-naming-ceremony-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 20px;
    font-weight: 700;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .ai-naming-ceremony-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0 0 30px;
    font-weight: 400;
    opacity: 0.9;
  }

  .ai-naming-ceremony-baby-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.baby_name_size }}px;
    color: {{ block.settings.baby_name_color }};
    margin: 0;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
  }

  .ai-naming-ceremony-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    margin-bottom: 50px;
  }

  .ai-naming-ceremony-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 30px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    border: 2px solid {{ block.settings.card_border_color }};position: relative;
    overflow: hidden;
  }

  .ai-naming-ceremony-card-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top:0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, {{ block.settings.accent_color_1 }}, {{ block.settings.accent_color_2 }});}

  .ai-naming-ceremony-card-icon-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, {{ block.settings.accent_color_1 }}, {{ block.settings.accent_color_2 }});
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
    color: white;
    font-size: 24px;
  }

  .ai-naming-ceremony-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 15px;
    font-weight: 600;
    text-align: center;
  }

  .ai-naming-ceremony-time-{{ ai_gen_id }} {
    font-size: {{ block.settings.time_size }}px;
    color: {{ block.settings.time_color }};
    font-weight: 700;
    text-align: center;
    margin-bottom: 10px;
  }

  .ai-naming-ceremony-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
    text-align: center;
    margin: 0;
  }

  .ai-naming-ceremony-venue-{{ ai_gen_id }} {
    background: {{ block.settings.venue_background }};
    border-radius: {{ block.settings.venue_border_radius }}px;
    padding: 40px;
    text-align: center;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
    border: 3px solid {{ block.settings.venue_border_color }};
  }

  .ai-naming-ceremony-venue-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.venue_title_size }}px;
    color: {{ block.settings.venue_title_color }};
    margin: 0 0 20px;
    font-weight: 600;
  }

  .ai-naming-ceremony-venue-address-{{ ai_gen_id }} {
    font-size: {{ block.settings.venue_address_size }}px;
    color: {{ block.settings.venue_address_color }};
    line-height: 1.8;
    margin: 0;
  }

  .ai-naming-ceremony-decorative-{{ ai_gen_id }} {
    position: absolute;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: linear-gradient(45deg, {{ block.settings.accent_color_1 }}40, {{ block.settings.accent_color_2 }}40);}

  .ai-naming-ceremony-decorative-{{ ai_gen_id }}:nth-child(1) {
    top: 10%;
    left: 5%;
  }

  .ai-naming-ceremony-decorative-{{ ai_gen_id }}:nth-child(2) {
    top: 20%;
    right: 8%;
    width: 80px;
    height: 80px;
  }

  .ai-naming-ceremony-decorative-{{ ai_gen_id }}:nth-child(3) {
    bottom: 15%;
    left: 10%;
    width: 60px;
    height: 60px;
  }

  .ai-naming-ceremony-decorative-{{ ai_gen_id }}:nth-child(4) {
    bottom: 25%;
    right: 5%;
    width: 120px;
    height: 120px;
  }

  .ai-naming-ceremony-blessing-{{ ai_gen_id }} {
    text-align: center;
    margin-top: 40px;
    padding: 30px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: {{ block.settings.blessing_border_radius }}px;
    backdrop-filter: blur(10px);
  }

  .ai-naming-ceremony-blessing-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.blessing_size }}px;
    color: {{ block.settings.blessing_color }};
    font-style: italic;
    line-height: 1.8;
    margin: 0;
    font-weight: 500;
  }

  @media screen and (max-width: 768px) {
    .ai-naming-ceremony-{{ ai_gen_id }} {
      padding: 40px 15px;
    }

    .ai-naming-ceremony-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;gap: 30px;
    }

    .ai-naming-ceremony-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-naming-ceremony-baby-name-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.baby_name_size }}px * 0.8);
    }

    .ai-naming-ceremony-card-{{ ai_gen_id }} {
      padding: 25px;
    }

    .ai-naming-ceremony-venue-{{ ai_gen_id }} {
      padding: 30px 20px;
    }
  }
{% endstyle %}

<div class="ai-naming-ceremony-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-naming-ceremony-decorative-{{ ai_gen_id }}"></div>
  <div class="ai-naming-ceremony-decorative-{{ ai_gen_id }}"></div>
  <div class="ai-naming-ceremony-decorative-{{ ai_gen_id }}"></div>
  <div class="ai-naming-ceremony-decorative-{{ ai_gen_id }}"></div>

  <div class="ai-naming-ceremony-container-{{ ai_gen_id }}">
    <div class="ai-naming-ceremony-header-{{ ai_gen_id }}">
      {% if block.settings.ceremony_title != blank %}
        <h1 class="ai-naming-ceremony-title-{{ ai_gen_id }}">{{ block.settings.ceremony_title }}</h1>
