{% doc %}
  @prompt
    custom product section with its all variants option showing in each row updating product price with variant change
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-variants-{{ ai_gen_id }} {
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-product-variants__container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-product-variants__header-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-product-variants__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px;
    font-weight: 600;
  }

  .ai-product-variants__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0;
  }

  .ai-product-variants__product-info-{{ ai_gen_id }} {
    display: flex;
    gap: 24px;
    align-items: flex-start;
  }

  .ai-product-variants__image-{{ ai_gen_id }} {
    flex: 0 0 300px;
    width: 300px;
    height: 300px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-product-variants__image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-variants__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-variants__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-product-variants__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
  }

  .ai-product-variants__details-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-product-variants__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-product-variants__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 700;
    margin-bottom: 24px;
  }

  .ai-product-variants__variants-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-product-variants__variant-row-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 12px 16px;
    border: 2px solid {{ block.settings.variant_border_color }};
    border-radius: {{ block.settings.variant_border_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    background-color: {{ block.settings.variant_background_color }};
  }

  .ai-product-variants__variant-row-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.variant_hover_border_color }};
    background-color: {{ block.settings.variant_hover_background_color }};
  }

  .ai-product-variants__variant-row-{{ ai_gen_id }}.selected {
    border-color: {{ block.settings.variant_selected_border_color }};
    background-color: {{ block.settings.variant_selected_background_color }};
  }

  .ai-product-variants__variant-radio-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    border: 2px solid {{ block.settings.radio_border_color }};
    border-radius: 50%;
    position: relative;
    flex-shrink: 0;
  }

  .ai-product-variants__variant-radio-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.radio_selected_color }};
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-product-variants__variant-row-{{ ai_gen_id }}.selected .ai-product-variants__variant-radio-{{ ai_gen_id }}::after {
    opacity: 1;
  }

  .ai-product-variants__variant-info-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .ai-product-variants__variant-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.variant_title_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 500;
  }

  .ai-product-variants__variant-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.variant_price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 600;
  }

  .ai-product-variants__variant-availability-{{ ai_gen_id }} {
    font-size: 12px;
    padding: 4px 8px;
    border-radius: 12px;
    font-weight: 500;
  }

  .ai-product-variants__variant-availability-{{ ai_gen_id }}.in-stock {
    background-color: #e8f5e8;
    color: #2d5a2d;
  }

  .ai-product-variants__variant-availability-{{ ai_gen_id }}.out-of-stock {
    background-color: #ffeaea;
    color: #d32f2f;
  }

  .ai-product-variants__add-to-cart-{{ ai_gen_id }} {
    margin-top: 24px;
  }

  .ai-product-variants__add-button-{{ ai_gen_id }} {
    width: 100%;
    padding: 16px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-product-variants__add-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-product-variants__add-button-{{ ai_gen_id }}:disabled {
    background-color: #cccccc;
    cursor: not-allowed;
  }

  .ai-product-variants__empty-product-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-style: italic;
  }

  @media screen and (max-width: 768px) {
    .ai-product-variants__product-info-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 16px;
    }

    .ai-product-variants__image-{{ ai_gen_id }} {
      flex: none;
      width: 100%;
      max-width: 300px;
      margin: 0 auto;
    }

    .ai-product-variants__variant-info-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
      gap: 4px;
    }
  }
{% endstyle %}

<product-variants-{{ ai_gen_id }}
  class="ai-product-variants-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-product-variants__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.description != blank %}
      <div class="ai-product-variants__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-product-variants__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <p class="ai-product-variants__description-{{ ai_gen_id }}">{{ block.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.product != blank %}
      {% assign product = block.settings.product %}
      
      <div class="ai-product-variants__product-info-{{ ai_gen_id }}">
        <div class="ai-product-variants__image-{{ ai_gen_id }}">
          {% if product.featured_image %}
            <img
              src="{{ product.featured_image | image_url: width: 600 }}"
              alt="{{ product.featured_image.alt | escape }}"
              loading="lazy"
              width="600"
              height="600"
              id="ai-product-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-product-variants__image-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        <div class="ai-product-variants__details-{{ ai_gen_id }}">
          <h3 class="ai-product-variants__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
          
          <div class="ai-product-variants__price-{{ ai_gen_id }}" id="ai-current-price-{{ ai_gen_id }}">
            {{ product.price | money }}
          </div>

          {% if product.variants.size > 1 %}
            <div class="ai-product-variants__variants-{{ ai_gen_id }}">
              {% for variant in product.variants %}
                <div
                  class="ai-product-variants__variant-row-{{ ai_gen_id }} {% if forloop.first %}selected{% endif %}"
                  data-variant-id="{{ variant.id }}"
                  data-variant-price="{{ variant.price }}"
                  data-variant-available="{{ variant.available }}"
                  {% if variant.featured_image %}
                    data-variant-image="{{ variant.featured_image | image_url: width: 600 }}"
                  {% endif %}
                >
                  <div class="ai-product-variants__variant-radio-{{ ai_gen_id }}"></div>
                  
                  <div class="ai-product-variants__variant-info-{{ ai_gen_id }}">
                    <div>
                      <div class="ai-product-variants__variant-title-{{ ai_gen_id }}">
                        {{ variant.title }}
                      </div>
                      <div class="ai-product-variants__variant-availability-{{ ai_gen_id }} {% if variant.available %}in-stock{% else %}out-of-stock{% endif %}">
                        {% if variant.available %}In Stock{% else %}Out of Stock{% endif %}
                      </div>
                    </div>
                    <div class="ai-product-variants__variant-price-{{ ai_gen_id }}">
                      {{ variant.price | money }}
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>

            <div class="ai-product-variants__add-to-cart-{{ ai_gen_id }}">
              <form action="/cart/add" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" id="ai-selected-variant-{{ ai_gen_id }}" value="{{ product.variants.first.id }}">
                <button
                  type="submit"
                  class="ai-product-variants__add-button-{{ ai_gen_id }}"
                  id="ai-add-to-cart-{{ ai_gen_id }}"
                  {% unless product.variants.first.available %}disabled{% endunless %}
                >
                  {% if product.variants.first.available %}
                    {{ block.settings.add_to_cart_text }}
                  {% else %}
                    Sold Out
                  {% endif %}
                </button>
              </form>
            </div>
          {% else %}
            <div class="ai-product-variants__add-to-cart-{{ ai_gen_id }}">
              <form action="/cart/add" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <button
                  type="submit"
                  class="ai-product-variants__add-button-{{ ai_gen_id }}"
                  {% unless product.available %}disabled{% endunless %}
                >
                  {% if product.available %}
                    {{ block.settings.add_to_cart_text }}
                  {% else %}
                    Sold Out
                  {% endif %}
                </button>
              </form>
            </div>
          {% endif %}
        </div>
      </div>
    {% else %}
      <div class="ai-product-variants__empty-product-{{ ai_gen_id }}">
        Next, select a product to display its variants
      </div>
    {% endif %}
  </div>
</product-variants-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductVariants{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.variantRows = this.querySelectorAll('.ai-product-variants__variant-row-{{ ai_gen_id }}');
        this.priceElement = this.querySelector('#ai-current-price-{{ ai_gen_id }}');
        this.selectedVariantInput = this.querySelector('#ai-selected-variant-{{ ai_gen_id }}');
        this.addToCartButton = this.querySelector('#ai-add-to-cart-{{ ai_gen_id }}');
        this.productImage = this.querySelector('#ai-product-image-{{ ai_gen_id }}');

        this.setupEventListeners();
      }

      setupEventListeners() {
        this.variantRows.forEach((row) => {
          row.addEventListener('click', () => {
            this.selectVariant(row);
          });
        });
      }

      selectVariant(selectedRow) {
        this.variantRows.forEach((row) => {
          row.classList.remove('selected');
        });

        selectedRow.classList.add('selected');

        const variantId = selectedRow.dataset.variantId;
        const variantPrice = selectedRow.dataset.variantPrice;
        const variantAvailable = selectedRow.dataset.variantAvailable === 'true';
        const variantImage = selectedRow.dataset.variantImage;

        if (this.selectedVariantInput) {
          this.selectedVariantInput.value = variantId;
        }

        if (this.priceElement && variantPrice) {
          const formattedPrice = new Intl.NumberFormat('en-IN', {
            style: 'currency',
            currency: 'INR'
          }).format(variantPrice / 100);
          this.priceElement.textContent = formattedPrice;
        }

        if (this.addToCartButton) {
          if (variantAvailable) {
            this.addToCartButton.disabled = false;
            this.addToCartButton.textContent = '{{ block.settings.add_to_cart_text }}';
          } else {
            this.addToCartButton.disabled = true;
            this.addToCartButton.textContent = 'Sold Out';
          }
        }

        if (this.productImage && variantImage) {
          this.productImage.src = variantImage;
        }
      }
    }

    customElements.define('product-variants-{{ ai_gen_id }}', ProductVariants{{ ai_gen_id }});
  })();
</script>

