  }

  .ai-product-specs-{{ ai_gen_id }} {
    background: rgba(0, 0, 0, 0.05);
    padding: 15px;
    border-radius: 6px;
    font-size: 12px;
    margin-bottom: 15px;
  }

  .ai-product-specs-title-{{ ai_gen_id }} {
    font-weight: bold;
