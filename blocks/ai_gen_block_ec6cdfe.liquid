<services-section-{{ ai_gen_id }}
  class="ai-services-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-services-list-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-services-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}<div class="ai-services-slider-wrapper-{{ ai_gen_id }}">
      <div class="ai-services-slides-container-{{ ai_gen_id }}" data-slides-container>
        {% assign services = "Events,Promotions & Activations,Films /3D Animatics,Expos & Exhibitions,Retail & Display,Dealer & Customer Meets,Press Conferences,Product & Services Launches,Design & Communication,Thematic dinners & Parties,Government Services,MICE & destination management,International shows,Concerts & Bollywood shows,Artist & Data Management,Wedding & Special Occasions,Online & Digital Media" | split: "," %}
        
        {% assign total_slides = services.size | divided_by: 5.0 | ceil %}
        
        {% for slide_index in (0..total_slides) %}
          {% assign start_index = slide_index | times: 5 %}
          {% assign end_index = start_index | plus: 4 %}
          {% if start_index < services.size %}
            <div class="ai-services-slide-{{ ai_gen_id }}" data-slide="{{ slide_index }}">
              {% for i in (start_index..end_index) %}
                {% if i < services.size %}
                  <div 
                    class="ai-service-item-{{ ai_gen_id }}"
                    data-service="{{ services[i] | strip }}"
                    data-index="{{ i }}"
                  >
                    {{ services[i] | strip }}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        {% endfor %}
      </div></div>

    <div class="ai-services-navigation-{{ ai_gen_id }}">
      <button 
        class="ai-services-nav-button-{{ ai_gen_id }}" 
        data-nav="prev"
        aria-label="Previous services"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>

      <div class="ai-services-dots-{{ ai_gen_id }}" data-dots-container>
        {% for slide_index in (0..total_slides) %}
          {% assign start_index = slide_index | times: 5 %}
          {% if start_index < services.size %}
            <div 
              class="ai-services-dot-{{ ai_gen_id }} {% if slide_index == 0 %}active{% endif %}"
              data-slide="{{ slide_index }}"></div>
          {% endif %}
        {% endfor %}
      </div>

      <button 
        class="ai-services-nav-button-{{ ai_gen_id }}" 
        data-nav="next"
        aria-label="Next services"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    </div>
  </div>

  <div class="ai-services-image-container-{{ ai_gen_id }}">
    {% for i in (1..17) %}
      {% assign image_key = 'service_image_' | append: i %}
      {% assign service_image = block.settings[image_key] %}
      
      {% if service_image %}
        <img
          src="{{ service_image | image_url: width: 600 }}"
          alt="Service image {{ i }}"
          class="ai-services-image-{{ ai_gen_id }}"
          data-service-image="{{ i | minus: 1 }}"
          style="{% if i != 1 %}opacity: 0; position: absolute;{% endif %}"
          loading="lazy"
        >
      {% endif %}
    {% endfor %}
    
    <div class="ai-services-image-placeholder-{{ ai_gen_id }}" data-placeholder>
      {{ 'image' | placeholder_svg_tag }}
    </div>
  </div>
</services-section-{{ ai_gen_id }}><script>
  (function() {
    class ServicesSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.selectedServiceIndex = 0;
        this.hoveredServiceIndex = null;
        this.totalSlides = 0;
      }

      connectedCallback() {
        this.slidesContainer = this.querySelector('[data-slides-container]');
        this.slides = this.querySelectorAll('[data-slide]');
        this.serviceItems = this.querySelectorAll('.ai-service-item-{{ ai_gen_id }}');
        this.serviceImages = this.querySelectorAll('[data-service-image]');
        this.placeholder = this.querySelector('[data-placeholder]');
        this.dots = this.querySelectorAll('.ai-services-dot-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('[data-nav="prev"]');
        this.nextButton = this.querySelector('[data-nav="next"]');

        this.totalSlides = this.slides.length;
        this.setupEventListeners();
        this.updateNavigation();
        this.showDefaultImage();
      }

      setupEventListeners() {
        this.serviceItems.forEach((item, index) => {
          item.addEventListener('click', () => this.selectService(index));item.addEventListener('mouseenter', () => this.hoverService(index));
          item.addEventListener('mouseleave', () => this.unhoverService());
        });

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        this.prevButton.addEventListener('click', () => this.previousSlide());
        this.nextButton.addEventListener('click', () => this.nextSlide());
      }

      selectService(index) {
        this.serviceItems.forEach(item => item.classList.remove('selected'));
        this.serviceItems[index].classList.add('selected');
        this.selectedServiceIndex = index;
        this.showServiceImage(index);
      }

      hoverService(index) {
        this.hoveredServiceIndex = index;
        this.showServiceImage(index);
      }

      unhoverService() {
        this.hoveredServiceIndex = null;
        this.showServiceImage(this.selectedServiceIndex);
      }

      showServiceImage(index) {
        this.serviceImages.forEach(img => {
          img.style.opacity = '0';
          img.style.position = 'absolute';
        });

        if (this.serviceImages[index]) {
          this.serviceImages[index].style.opacity = '1';
          this.serviceImages[index].style.position = 'relative';this.placeholder.style.display = 'none';
        } else {
          this.placeholder.style.display = 'flex';
        }
      }

      showDefaultImage() {
        if (this.serviceImages.length > 0) {
          this.showServiceImage(0);this.serviceItems[0].classList.add('selected');
        }
      }

      goToSlide(slideIndex) {
        this.currentSlide = slideIndex;
        this.updateSlidePosition();
        this.updateNavigation();
      }

      previousSlide() {
        if (this.currentSlide > 0) {
          this.currentSlide--;
          this.updateSlidePosition();
          this.updateNavigation();
        }
      }

      nextSlide() {
        if (this.currentSlide < this.totalSlides - 1) {
          this.currentSlide++;
          this.updateSlidePosition();
          this.updateNavigation();
        }
      }

      updateSlidePosition() {
        const translateX = -this.currentSlide * 100;
        this.slidesContainer.style.transform = `translateX(${translateX}%)`;
      }

      updateNavigation() {
        this.prevButton.disabled = this.currentSlide === 0;
        this.nextButton.disabled = this.currentSlide === this.totalSlides - 1;

        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }
    }

    customElements.define('services-section-{{ ai_gen_id }}', ServicesSection{{ ai_gen_id }});
  })();
</script>

