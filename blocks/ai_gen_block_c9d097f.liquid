{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-uv-printing-service-{{ ai_gen_id }} {
    background-color: #0f172a;
    color: #ffffff;
    font-family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    font-weight: {{ settings.type_primary_font.weight }};
    font-style: {{ settings.type_primary_font.style }};
  }
  .ai-uv-printing-service-{{ ai_gen_id }} * { box-sizing: border-box; }

  .ai-uv-container-{{ ai_gen_id }} { max-width: 1200px; margin: 0 auto; padding: 0 20px; }
  .ai-uv-section-{{ ai_gen_id }} { padding: 60px 0; border-bottom: 1px solid #334155; }
  .ai-uv-section-{{ ai_gen_id }}:last-child { border-bottom: none; }

  /* Hero */
  .ai-uv-hero-{{ ai_gen_id }}{
    text-align: center;
    padding: clamp(48px, 10vw, 72px) 0;
    background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
  }
  .ai-uv-hero-title-{{ ai_gen_id }}{
    font-size: clamp(2.4rem, 6vw, 3.2rem);
    letter-spacing:-0.02em;
    line-height:1.1;
    margin: 0 0 14px;
    font-weight: 700;
    background: linear-gradient(135deg, #3b82f6, #06b6d4);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .ai-uv-hero-subtitle-{{ ai_gen_id }}{
    font-size: clamp(1rem, 2.2vw, 1.15rem);
    line-height:1.55;
    color:#cbd5e1;
    margin: 0 0 22px;
    max-width: 680px;
    margin-left:auto;margin-right:auto;
    font-weight: 500;
  }
  .ai-uv-hero-seo-{{ ai_gen_id }}{
    max-width: 860px;
    margin: 26px auto 0;
    font-size: clamp(.95rem, 2vw, 1.05rem);
    line-height: 1.8;
    color:#cbd5e1;
    text-align: left;
  }
  .ai-uv-hero-seo-{{ ai_gen_id }} strong{ font-weight:700; color:#e2e8f0; }
  .ai-uv-hero-seo-{{ ai_gen_id }} em{ font-style:italic; color:#d1d5db; }

  .ai-uv-hero-rating-{{ ai_gen_id }}{
    display:flex; align-items:center; justify-content:center;
    gap:8px; margin:18px 0 22px; color:#fbbf24; font-size:.98rem;
  }
  .ai-uv-hero-rating-{{ ai_gen_id }} span:first-child{ font-size:1.05rem; }

  .ai-uv-hero-buttons-{{ ai_gen_id }}{ display:flex; gap:14px; justify-content:center; flex-wrap:wrap; }
  .ai-uv-btn-{{ ai_gen_id }}{
    padding:13px 24px; border-radius:10px; text-decoration:none; font-weight:600;
    transition:all .3s ease; border:none; cursor:pointer; font-size:16px;
  }
  .ai-uv-btn-primary-{{ ai_gen_id }}{ background: linear-gradient(135deg,#3b82f6,#1d4ed8); color:#fff; }
  .ai-uv-btn-primary-{{ ai_gen_id }}:hover{ transform:translateY(-2px); box-shadow:0 10px 25px rgba(59,130,246,.3); }
  .ai-uv-btn-secondary-{{ ai_gen_id }}{ background:transparent; color:#3b82f6; border:2px solid #3b82f6; }
  .ai-uv-btn-secondary-{{ ai_gen_id }}:hover{ background:#3b82f6; color:#fff; }

  .ai-uv-section-title-{{ ai_gen_id }}{
    font-size: 2.5rem; font-weight:700; text-align:center; margin:0 0 50px; color:#fff;
  }

  /* Services */
  .ai-uv-services-grid-{{ ai_gen_id }}{
    display:grid; grid-template-columns:repeat(auto-fit,minmax(250px,1fr)); gap:30px;
  }
  .ai-uv-service-card-{{ ai_gen_id }}{
    background:#1e293b; padding:30px; border-radius:12px; text-align:center;
    transition:all .3s ease; border:1px solid #334155;
  }
  .ai-uv-service-card-{{ ai_gen_id }}:hover{ transform:translateY(-5px); box-shadow:0 20px 40px rgba(0,0,0,.3); border-color:#3b82f6; }
  .ai-uv-service-icon-{{ ai_gen_id }}{
    width:80px;height:80px;margin:0 auto 20px;background:#334155;border-radius:50%;
    display:flex;align-items:center;justify-content:center;color:#3b82f6;
  }
  .ai-uv-service-image-{{ ai_gen_id }}{ width:80px;height:80px;margin:0 auto 20px;border-radius:50%;object-fit:cover; }
  .ai-uv-service-title-{{ ai_gen_id }}{ font-size:1.25rem;font-weight:600;margin:0 0 10px;color:#fff; }
  .ai-uv-service-desc-{{ ai_gen_id }}{ color:#cbd5e1; line-height:1.6; }

  /* Materials */
  .ai-uv-materials-grid-{{ ai_gen_id }}{ display:grid; grid-template-columns:repeat(auto-fit,minmax(200px,1fr)); gap:20px; }
  .ai-uv-material-card-{{ ai_gen_id }}{
    background:#1e293b; padding:25px; border-radius:12px; text-align:center;
    transition:all .3s ease; border:1px solid #334155;
  }
  .ai-uv-material-card-{{ ai_gen_id }}:hover{ transform:translateY(-3px); border-color:#3b82f6; }
  .ai-uv-material-icon-{{ ai_gen_id }}{
    width:60px;height:60px;margin:0 auto 15px;background:#334155;border-radius:8px;
    display:flex;align-items:center;justify-content:center;color:#3b82f6;
  }
  .ai-uv-material-image-{{ ai_gen_id }}{ width:60px;height:60px;margin:0 auto 15px;border-radius:8px;object-fit:cover; }
  .ai-uv-material-name-{{ ai_gen_id }}{ font-weight:600;color:#fff; }

  /* Process */
  .ai-uv-process-container-{{ ai_gen_id }}{ position:relative; max-width:800px; margin:0 auto; }
  .ai-uv-process-step-{{ ai_gen_id }}{ display:flex; align-items:center; margin-bottom:40px; position:relative; }
  .ai-uv-process-step-{{ ai_gen_id }}:last-child { margin-bottom:0; }
  .ai-uv-process-number-{{ ai_gen_id }}{
    width:80px;height:80px;background:linear-gradient(135deg,#3b82f6,#1d4ed8);border-radius:50%;
    display:flex;align-items:center;justify-content:center;font-size:2rem;font-weight:700;color:#fff;margin-right:30px;flex-shrink:0;
    box-shadow:0 10px 30px rgba(59,130,246,.3); border:3px solid #1e293b;
  }
  .ai-uv-process-content-{{ ai_gen_id }}{
    background:#1e293b; padding:25px; border-radius:12px; flex-grow:1; border:1px solid #334155; position:relative;
  }
  .ai-uv-process-content-{{ ai_gen_id }}::before{
    content:''; position:absolute; left:-15px; top:50%; transform:translateY(-50%);
    width:0;height:0;border-top:15px solid transparent;border-bottom:15px solid transparent;border-right:15px solid #1e293b;
  }
  .ai-uv-process-title-{{ ai_gen_id }}{ font-size:1.25rem; font-weight:600; margin:0 0 10px; color:#fff; }
  .ai-uv-process-desc-{{ ai_gen_id }}{ color:#cbd5e1; line-height:1.6; margin:0; }

  /* Pricing */
  .ai-uv-pricing-container-{{ ai_gen_id }}{ max-width:800px; margin:0 auto; }
  .ai-uv-pricing-grid-{{ ai_gen_id }}{ display:grid; grid-template-columns:repeat(auto-fit,minmax(250px,1fr)); gap:25px; }
  .ai-uv-pricing-card-{{ ai_gen_id }}{
    background:#1e293b; border-radius:12px; padding:30px; text-align:center; border:1px solid #334155; transition:all .3s ease;
  }
  .ai-uv-pricing-card-{{ ai_gen_id }}:hover{ transform:translateY(-5px); box-shadow:0 20px 40px rgba(0,0,0,.3); border-color:#3b82f6; }
  .ai-uv-pricing-material-{{ ai_gen_id }}{ font-size:1.5rem; font-weight:700; color:#3b82f6; margin:0 0 15px; }
  .ai-uv-pricing-size-{{ ai_gen_id }}{ font-size:1.1rem; color:#cbd5e1; margin:0 0 20px; }
  .ai-uv-pricing-price-{{ ai_gen_id }}{ font-size:2rem; font-weight:700; color:#fff; margin:0; }
  .ai-uv-pricing-from-{{ ai_gen_id }}{ font-size:.9rem; color:#64748b; margin-bottom:10px; }

  /* Form */
  .ai-uv-form-{{ ai_gen_id }}{ background:#1e293b; padding:40px; border-radius:12px; border:1px solid #334155; }
  .ai-uv-form-grid-{{ ai_gen_id }}{ display:grid; grid-template-columns:repeat(auto-fit,minmax(250px,1fr)); gap:20px; margin-bottom:20px; }
  .ai-uv-form-group-{{ ai_gen_id }}{ display:flex; flex-direction:column; }
  .ai-uv-form-label-{{ ai_gen_id }}{ color:#cbd5e1; margin-bottom:8px; font-weight:500; }
  .ai-uv-form-input-{{ ai_gen_id }}, .ai-uv-form-select-{{ ai_gen_id }}, .ai-uv-form-textarea-{{ ai_gen_id }}{
    padding:12px 16px; border:1px solid #475569; border-radius:8px; background:#0f172a; color:#fff; font-size:16px;
  }
  .ai-uv-form-input-{{ ai_gen_id }}:focus, .ai-uv-form-select-{{ ai_gen_id }}:focus, .ai-uv-form-textarea-{{ ai_gen_id }}:focus{
    outline:none; border-color:#3b82f6; box-shadow:0 0 0 3px rgba(59,130,246,.1);
  }
  .ai-uv-form-checkbox-{{ ai_gen_id }}{ display:flex; align-items:center; gap:10px; margin:20px 0; }
  .ai-uv-form-submit-{{ ai_gen_id }}{
    background: linear-gradient(135deg, #3b82f6, #1d4ed8); color:#fff; padding:15px 40px; border:none; border-radius:8px; font-size:16px; font-weight:600; cursor:pointer; transition:all .3s ease;
  }
  .ai-uv-form-submit-{{ ai_gen_id }}:hover{ transform:translateY(-2px); box-shadow:0 10px 25px rgba(59,130,246,.3); }

  /* Contact */
  .ai-uv-contact-grid-{{ ai_gen_id }}{ display:grid; grid-template-columns:repeat(auto-fit,minmax(250px,1fr)); gap:30px; }
  .ai-uv-contact-card-{{ ai_gen_id }}{ background:#1e293b; padding:30px; border-radius:12px; text-align:center; border:1px solid #334155; }
  .ai-uv-contact-icon-{{ ai_gen_id }}{
    width:60px;height:60px;margin:0 auto 20px;background:#334155;border-radius:50%;display:flex;align-items:center;justify-content:center;color:#3b82f6;
  }
  .ai-uv-contact-title-{{ ai_gen_id }}{ font-size:1.25rem; font-weight:600; margin:0 0 10px; color:#fff; }
  .ai-uv-contact-info-{{ ai_gen_id }}{ color:#cbd5e1; line-height:1.6; }
  .ai-uv-contact-info-{{ ai_gen_id }} a{ color:#93c5fd; text-decoration:underline; }

  /* Gallery */
  .ai-uv-gallery-grid-{{ ai_gen_id }}{ display:grid; grid-template-columns:repeat(auto-fit,minmax(300px,1fr)); gap:30px; }
  .ai-uv-gallery-item-{{ ai_gen_id }}{ background:#1e293b; border-radius:12px; overflow:hidden; transition:all .3s ease; border:1px solid #334155; }
  .ai-uv-gallery-item-{{ ai_gen_id }}:hover{ transform:translateY(-5px); box-shadow:0 20px 40px rgba(0,0,0,.3); border-color:#3b82f6; }
  .ai-uv-gallery-image-{{ ai_gen_id }}{ width:100%; height:250px; object-fit:cover; }
  .ai-uv-gallery-placeholder-{{ ai_gen_id }}{ width:100%; height:250px; background:#334155; display:flex; align-items:center; justify-content:center; color:#64748b; }
  .ai-uv-gallery-content-{{ ai_gen_id }}{ padding:20px; }
  .ai-uv-gallery-title-{{ ai_gen_id }}{ font-size:1.25rem; font-weight:600; margin:0 0 10px; color:#fff; }
  .ai-uv-gallery-desc-{{ ai_gen_id }}{ color:#cbd5e1; line-height:1.6; }

  /* FAQ */
  .ai-uv-faq-item-{{ ai_gen_id }}{ background:#1e293b; border-radius:12px; margin-bottom:20px; border:1px solid #334155; overflow:hidden; }
  .ai-uv-faq-question-{{ ai_gen_id }}{
    padding:20px; cursor:pointer; display:flex; justify-content:space-between; align-items:center; font-weight:600; color:#fff;
    transition:background-color .3s ease; width:100%; text-align:left; background:transparent; border:0;
  }
  .ai-uv-faq-question-{{ ai_gen_id }}:hover{ background:#334155; }
  .ai-uv-faq-answer-{{ ai_gen_id }}{ padding:0 20px 20px; color:#cbd5e1; line-height:1.6; display:none; }
  .ai-uv-faq-answer-{{ ai_gen_id }}.active{ display:block; }
  .ai-uv-faq-icon-{{ ai_gen_id }}{ transition: transform .3s ease; }
  .ai-uv-faq-icon-{{ ai_gen_id }}.active{ transform: rotate(180deg); }

  /* Sticky mobile CTA */
  .ai-uv-sticky-cta-{{ ai_gen_id }}{
    position: fixed; left:0; right:0; bottom:0; z-index: 40;
    background: rgba(15,23,42,.96); border-top:1px solid #334155;
    padding: 10px 14px; display: none;
    backdrop-filter: saturate(140%) blur(6px);
  }
  .ai-uv-sticky-cta-inner-{{ ai_gen_id }}{
    max-width: 1200px; margin: 0 auto; display:flex; gap:10px;
    align-items: center; justify-content: space-between;
  }
  .ai-uv-sticky-cta-title-{{ ai_gen_id }}{ font-size:.95rem; color:#e2e8f0; font-weight:600; }
  .ai-uv-sticky-cta-actions-{{ ai_gen_id }}{ display:flex; gap:8px; }
  .ai-uv-sticky-cta-btn-{{ ai_gen_id }}{
    padding:10px 14px; border-radius:10px; font-weight:600; border:1px solid #334155; text-decoration:none;
  }
  .ai-uv-sticky-cta-btn-primary-{{ ai_gen_id }}{ background:linear-gradient(135deg,#3b82f6,#1d4ed8); color:#fff; border:none; }
  .ai-uv-sticky-cta-btn-outline-{{ ai_gen_id }}{ background:transparent; color:#93c5fd; }

  @media (max-width: 768px){
    .ai-uv-hero-buttons-{{ ai_gen_id }}{ width:100%; }
    .ai-uv-btn-{{ ai_gen_id }}{ width: min(280px, 100%); }
    .ai-uv-hero-seo-{{ ai_gen_id }}{ text-align:left; }
    .ai-uv-sticky-cta-{{ ai_gen_id }}{ display:block; }
    /* give a little breathing room above the sticky bar */
    .ai-uv-section-{{ ai_gen_id }}:last-child{ padding-bottom: 84px; }
  }

  @media (max-width: 480px){
    .ai-uv-container-{{ ai_gen_id }}{ padding:0 15px; }
  }
{% endstyle %}

<div class="ai-uv-printing-service-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <!-- Hero -->
  <section class="ai-uv-hero-{{ ai_gen_id }}">
    <div class="ai-uv-container-{{ ai_gen_id }}">
      <h1 class="ai-uv-hero-title-{{ ai_gen_id }}">{{ block.settings.hero_title }}</h1>
      <p class="ai-uv-hero-seo-{{ ai_gen_id }}">
        Looking for <strong>UV printing near {{ block.settings.city_name }}</strong>? We offer
        <strong>flatbed UV printing</strong> on acrylic, metal, glass, and wood with <strong>same-day options</strong>
        and local pickup. From <em>acrylic photo prints</em> and <em>metal signs</em> to <em>custom display boards</em>,
        our instant-cure inks deliver sharp edges, vibrant color, and a durable, scratch-resistant finish.
        Get a fast quote or see pricing—serving {{ block.settings.city_name }} and nearby areas.
      </p>

      <div class="ai-uv-hero-rating-{{ ai_gen_id }}">
        <span>★★★★★</span>
        <span>{{ block.settings.rating_text | replace: '[City]', block.settings.city_name }}</span>
      </div>

      <div class="ai-uv-hero-buttons-{{ ai_gen_id }}">
        <a href="{{ block.settings.primary_button_link }}" class="ai-uv-btn-{{ ai_gen_id }} ai-uv-btn-primary-{{ ai_gen_id }}">{{ block.settings.primary_button_text }}</a>
        <a href="{{ block.settings.secondary_button_link }}" class="ai-uv-btn-{{ ai_gen_id }} ai-uv-btn-secondary-{{ ai_gen_id }}">{{ block.settings.secondary_button_text }}</a>
      </div>

      <!-- Internal links -->
      <p style="text-align:center;margin-top:28px;color:#cbd5e1">
        Explore: <a href="/uv-printing" style="color:#93c5fd">UV Printing</a> ·
        <a href="/applications" style="color:#93c5fd">Applications</a> ·
        <a href="/pricing" style="color:#93c5fd">Pricing</a> ·
        <a href="/locations" style="color:#93c5fd">Locations</a> ·
        <a href="/gallery" style="color:#93c5fd">Gallery</a> ·
        <a href="/faq" style="color:#93c5fd">FAQ</a>
      </p>
      
    </div>
  </section>

  <!-- Popular Services -->
  <section class="ai-uv-section-{{ ai_gen_id }}">
    <div class="ai-uv-container-{{ ai_gen_id }}">
      <h2 class="ai-uv-section-title-{{ ai_gen_id }}">{{ block.settings.services_title }}</h2>
      <div class="ai-uv-services-grid-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign service_title_key = 'service_' | append: i | append: '_title'
            assign service_desc_key = 'service_' | append: i | append: '_description'
            assign service_image_key = 'service_' | append: i | append: '_image'
            assign service_title = block.settings[service_title_key]
            assign service_desc = block.settings[service_desc_key]
            assign service_image = block.settings[service_image_key]
          %}
          {% if service_title != blank %}
            <div class="ai-uv-service-card-{{ ai_gen_id }}">
              {% if service_image %}
                <img src="{{ service_image | image_url: width: 160 }}" alt="{{ service_image.alt | escape }}" class="ai-uv-service-image-{{ ai_gen_id }}" width="80" height="80" loading="lazy" decoding="async">
              {% else %}
                <div class="ai-uv-service-icon-{{ ai_gen_id }}">
                  <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                </div>
              {% endif %}
              <h3 class="ai-uv-service-title-{{ ai_gen_id }}">{{ service_title }}</h3>
              <p class="ai-uv-service-desc-{{ ai_gen_id }}">{{ service_desc }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- We Print On -->
  <section class="ai-uv-section-{{ ai_gen_id }}">
    <div class="ai-uv-container-{{ ai_gen_id }}">
      <h2 class="ai-uv-section-title-{{ ai_gen_id }}">{{ block.settings.materials_title }}</h2>
      <div class="ai-uv-materials-grid-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% liquid
            assign material_name_key = 'material_' | append: i | append: '_name'
            assign material_image_key = 'material_' | append: i | append: '_image'
            assign material_name = block.settings[material_name_key]
            assign material_image = block.settings[material_image_key]
          %}
          {% if material_name != blank %}
            <div class="ai-uv-material-card-{{ ai_gen_id }}">
              {% if material_image %}
                <img src="{{ material_image | image_url: width: 120 }}" alt="{{ material_image.alt | escape }}" class="ai-uv-material-image-{{ ai_gen_id }}" width="60" height="60" loading="lazy" decoding="async">
              {% else %}
                <div class="ai-uv-material-icon-{{ ai_gen_id }}">
                  <svg width="30" height="30" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/></svg>
                </div>
              {% endif %}
              <div class="ai-uv-material-name-{{ ai_gen_id }}">{{ material_name }}</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- How UV Printing Works -->
  <section class="ai-uv-section-{{ ai_gen_id }}">
    <div class="ai-uv-container-{{ ai_gen_id }}">
      <h2 class="ai-uv-section-title-{{ ai_gen_id }}">{{ block.settings.process_title }}</h2>
      <div class="ai-uv-process-container-{{ ai_gen_id }}">
        {% for i in (1..3) %}
          {% liquid
            assign step_title_key = 'process_step_' | append: i | append: '_title'
            assign step_desc_key = 'process_step_' | append: i | append: '_description'
            assign step_title = block.settings[step_title_key]
            assign step_desc = block.settings[step_desc_key]
          %}
          {% if step_title != blank %}
            <div class="ai-uv-process-step-{{ ai_gen_id }}">
              <div class="ai-uv-process-number-{{ ai_gen_id }}">{{ i }}</div>
              <div class="ai-uv-process-content-{{ ai_gen_id }}">
                <h3 class="ai-uv-process-title-{{ ai_gen_id }}">{{ step_title }}</h3>
                <p class="ai-uv-process-desc-{{ ai_gen_id }}">{{ step_desc }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- Sample Pricing -->
  <section class="ai-uv-section-{{ ai_gen_id }}">
    <div class="ai-uv-container-{{ ai_gen_id }}">
      <h2 class="ai-uv-section-title-{{ ai_gen_id }}">{{ block.settings.pricing_title }}</h2>
      <div class="ai-uv-pricing-container-{{ ai_gen_id }}">
        <div class="ai-uv-pricing-grid-{{ ai_gen_id }}">
          {% for i in (1..3) %}
            {% liquid
              assign pricing_material_key = 'pricing_' | append: i | append: '_material'
              assign pricing_size_key = 'pricing_' | append: i | append: '_size'
              assign pricing_price_key = 'pricing_' | append: i | append: '_price'
              assign pricing_material = block.settings[pricing_material_key]
              assign pricing_size = block.settings[pricing_size_key]
              assign pricing_price = block.settings[pricing_price_key]
            %}
            {% if pricing_material != blank %}
              <div class="ai-uv-pricing-card-{{ ai_gen_id }}">
                <h3 class="ai-uv-pricing-material-{{ ai_gen_id }}">{{ pricing_material }}</h3>
                <div class="ai-uv-pricing-size-{{ ai_gen_id }}">{{ pricing_size }}</div>
                <div class="ai-uv-pricing-from-{{ ai_gen_id }}">From</div>
                <div class="ai-uv-pricing-price-{{ ai_gen_id }}">{{ pricing_price }}</div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </section>

  <!-- Quote Form -->
  <section class="ai-uv-section-{{ ai_gen_id }}">
    <div class="ai-uv-container-{{ ai_gen_id }}">
      <h2 class="ai-uv-section-title-{{ ai_gen_id }}">{{ block.settings.form_title }}</h2>
      <div class="ai-uv-form-{{ ai_gen_id }}">
        {% form 'contact' %}
          <div class="ai-uv-form-grid-{{ ai_gen_id }}">
