<script>
  function toggleFAQ{{ ai_gen_id }}(btn) {
    const answer = btn.parentElement.querySelector('.ai-uv-faq-answer-{{ ai_gen_id }}');
    const icon = btn.querySelector('.ai-uv-faq-icon-{{ ai_gen_id }}');
    const expanded = btn.getAttribute('aria-expanded') === 'true';
