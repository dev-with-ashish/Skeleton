<script>
  (function() {
    class TentreeHomepage{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.setupTabs();
        this.setupParallax();
      }

      setupTabs() {
        const tabGroups = this.querySelectorAll('[data-tabs]');

        tabGroups.forEach(group => {
          const tabs = group.querySelectorAll('.ai-tab-{{ ai_gen_id }}');
          const contents = group.parentElement.querySelectorAll('.ai-tab-content-{{ ai_gen_id }}');

          tabs.forEach(tab => {
            tab.addEventListener('click', () => {
              const targetTab = tab.getAttribute('data-tab');

              tabs.forEach(t => t.classList.remove('active'));
              tab.classList.add('active');

              contents.forEach(content => {
                if (content.getAttribute('data-content') === targetTab) {
                  content.classList.add('active');
                } else {
                  content.classList.remove('active');
                }
              });
            });
          });
        });
      }

      setupParallax() {
        const hero = this.querySelector('.ai-hero-{{ ai_gen_id }}');
        const heroBg = this.querySelector('.ai-hero-bg-{{ ai_gen_id }}');

        if (!hero || !heroBg) return;

        window.addEventListener('scroll', () => {
          const scrolled = window.pageYOffset;
          const heroHeight = hero.offsetHeight;

          if (scrolled < heroHeight) {
            heroBg.style.transform = `translateY(${scrolled * 0.5}px)`;
          }
        });
      }
    }

    if (!customElements.get('tentree-homepage-{{ ai_gen_id }}')) {
      customElements.define('tentree-homepage-{{ ai_gen_id }}', TentreeHomepage{{ ai_gen_id }});
    }
  })();
</script>

