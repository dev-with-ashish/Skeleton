{% doc %}
  @prompt
    a collection page specially for radha krishna paintings i will do semantic seo on this collection page will have radha krishna canvas paintings and radha krishna acrylic paintings will have indept (4000 words) description for both and also for the collection page so make this collection page a silo structured sematic seo based page that would rank for radha krishna painting on google, option to selection both collections acrylic and canvas and display them beautifully to in their content areas use this #3b69b8 and #8447f5 color for entire page, dark themed, option to adjust all colors, make the collection tiles squared in shape and always responsive in squared shape add animation to show the 2nd image when hovered instant animation
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-radha-krishna-collection-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
    font-family: {{ settings.type_primary_font.family }}, sans-serif;
    color: {{ block.settings.text_color }};
    background-color: {{ block.settings.main_background_color }};
  }

  .ai-rk-hero-section-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 60px;
    padding: 60px 0;
    background: linear-gradient(135deg, {{ block.settings.hero_gradient_start }}, {{ block.settings.hero_gradient_end }});
    border-radius: {{ block.settings.section_border_radius }}px;
    position: relative;
    overflow: hidden;
  }

  .ai-rk-hero-section-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="80" r="1" fill="rgba(255,255,255,0.1)"/></svg>');
    opacity: 0.3;
  }

  .ai-rk-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 1;
  }

  .ai-rk-main-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.main_title_size }}px;
    font-weight: 700;
    color: {{ block.settings.hero_title_color }};
    margin: 0 0 20px;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }

  .ai-rk-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.hero_subtitle_color }};
    margin: 0 0 30px;
    opacity: 0.9;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-rk-breadcrumb-{{ ai_gen_id }} {
    margin-bottom: 40px;
    padding: 15px 0;
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-rk-breadcrumb-list-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    align-items: center;
  }

  .ai-rk-breadcrumb-item-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.breadcrumb_text_color }};
  }

  .ai-rk-breadcrumb-link-{{ ai_gen_id }} {
    color: {{ block.settings.breadcrumb_link_color }};
    text-decoration: none;
  }

  .ai-rk-breadcrumb-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.breadcrumb_link_hover_color }};
    text-decoration: underline;
  }

  .ai-rk-breadcrumb-separator-{{ ai_gen_id }} {
    color: {{ block.settings.breadcrumb_separator_color }};
    margin: 0 5px;
  }

  .ai-rk-content-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: 60px;
    margin-bottom: 60px;
  }

  .ai-rk-section-{{ ai_gen_id }} {
    background: {{ block.settings.section_background_color }};
    padding: 40px;
    border-radius: {{ block.settings.section_border_radius }}px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    border: 1px solid {{ block.settings.section_border_color }};
  }

  .ai-rk-section-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.section_title_color }};
    margin: 0 0 25px;
    padding-bottom: 15px;
    border-bottom: 3px solid {{ block.settings.section_title_color }};
    position: relative;
  }

  .ai-rk-section-title-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 60px;
    height: 3px;
    background: {{ block.settings.section_title_accent_color }};
  }

  .ai-rk-content-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.content_text_size }}px;
    line-height: 1.7;
    color: {{ block.settings.content_text_color }};
    margin-bottom: 20px;
  }

  .ai-rk-content-text-{{ ai_gen_id }} h3 {
    font-size: {{ block.settings.subheading_size }}px;
    font-weight: 600;
    color: {{ block.settings.subheading_color }};
    margin: 30px 0 15px;
  }

  .ai-rk-content-text-{{ ai_gen_id }} h4 {
    font-size: {{ block.settings.subheading_size | minus: 2 }}px;
    font-weight: 500;
    color: {{ block.settings.subheading_accent_color }};
    margin: 25px 0 12px;
  }

  .ai-rk-content-text-{{ ai_gen_id }} ul {
    padding-left: 20px;
    margin: 15px 0;
  }

  .ai-rk-content-text-{{ ai_gen_id }} li {
    margin-bottom: 8px;
    color: {{ block.settings.content_text_color }};
  }

  .ai-rk-content-text-{{ ai_gen_id }} strong {
    color: {{ block.settings.strong_text_color }};
  }

  .ai-rk-highlight-box-{{ ai_gen_id }} {
    background: {{ block.settings.highlight_box_background }};
    padding: 25px;
    border-radius: {{ block.settings.section_border_radius }}px;
    margin: 30px 0;
    border-left: 5px solid {{ block.settings.highlight_box_border_color }};
    border: 1px solid {{ block.settings.highlight_box_border_color }};
  }

  .ai-rk-highlight-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.content_text_size | plus: 1 }}px;
    color: {{ block.settings.highlight_text_color }};
    font-weight: 500;
    margin: 0;
  }

  .ai-rk-collection-display-{{ ai_gen_id }} {
    margin: 40px 0;
  }

  .ai-rk-collection-display-{{ ai_gen_id }} h3 {
    color: {{ block.settings.collection_heading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin-bottom: 20px;
  }

  .ai-rk-collection-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    margin-top: 30px;
  }

  .ai-rk-product-card-{{ ai_gen_id }} {
    background: {{ block.settings.product_card_background }};
    border-radius: {{ block.settings.section_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid {{ block.settings.product_card_border_color }};
    display: flex;
    flex-direction: column;
  }

  .ai-rk-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px {{ block.settings.product_card_hover_shadow }};
    border-color: {{ block.settings.product_card_hover_border_color }};
  }

  .ai-rk-product-image-container-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    position: relative;
    overflow: hidden;
  }

  .ai-rk-product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.2s ease;
  }

  .ai-rk-product-image-primary-{{ ai_gen_id }} {
    opacity: 1;
    z-index: 2;
  }

  .ai-rk-product-image-secondary-{{ ai_gen_id }} {
    opacity: 0;
    z-index: 1;
  }

  .ai-rk-product-card-{{ ai_gen_id }}:hover .ai-rk-product-image-primary-{{ ai_gen_id }} {
    opacity: 0;
  }

  .ai-rk-product-card-{{ ai_gen_id }}:hover .ai-rk-product-image-secondary-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-rk-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: {{ block.settings.product_image_placeholder_bg }};
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 0;
    left: 0;
  }

  .ai-rk-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-rk-product-info-{{ ai_gen_id }} {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-rk-product-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 10px;
    line-height: 1.4;
    flex-grow: 1;
  }

  .ai-rk-product-price-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 700;
    color: {{ block.settings.product_price_color }};
    margin-bottom: 15px;
  }

  .ai-rk-product-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 10px 20px;
    background: linear-gradient(135deg, {{ block.settings.product_button_gradient_start }}, {{ block.settings.product_button_gradient_end }});
    color: {{ block.settings.product_button_text_color }};
    text-decoration: none;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
    text-align: center;
    align-self: flex-start;
  }

  .ai-rk-product-link-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px {{ block.settings.product_button_hover_shadow }};
  }

  .ai-rk-collection-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.empty_state_text_color }};
    font-style: italic;
    background: {{ block.settings.empty_state_background }};
    border-radius: {{ block.settings.section_border_radius }}px;
    border: 1px solid {{ block.settings.empty_state_border_color }};
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-rk-cta-section-{{ ai_gen_id }} {
    text-align: center;
    background: linear-gradient(135deg, {{ block.settings.cta_gradient_start }}, {{ block.settings.cta_gradient_end }});
    padding: 50px 40px;
    border-radius: {{ block.settings.section_border_radius }}px;
    margin-top: 60px;
    position: relative;
    overflow: hidden;
  }

  .ai-rk-cta-section-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="80" r="1" fill="rgba(255,255,255,0.1)"/></svg>');
    opacity: 0.2;
  }

  .ai-rk-cta-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.cta_title_size }}px;
    font-weight: 700;
    color: {{ block.settings.cta_title_color }};
    margin: 0 0 20px;
    position: relative;
    z-index: 1;
  }

  .ai-rk-cta-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.content_text_size }}px;
    color: {{ block.settings.cta_text_color }};
    margin: 0 0 30px;
    opacity: 0.9;
    position: relative;
    z-index: 1;
  }

  .ai-rk-cta-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 15px 35px;
    background: {{ block.settings.cta_button_background }};
    color: {{ block.settings.cta_button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    font-size: {{ block.settings.button_text_size }}px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    position: relative;
    z-index: 1;
  }

  .ai-rk-cta-button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.cta_button_hover_background }};
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.3);
  }

  .ai-rk-schema-section-{{ ai_gen_id }} {
    margin-top: 40px;
    padding: 30px;
    background: {{ block.settings.schema_section_background }};
    border-radius: {{ block.settings.section_border_radius }}px;
    border: 1px solid {{ block.settings.schema_section_border_color }};
  }

  .ai-rk-faq-item-{{ ai_gen_id }} {
    margin-bottom: 25px;
    padding: 20px;
    background: {{ block.settings.faq_item_background }};
    border-radius: {{ block.settings.section_border_radius }}px;
    border: 1px solid {{ block.settings.faq_item_border_color }};
  }

  .ai-rk-faq-question-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    font-weight: 600;
    color: {{ block.settings.faq_question_color }};
    margin: 0 0 10px;
  }

  .ai-rk-faq-answer-{{ ai_gen_id }} {
    font-size: {{ block.settings.content_text_size }}px;
    color: {{ block.settings.faq_answer_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-rk-faq-answer-{{ ai_gen_id }} p {
    color: {{ block.settings.faq_answer_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-radha-krishna-collection-{{ ai_gen_id }} {
      padding: 20px 15px;
    }

    .ai-rk-hero-section-{{ ai_gen_id }} {
      padding: 40px 20px;
      margin-bottom: 40px;
    }

    .ai-rk-main-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.main_title_size | times: 0.8 }}px;
    }

    .ai-rk-section-{{ ai_gen_id }} {
      padding: 25px 20px;
    }

    .ai-rk-content-grid-{{ ai_gen_id }} {
      gap: 40px;
    }

    .ai-rk-cta-section-{{ ai_gen_id }} {
      padding: 30px 20px;
    }

    .ai-rk-collection-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-rk-collection-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr 1fr;
      gap: 15px;
    }
  }
{% endstyle %}

<div class="ai-radha-krishna-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-rk-hero-section-{{ ai_gen_id }}">
    <div class="ai-rk-hero-content-{{ ai_gen_id }}">
      <h1 class="ai-rk-main-title-{{ ai_gen_id }}">{{ block.settings.main_title }}</h1>
      <p class="ai-rk-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
    </div>
  </div>

  {% if block.settings.show_breadcrumbs %}
  <nav class="ai-rk-breadcrumb-{{ ai_gen_id }}" aria-label="Breadcrumb">
    <ol class="ai-rk-breadcrumb-list-{{ ai_gen_id }}">
      <li class="ai-rk-breadcrumb-item-{{ ai_gen_id }}">
        <a href="/" class="ai-rk-breadcrumb-link-{{ ai_gen_id }}">Home</a>
      </li>
      <li class="ai-rk-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">›</li>
      <li class="ai-rk-breadcrumb-item-{{ ai_gen_id }}">
        <a href="/collections" class="ai-rk-breadcrumb-link-{{ ai_gen_id }}">Collections</a>
      </li>
      <li class="ai-rk-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">›</li>
      <li class="ai-rk-breadcrumb-item-{{ ai_gen_id }}" aria-current="page">Radha Krishna Paintings</li>
    </ol>
  </nav>
  {% endif %}

  <div class="ai-rk-content-grid-{{ ai_gen_id }}">
    <section class="ai-rk-section-{{ ai_gen_id }}">
      <h2 class="ai-rk-section-title-{{ ai_gen_id }}">{{ block.settings.collection_overview_title }}</h2>
      <div class="ai-rk-content-text-{{ ai_gen_id }}">
        {{ block.settings.collection_overview_content }}
      </div>
      {% if block.settings.show_collection_highlight %}
      <div class="ai-rk-highlight-box-{{ ai_gen_id }}">
        <p class="ai-rk-highlight-text-{{ ai_gen_id }}">{{ block.settings.collection_highlight_text }}</p>
      </div>
      {% endif %}
    </section>

    <section class="ai-rk-section-{{ ai_gen_id }}">
      <h2 class="ai-rk-section-title-{{ ai_gen_id }}">{{ block.settings.canvas_section_title }}</h2>
      <div class="ai-rk-content-text-{{ ai_gen_id }}">
        {{ block.settings.canvas_content }}
      </div>
      {% if block.settings.show_canvas_highlight %}
      <div class="ai-rk-highlight-box-{{ ai_gen_id }}">
        <p class="ai-rk-highlight-text-{{ ai_gen_id }}">{{ block.settings.canvas_highlight_text }}</p>
      </div>
      {% endif %}

      {% if block.settings.canvas_collection != blank %}
      <div class="ai-rk-collection-display-{{ ai_gen_id }}">
        <h3>Featured Canvas Paintings</h3>
        <div class="ai-rk-collection-grid-{{ ai_gen_id }}">
          {% for product in collections[block.settings.canvas_collection].products limit: block.settings.canvas_products_limit %}
            <div class="ai-rk-product-card-{{ ai_gen_id }}">
              <div class="ai-rk-product-image-container-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 400 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="400"
                    height="400"
                    class="ai-rk-product-image-{{ ai_gen_id }} ai-rk-product-image-primary-{{ ai_gen_id }}"
                  >
                {% else %}
                  <div class="ai-rk-product-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
                
                {% if product.images[1] %}
                  <img
                    src="{{ product.images[1] | image_url: width: 400 }}"
                    alt="{{ product.images[1].alt | escape }}"
                    loading="lazy"
                    width="400"
                    height="400"
                    class="ai-rk-product-image-{{ ai_gen_id }} ai-rk-product-image-secondary-{{ ai_gen_id }}"
                  >
                {% endif %}
              </div>
              <div class="ai-rk-product-info-{{ ai_gen_id }}">
                <h4 class="ai-rk-product-title-{{ ai_gen_id }}">{{ product.title }}</h4>
                <div class="ai-rk-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
                <a href="{{ product.url }}" class="ai-rk-product-link-{{ ai_gen_id }}">View Details</a>
              </div>
            </div>
          {% else %}
            <div class="ai-rk-collection-empty-{{ ai_gen_id }}">
              <p>No canvas paintings found. Please select a canvas collection in the block settings.</p>
            </div>
          {% endfor %}
        </div>
      </div>
      {% endif %}
    </section>

    <section class="ai-rk-section-{{ ai_gen_id }}">
      <h2 class="ai-rk-section-title-{{ ai_gen_id }}">{{ block.settings.acrylic_section_title }}</h2>
      <div class="ai-rk-content-text-{{ ai_gen_id }}">
        {{ block.settings.acrylic_content }}
      </div>
      {% if block.settings.show_acrylic_highlight %}
      <div class="ai-rk-highlight-box-{{ ai_gen_id }}">
        <p class="ai-rk-highlight-text-{{ ai_gen_id }}">{{ block.settings.acrylic_highlight_text }}</p>
      </div>
      {% endif %}

      {% if block.settings.acrylic_collection != blank %}
      <div class="ai-rk-collection-display-{{ ai_gen_id }}">
        <h3>Featured Acrylic Paintings</h3>
        <div class="ai-rk-collection-grid-{{ ai_gen_id }}">
          {% for product in collections[block.settings.acrylic_collection].products limit: block.settings.acrylic_products_limit %}
            <div class="ai-rk-product-card-{{ ai_gen_id }}">
              <div class="ai-rk-product-image-container-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 400 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="400"
                    height="400"
                    class="ai-rk-product-image-{{ ai_gen_id }} ai-rk-product-image-primary-{{ ai_gen_id }}"
                  >
                {% else %}
                  <div class="ai-rk-product-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
                
                {% if product.images[1] %}
                  <img
                    src="{{ product.images[1] | image_url: width: 400 }}"
                    alt="{{ product.images[1].alt | escape }}"
                    loading="lazy"
                    width="400"
                    height="400"
                    class="ai-rk-product-image-{{ ai_gen_id }} ai-rk-product-image-secondary-{{ ai_gen_id }}"
                  >
                {% endif %}
              </div>
              <div class="ai-rk-product-info-{{ ai_gen_id }}">
                <h4 class="ai-rk-product-title-{{ ai_gen_id }}">{{ product.title }}</h4>
                <div class="ai-rk-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
                <a href="{{ product.url }}" class="ai-rk-product-link-{{ ai_gen_id }}">View Details</a>
              </div>
            </div>
          {% else %}
            <div class="ai-rk-collection-empty-{{ ai_gen_id }}">
              <p>No acrylic paintings found. Please select an acrylic collection in the block settings.</p>
            </div>
          {% endfor %}
        </div>
      </div>
      {% endif %}
    </section>

    {% if block.settings.show_faq_section %}
    <section class="ai-rk-section-{{ ai_gen_id }}">
      <h2 class="ai-rk-section-title-{{ ai_gen_id }}">{{ block.settings.faq_title }}</h2>
      
      {% for i in (1..5) %}
        {% assign question_key = 'faq_question_' | append: i %}
        {% assign answer_key = 'faq_answer_' | append: i %}
        {% assign question = block.settings[question_key] %}
        {% assign answer = block.settings[answer_key] %}
        
        {% if question != blank and answer != blank %}
        <div class="ai-rk-faq-item-{{ ai_gen_id }}">
          <h3 class="ai-rk-faq-question-{{ ai_gen_id }}">{{ question }}</h3>
          <div class="ai-rk-faq-answer-{{ ai_gen_id }}">{{ answer }}</div>
        </div>
        {% endif %}
      {% endfor %}
    </section>
    {% endif %}
  </div>

  {% if block.settings.show_cta_section %}
  <section class="ai-rk-cta-section-{{ ai_gen_id }}">
