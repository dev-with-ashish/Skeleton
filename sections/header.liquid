<header class="site-header navbar navbar-expand-xl py-3">
  <div class="container-fluid">
    <div class="row w-100 gx-3 align-items-start">

      <!-- 1st column: ~41% on desktop; stacks full‑width on mobile -->
      <div class="header_inner_container1 col-12 col-md-5 d-flex flex-column justify-content-center align-items-start">
        {% assign words = shop.name | split: ' ' %}
        <a href="{{ routes.root_url }}" class="header__title-link text-decoration-none text-uppercase">
          <span>{{ words[0] }}</span>
          <span>{{ words[1] }}</span>
        </a>
      </div>

      <!-- 2nd column: ~33%; splits into two equal halves -->
      <div class="header_inner_container2 col-12 col-md-4 d-flex">
        <div class="header__menu-split w-100 d-flex">
          <div class="header__menu-empty flex-grow-1"></div>

          <div class="header__menu-half d-flex flex-column justify-content-between">
            {% assign menu_links = section.settings.menu.links %}
            {% assign half = menu_links.size | divided_by: 2 %}
            {% for link in menu_links limit: half %}
              <a href="{{ link.url }}" class="nav-link p-0 m-0">{{ link.title }}</a>
            {% endfor %}
          </div>

          <div class="header__menu-half d-flex flex-column justify-content-between">
            {% assign menu_links = section.settings.menu.links %}
            {% assign half = menu_links.size | divided_by: 2 %}
            {% for link in menu_links offset: half %}
              <a href="{{ link.url }}" class="nav-link p-0 m-0">{{ link.title }}</a>
            {% endfor %}
          </div>
        </div>
      </div>

      <!-- 3rd column: ~25%; stacks icons full height -->
      <div class="header_inner_container3 col-12 col-md-3 d-flex flex-column justify-content-between align-items-end">
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_url }}" class="header__icon-box btn btn-outline-dark d-inline-flex align-items-center">
            Account
          </a>
        {% endif %}
        <a href="{{ routes.cart_url }}" class="header__icon-box btn btn-outline-dark d-inline-flex align-items-center">
          Cart
          {% if cart.item_count > 0 %}
            <sup class="badge bg-light text-dark ms-2">{{ cart.item_count }}</sup>
          {% endif %}
        </a>
        <form action="{{ routes.search_url }}" method="get" class="header__search-box d-inline-flex align-items-center">
          <input type="search" name="q" placeholder="Search…" aria-label="Search" class="form-control form-control-sm border-0" />
        </form>
      </div>

    </div>
  </div>
</header>
