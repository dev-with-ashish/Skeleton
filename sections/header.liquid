<header class="site-header">
  <div class="header__logo">
    {% assign words = shop.name | split: ' ' %}
    <a href="{{ routes.root_url }}" class="header__title">
      <span>{{ words[0] }}</span>
      <span class="header__subtitle">{{ words[1] }}</span>
    </a>
  </div>

  <nav class="header__menu">
    {%- assign menu_handle = section.settings.menu -%}
    {%- assign menu_links  = linklists[menu_handle].links -%}
    {%- assign total       = menu_links.size -%}
    {%- assign half        = total | divided_by: 2 | ceil -%}

    <div class="header__menu-column">
      {% for link in menu_links limit: half %}
        <a href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
    </div>

    <div class="header__menu-column">
      {% for link in menu_links offset: half %}
        <a href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
    </div>
  </nav>

  <div class="header__icons">
    {% if shop.customer_accounts_enabled %}
      <a href="{{ routes.account_url }}" class="header__icon-btn">Account</a>
    {% endif %}
    <a href="{{ routes.cart_url }}" class="header__icon-btn">
      Cart
      {% if cart.item_count > 0 %}
        <sup class="header__badge">{{ cart.item_count }}</sup>
      {% endif %}
    </a>
    <form action="{{ routes.search_url }}" method="get" class="header__search">
      <input type="search" name="q" placeholder="Searchâ€¦" aria-label="Search">
    </form>
  </div>
</header>

{% stylesheet %}
.site-header {
  max-width: 1200px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #000;
  background: #fff;
}
.header__logo { flex: 0 0 40%; }
.header__title { display: inline-flex; flex-direction: column; text-decoration: none; text-transform: uppercase; }
.header__title span { font-weight: 900; font-size: 3rem; line-height: 1; }
.header__subtitle { font-size: 1.25rem; font-weight: 700; margin-top: 0.25rem; }

.header__menu {
  flex: 0 0 40%;
  display: flex;
  gap: 2rem;
}
.header__menu-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  gap: 0.75rem;
}
.header__menu-column a {
  color: #444;
  text-decoration: none;
  font-size: 0.95rem;
  text-transform: uppercase;
  transition: color 0.2s;
}
.header__menu-column a:hover { color: #000; }

.header__icons {
  flex: 0 0 20%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 0.5rem;
}
.header__icon-btn {
  padding: 0.5rem 1rem;
  border: 1px solid #000;
  background: transparent;
  color: #000;
  text-transform: uppercase;
  font-size: 0.9rem;
  text-decoration: none;
  font-weight: 600;
  transition: background 0.2s, color 0.2s;
}
.header__icon-btn:hover { background: #000; color: #fff; }
.header__badge {
  margin-left: 0.5rem;
  padding: 0 0.4em;
  background: #000;
  color: #fff;
  font-size: 0.75rem;
  border-radius: 50%;
}

.header__search input {
  padding: 0.5rem 1rem;
  width: 100%;
  border: 1px solid #000;
  font-size: 0.9rem;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Custom Boxed Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ]
}
{% endschema %}
