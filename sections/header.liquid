<header>
  <div class="header_outer_container">
    <div class="header_inner_container1">
      {% assign words = shop.name | split: ' ' %}
      <a href="{{ routes.root_url }}" class="header__title-link">
        <span>{{ words[0] }}</span>
        <span>{{ words[1] }}</span>
      </a>
    </div>  
    <div class="header_inner_container2">
      <div class="header__menu-split">
        <div class="header__menu-empty"></div>
        <div class="header__menu-half">
          {% assign menu_links = section.settings.menu.links %}
          {% assign half = menu_links.size | divided_by: 2 %}
          {% for link in menu_links limit: half %}
            {{ link.title | link_to: link.url }}
          {% endfor %}
        </div>
        <div class="header__menu-half">
          {% assign menu_links = section.settings.menu.links %}
          {% assign half = menu_links.size | divided_by: 2 %}
          {% for link in menu_links offset: half %}
            {{ link.title | link_to: link.url }}
          {% endfor %}
        </div>
      </div>
    </div>

    <div class="header_inner_container3">
      <div class="header__icons">
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_url }}" class="header__icon-box">Account</a>
        {% endif %}

        <a href="{{ routes.cart_url }}" class="header__icon-box">
          Cart
          {% if cart.item_count > 0 %}
            <sup>{{ cart.item_count }}</sup>
          {% endif %}
        </a>
      </div>
    </div>
  </div>  
</header>

{% stylesheet %}
  header {
    min-height: 7rem;
    min-width: 769px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .header_outer_container {
    padding-top: 5 rem;
    padding-bottom: 5 rem;
    display: flex;
    width: 100%;
    height: 80%;
    align-items: center;
    justify-content: space-between;
  }
  .header_inner_container1 {
    padding: 0;
    flex-basis: 40%;
    max-width: 40%;
    flex-shrink: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }
  .header_inner_container2 {
    gap-top: 10px;
    padding-right: 2 rem;
    flex-basis: 30%;
    max-width: 30%;
    flex-shrink: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .header_inner_container3 {
    flex-basis: 30%;
    max-width: 30%;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  header svg {
    width: 2rem;
  }
  header .header__menu{
    display: flex;
    gap: 3rem;
  }
  
  
  header .header__icons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: flex-end;
  }
  .header__icon-box {
    background: #000;
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    text-decoration: none;
    font-weight: 600;
    align-items: center;
    position: relative;
  }
  .header__icon-box sup {
    background: #fff;
    color: #000;
    border-radius: 50%;
    padding: 0 0.4em;
    font-size: 0.8em;
    margin-left: 0.5em;
    position: relative;
    top: -0.5em;
  }
  header .header__menu-split {
    display: flex;
    width: 100%;
    gap: 0;
  }
  header .header__menu-empty {
    flex: 1;
  }
  header .header__menu-half {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    justify-content: flex-start;
    align-items: flex-start;
  }
  .header__menu-half a {
    font-size: 2vw;
    font-weight: 200;
    color: var(--color-foreground);
    text-decoration: none;
  }
  .header_inner_container1,
  .header_inner_container2,
  .header_inner_container3 {
    margin-top: 1rem;
    margin-bottom: 1rem;
    margin_right: 1rem;
  }
  .header__title-link {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    font-size: 5vw;
    font-weight: bold;
    line-height: 1.1;
    text-align: left;
  }
  .header__title-link span {
    display: block;
    width: 100%;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
