<header>
  <div class="outer header-wrapper">
    <!-- 1st inner (40%): two‑word title, stacked & centered as one unit -->
    <div class="inner inner--first">
      {% assign words = shop.name | split: ' ' %}
      <a href="{{ routes.root_url }}" class="header__title-link">
        <span>{{ words[0] }}</span>
        <span>{{ words[1] }}</span>
      </a>
    </div>

    <!-- 2nd inner (40%): two equal halves of your main menu, each half centered -->
    <div class="inner inner--second">
      {% assign menu_links = section.settings.menu.links %}
      {% assign half = menu_links.size | divided_by: 2 %}
      <div class="menu-half">
        {% for link in menu_links limit: half %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      </div>
      <div class="menu-half">
        {% for link in menu_links offset: half %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      </div>
    </div>

    <!-- 3rd inner (20%): your three “icon” links, stacked & centered -->
    <div class="inner inner--third">
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="header__icon">Account</a>
      {% endif %}
      <a href="{{ routes.cart_url }}" class="header__icon">
        Cart
        {% if cart.item_count > 0 %}
          <sup>{{ cart.item_count }}</sup>
        {% endif %}
      </a>
      <form action="{{ routes.search_url }}" method="get" class="header__icon header__search-box">
        <input type="search" name="q" placeholder="Search…" aria-label="Search" />
      </form>

      <!-- mobile hamburger toggle -->
      <button id="mobile-nav-toggle" class="mobile-nav-toggle hide-on-desktop" aria-label="Open menu">
        ☰
      </button>
    </div>

    <!-- mobile slider panel (off‑canvas) -->
    <div class="mobile-nav hide-on-desktop">
      <div class="mobile-nav__content">
        <!-- duplicate of inner--second menu -->
        {% assign menu_links = section.settings.menu.links %}
        {% assign half = menu_links.size | divided_by: 2 %}
        <div class="menu-half">
          {% for link in menu_links limit: half %}
            <a href="{{ link.url }}">{{ link.title }}</a>
          {% endfor %}
        </div>
        <div class="menu-half">
          {% for link in menu_links offset: half %}
            <a href="{{ link.url }}">{{ link.title }}</a>
          {% endfor %}
        </div>

        <!-- duplicate of inner--third icons -->
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_url }}" class="header__icon">Account</a>
        {% endif %}
        <a href="{{ routes.cart_url }}" class="header__icon">
          Cart
          {% if cart.item_count > 0 %}
            <sup>{{ cart.item_count }}</sup>
          {% endif %}
        </a>
        <form action="{{ routes.search_url }}" method="get" class="header__icon header__search-box">
          <input type="search" name="q" placeholder="Search…" aria-label="Search" />
        </form>
      </div>
    </div>
  </div>
</header>

{% stylesheet %}
  /* ----------------------------------------
     Desktop / all‑device styles (unchanged)
     ---------------------------------------- */
  .header-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 7rem;
    width: 100%;
    padding: 0 1rem;
  }
  .inner {
    display: flex;
    justify-content: left;
    align-items: left;
  }
  .inner--first  { flex: 0 0 40%; }
  .inner--second { flex: 0 0 40%; }
  .inner--third  { flex: 0 0 20%; flex-direction: column; }

  .header__title-link { /* … */ }
  .inner--second { /* … */ }
  .menu-half { /* … */ }
  .header__icon { /* … */ }
  .header__search-box input[type="search"] { /* … */ }

  /* ----------------------------------------
     Helpers
     ---------------------------------------- */
  .hide-on-desktop { display: none; }

  /* ----------------------------------------
     Mobile‑only (≤768px)
     ---------------------------------------- */
  @media screen and (max-width: 768px) {
    /* show mobile helpers */
    .hide-on-desktop { display: block !important; }

    /* strip out original menu + icons */
    .inner--second > * { display: none !important; }
    .inner--third > *:not(.mobile-nav-toggle) { display: none !important; }

    /* hamburger styling */
    .mobile-nav-toggle {
      font-size: 2rem;
      background: none;
      border: none;
      cursor: pointer;
      padding: 0.5rem;
      color: var(--color-foreground);
    }

    /* off‑canvas slider */
    .mobile-nav {
      position: fixed;
      top: 0;
      right: 0;
      width: 80%;
      max-width: 300px;
      height: 100vh;
      background: var(--color-background, #fff);
      box-shadow: -2px 0 5px rgba(0, 0, 0, 0.3);
      transform: translateX(100%);
      transition: transform 0.3s ease;
      z-index: 1000;
    }
    .mobile-nav.open {
      transform: translateX(0);
    }

    .mobile-nav__content {
      display: flex;
      flex-direction: column;
      padding: 1rem;
      gap: 1rem;
    }
    .mobile-nav__content .menu-half {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    .mobile-nav__content a {
      text-decoration: none;
      color: var(--color-foreground);
      font-size: 1rem;
    }
    .mobile-nav__content .header__search-box {
      padding-top: 0.5rem;
    }
  }
{% endstylesheet %}

{% javascript %}
  <script>
    document.getElementById('mobile-nav-toggle').addEventListener('click', function() {
      document.querySelector('.mobile-nav').classList.toggle('open');
    });
  </script>
{% endjavascript %}

