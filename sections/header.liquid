{% comment %}
  Section: Custom 40‑40‑20 Header
{% endcomment %}

<header class="header-wrapper">
  <!-- 1st inner (40%): two‑word title, stacked & left‑aligned -->
  <div class="inner inner--first">
    {% assign words = shop.name | split: ' ' %}
    <a href="{{ routes.root_url }}" class="header__title-link">
      <span>{{ words[0] }}</span>
      <span>{{ words[1] }}</span>
    </a>
  </div>

  <!-- 2nd inner (40%): two menu halves, each half left‑aligned -->
  <div class="inner inner--second">
    {% assign menu_links = section.settings.menu.links %}
    {% assign half = menu_links.size | divided_by: 2 %}
    <div class="menu-half">
      {% for link in menu_links limit: half %}
        <a href="{{ link.url }}" class="header__menu-link">{{ link.title }}</a>
      {% endfor %}
    </div>
    <div class="menu-half">
      {% for link in menu_links offset: half %}
        <a href="{{ link.url }}" class="header__menu-link">{{ link.title }}</a>
      {% endfor %}
    </div>
  </div>

  <!-- 3rd inner (20%): stacked icons/search, left‑aligned -->
  <div class="inner inner--third">
    {% if shop.customer_accounts_enabled %}
      <a href="{{ routes.account_url }}" class="header__icon">Account</a>
    {% endif %}
    <a href="{{ routes.cart_url }}" class="header__icon">
      Cart
      {% if cart.item_count > 0 %}
        <sup>{{ cart.item_count }}</sup>
      {% endif %}
    </a>
    <form action="{{ routes.search_url }}" method="get" class="header__icon header__search-box">
      <input type="search" name="q" placeholder="Search…" aria-label="Search" />
    </form>
  </div>
</header>

{% stylesheet %}
  /* Outer flex: 40% / 40% / 20% columns, groups left‑aligned & vertically centered */
  .header-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    min-height: 7rem;
    padding: 0 1rem;
  }

  .inner {
    display: flex;
    justify-content: flex-start; /* left‑align each group */
    align-items: center;         /* vertical centering */
  }
  .inner--first  { flex: 0 0 40%; }
  .inner--second { flex: 0 0 40%; }
  .inner--third  {
    flex: 0 0 20%;
    flex-direction: column;
  }

  /* Title (first column) */
  .header__title-link {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    text-decoration: none;
    text-align: left;
    font-size: 2.5rem;
    font-weight: bold;
    line-height: 1.1;
    color: var(--color-foreground);
  }
  .header__title-link span {
    width: 100%;
  }

  /* Menu (second column) */
  .inner--second { display: flex; }
  .menu-half {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;  /* vertical centering of links */
    align-items: flex-start;  /* left‑align links */
    gap: 0.5rem;
  }
  .header__menu-link {
    text-decoration: none;
    color: var(--color-foreground);
    font-size: 1rem;
  }

  /* Icons/Search (third column) */
  .inner--third {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 0.5rem;
  }
  .header__icon {
    display: flex;
    align-items: center;
    text-decoration: none;
    font-weight: 600;
    color: var(--color-foreground);
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
  }
  .header__icon sup {
    margin-left: 0.3em;
    font-size: 0.8em;
    background: #fff;
    color: #000;
    border-radius: 50%;
    padding: 0 0.3em;
  }
  .header__search-box input[type="search"] {
    border: none;
    background: transparent;
    text-align: left;
    font: inherit;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Custom 40‑40‑20 Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ],
  "presets": [
    {
      "name": "40‑40‑20 Header"
    }
  ]
}
{% endschema %}
