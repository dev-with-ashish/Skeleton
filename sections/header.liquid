<header>
  <div class="header_outer_contaoiner">
    <div class="header_inner_container1">
      <h2 class="header__title">
        {{ shop.name | link_to: routes.root_url }}
      </h2>
    </div>  
    <div class="header_inner_container2">
      <div class="header__menu-split">
        <div class="header__menu-empty"></div>
        <div class="header__menu-half">
          {% assign menu_links = section.settings.menu.links %}
          {% assign half = menu_links.size | divided_by: 2 %}
          {% for link in menu_links limit: half %}
            {{ link.title | link_to: link.url }}
          {% endfor %}
        </div>
        <div class="header__menu-half">
          {% assign menu_links = section.settings.menu.links %}
          {% assign half = menu_links.size | divided_by: 2 %}
          {% for link in menu_links offset: half %}
            {{ link.title | link_to: link.url }}
          {% endfor %}
        </div>
      </div>
    </div>

    <div class="header_inner_container3">
      <div class="header__icons">
        {% if shop.customer_accounts_enabled %}
          {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
        {% endif %}

        <a href="{{ routes.cart_url }}">
          {% if cart.item_count > 0 %}
            <sup>{{ cart.item_count }}</sup>
          {% endif %}

            {{ 'icon-cart.svg' | inline_asset_content }}
        </a>
      </div>
    </div>
  </div>  
</header>

{% stylesheet %}
  header {
    height: 7rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .header_outer_contaoiner {
    padding-top: 2rem;
    padding-bottom: 2rem;
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: space-between;
  }
  .header_inner_container1 {
    flex-basis: 40%;
    max-width: 40%;
    flex-shrink: 0;
    display: flex;
    align-items: center;
  }
  .header_inner_container2 {
    flex-basis: 30%;
    max-width: 30%;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .header_inner_container3 {
    flex-basis: 30%;
    max-width: 30%;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  header svg {
    width: 2rem;
  }
  header .header__menu{
    display: flex;
    gap: 3rem;
  }
  
  
  header .header__icons {
    display: flex;
    gap: 3rem;
  }
  header .header__menu-split {
    display: flex;
    width: 100%;
    gap: 0;
  }
  header .header__menu-empty {
    flex: 1;
  }
  header .header__menu-half {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: flex-start;
    align-items: flex-start;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
