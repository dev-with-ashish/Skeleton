<header>
  <div class="header_outer_container">
    <div class="header_inner_container1">
      {% assign words = shop.name | split: ' ' %}
      <a href="{{ routes.root_url }}" class="header__title-link">
        <span>{{ words[0] }}</span>
        <span>{{ words[1] }}</span>
      </a>
    </div>

    <div class="header_inner_container2">
      <div class="header__menu-split">
        <div class="header__menu-empty"></div>
        <div class="header__menu-half">
          {% assign menu_links = section.settings.menu.links %}
          {% assign half = menu_links.size | divided_by: 2 %}
          {% for link in menu_links limit: half %}
            {{ link.title | link_to: link.url }}
          {% endfor %}
        </div>
        <div class="header__menu-half">
          {% assign menu_links = section.settings.menu.links %}
          {% assign half = menu_links.size | divided_by: 2 %}
          {% for link in menu_links offset: half %}
            {{ link.title | link_to: link.url }}
          {% endfor %}
        </div>
      </div>
    </div>

    <div class="header_inner_container3">
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="header__icon-box">
          Account
        </a>
      {% endif %}
      <a href="{{ routes.cart_url }}" class="header__icon-box">
        Cart
        {% if cart.item_count > 0 %}
          <sup>{{ cart.item_count }}</sup>
        {% endif %}
      </a>
      <form action="{{ routes.search_url }}" method="get" class="header__icon-box header__search-box">
        <input type="search" name="q" placeholder="Search…" aria-label="Search" />
      </form>
    </div>
  </div>
</header>

{% stylesheet %}
  /* 1. Fixed header height */
  header {
    height: 7rem;
    min-width: 769px;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    margin: 2rem;
  }

  /* 2. Stretch all three inner containers to full header height */
  .header_outer_container {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: stretch;
  }

  /* 3. Make each inner container fill 100% of that height */
  .header_inner_container1,
  .header_inner_container2,
  .header_inner_container3 {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  /* 4. First column (logo/title): make the link fill the height and center its text */
  .header_inner_container1 {
    flex: 0 0 40%;
    justify-content: flex-start;
    align-items: flex-start;
  }
  .header__title-link {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: var(--color-foreground);
    text-decoration: none;
    font-size: 5vw;
    font-weight: bold;
    line-height: 1.1;
  }
  .header__title-link span {
    display: block;
    width: 100%;
  }

  /* 5. Second column (menu): fill height and keep your split layout */
  .header_inner_container2 {
    flex: 0 0 30%;
  }
  .header__menu-split {
    width: 100%;
    height: 100%;
    display: flex;
  }
  .header__menu-empty {
    flex: 1;
  }
  .header__menu-half {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    height: 100%;
  }
  .header__menu-half a {
    font-size: 2vw;
    color: var(--color-foreground);
    text-decoration: none;
    width: 100%;
  }

  /* 6. Third column (icons/search): spread icons top‑to‑bottom and let each box fill equally */
  .header_inner_container3 {
    flex: 0 0 30%;
    justify-content: space-between;
    align-items: flex-end;
    padding-bottom: 1rem;
  }
  .header__icon-box {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    text-decoration: none;
    font-weight: 600;
    border: 1px solid #000;
  }
  .header__icon-box sup {
    background: #fff;
    color: #000;
    border-radius: 50%;
    padding: 0 0.4em;
    font-size: 0.8em;
    margin-left: 0.5em;
  }
  .header__search-box {
    width: auto;
  }
  .header__search-box input[type="search"] {
    width: 100%;
    border: none;
    background: transparent;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
