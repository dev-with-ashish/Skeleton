<header class="site-header navbar navbar-expand-xl py-3 bg-white shadow-sm">
  <div class="container-fluid">
    <div class="row w-100 gx-3 align-items-start">

      <!-- 1st column: ~41% on desktop; stacks full‑width on mobile -->
      <div class="col-12 col-md-5 d-flex flex-column justify-content-center align-items-start">
        {% assign words = shop.name | split: ' ' %}
        <a href="{{ routes.root_url }}" class="text-decoration-none text-uppercase">
          <span class="h1 mb-0">{{ words[0] }}</span>
          <span class="h1 mb-0">{{ words[1] }}</span>
        </a>
      </div>

      <!-- 2nd column: ~33%; splits into two equal halves -->
      {% comment %}
        Grab the handle you chose in theme editor…
      {% endcomment %}
      {% assign menu_handle = section.settings.menu %}
      {% comment %}
        …then pull its links array from Shopify’s linklists object
      {% endcomment %}
      {% assign menu_links = linklists[menu_handle].links %}
      {% assign total      = menu_links.size %}
      {% assign first_half = total | divided_by: 2 | ceil %}
      <div class="col-12 col-md-4 d-flex h-100">
        <div class="flex-grow-1"></div>
        <div class="d-flex flex-column justify-content-between">
          {% for link in menu_links limit: first_half %}
            <a href="{{ link.url }}" class="nav-link p-0 m-0">{{ link.title }}</a>
          {% endfor %}
        </div>
        <div class="d-flex flex-column justify-content-between">
          {% for link in menu_links offset: first_half %}
            <a href="{{ link.url }}" class="nav-link p-0 m-0">{{ link.title }}</a>
          {% endfor %}
        </div>
      </div>

      <!-- 3rd column: ~25%; stacks icons full height -->
      <div class="col-12 col-md-3 d-flex flex-column justify-content-between align-items-end">
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_url }}" class="btn btn-outline-dark d-inline-flex align-items-center">
            Account
          </a>
        {% endif %}
        <a href="{{ routes.cart_url }}" class="btn btn-outline-dark d-inline-flex align-items-center">
          Cart
          {% if cart.item_count > 0 %}
            <sup class="badge bg-light text-dark ms-2">{{ cart.item_count }}</sup>
          {% endif %}
        </a>
        <form action="{{ routes.search_url }}" method="get" class="d-inline-flex align-items-center">
          <input
            type="search"
            name="q"
            placeholder="Search…"
            aria-label="Search"
            class="form-control form-control-sm border-0"
          />
        </form>
      </div>

    </div>
  </div>
</header>

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
