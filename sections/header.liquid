<header>
  <div class="header_outer_container">
    <!-- 1. Title column -->
    <div class="header_inner_container1">
      {% assign words = shop.name | split: ' ' %}
      <a href="{{ routes.root_url }}" class="header__title-link">
        <span>{{ words[0] }}</span>
        <span>{{ words[1] }}</span>
      </a>
    </div>

    <!-- 2. Menu column -->
    <div class="header_inner_container2">
      <div class="header__menu-split">
        <div class="header__menu-empty"></div>
        <div class="header__menu-half">
          {% assign menu_links = section.settings.menu.links %}
          {% assign half = menu_links.size | divided_by: 2 %}
          {% for link in menu_links limit: half %}
            <a href="{{ link.url }}">{{ link.title }}</a>
          {% endfor %}
        </div>
        <div class="header__menu-half">
          {% assign menu_links = section.settings.menu.links %}
          {% assign half = menu_links.size | divided_by: 2 %}
          {% for link in menu_links offset: half %}
            <a href="{{ link.url }}">{{ link.title }}</a>
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- 3. Icons/Search column -->
    <div class="header_inner_container3">
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="header__icon-box">Account</a>
      {% endif %}
      <a href="{{ routes.cart_url }}" class="header__icon-box">
        Cart
        {% if cart.item_count > 0 %}
          <sup>{{ cart.item_count }}</sup>
        {% endif %}
      </a>
      <form action="{{ routes.search_url }}" method="get" class="header__icon-box header__search-box">
        <input type="search" name="q" placeholder="Searchâ€¦" aria-label="Search" />
      </form>
    </div>
  </div>
</header>

{% stylesheet %}
  /* Fixed header height */
  header {
    height: 7rem;
    min-width: 769px;
    margin: 2rem;
  }

  .header_outer_container {
    width: 100%;
    height: 100%;            /* inherit the 7rem */
    display: flex;
    justify-content: space-between;
    align-items: stretch;
  }

  /* Make all three inner containers exactly 7rem tall */
  .header_inner_container1,
  .header_inner_container2,
  .header_inner_container3 {
    height: 100%;
    display: flex;
  }

  /* Column widths */
  .header_inner_container1 { flex: 0 0 40%; }
  .header_inner_container2 { flex: 0 0 30%; }
  .header_inner_container3 {
    flex: 0 0 30%;
    flex-direction: column;
    justify-content: space-between;  /* first item top, last item bottom */
    align-items: flex-end;
  }

  /* 1. Title: spans hug top & bottom, fill height */
  .header__title-link {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1;
    font-weight: bold;
    color: var(--color-foreground);
    text-decoration: none;
  }
  .header__title-link span {
    display: block;
    width: 100%;
  }

  /* 2. Menu: split box fills full height */
  .header__menu-split {
    width: 100%;
    height: 100%;
    display: flex;
  }
  .header__menu-empty { flex: 1; }
  .header__menu-half {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;  /* first link top, last link bottom */
    align-items: flex-start;
  }
  .header__menu-half a {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    line-height: 1;
    color: var(--color-foreground);
    text-decoration: none;
    padding: 0;
  }

  /* 3. Action boxes: fill group container height */
  .header__icon-box {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    border: 1px solid #000;
    border-radius: 0.25rem;
    font-weight: 600;
    text-decoration: none;
  }
  .header__icon-box sup {
    margin-left: 0.5em;
    padding: 0 0.4em;
    font-size: 0.8em;
    background: #fff;
    color: #000;
    border-radius: 50%;
  }

  .header__search-box input[type="search"] {
    width: 100%;
    border: none;
    background: transparent;
    font-size: inherit;
    line-height: 1;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
