<!-- === hero-banner.liquid === -->
<section class="hero-banner full-width">
  <!-- Main Hero Content -->
  <div class="hero-content">
    <!-- Left: Hero Image -->
    <div class="hero-image-section">
      <img
        src="{{ 'hero_image.png' | asset_url }}"
        alt="Black wicker outdoor dining set with table and chairs"
        width="600"
        height="800"
        loading="eager"
        class="hero-image"
        style="gradient: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5));"
      >
    </div>

    <!-- Right: Pattern & Wordmark -->
    <div class="hero-text-section">
      <div class="pattern-background" style="background-image: url('{{ 'BackgrndPattern.png' | asset_url }}');"></div>
      <div class="hero-text-content">
        <img
          src="{{ 'WORDMARKAsset 19@3x.png' | asset_url | image_url: '350x200' }}"
          alt="Andra's Garden Heaven wordmark, designed by SCM Design Studio."
          width="350"
          height="200"
          class="wordmark"
        >
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": []
}
{% endschema %}
